<div class='flex flex-col gap-4 lg:gap-6'>
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1
        class='font-heading text-2xl font-semibold dark:text-white'
      >Collaboration Settings</h1>
      <p class='text-base text-muted-foreground'>Customize your collaboration
        experience and preferences.</p>
    </div>
  </div>

  <!-- Settings Sections -->
  <div class='space-y-6'>
    <!-- Notifications -->
    <div class='bg-card p-6 rounded-lg shadow-sm border border-border'>
      <h3 class='font-semibold text-foreground mb-4'>Notifications</h3>
      <div class='space-y-4'>
        <div class='flex items-center justify-between'>
          <div>
            <label class='font-medium text-foreground'>Email Notifications</label>
            <p class='text-sm text-muted-foreground'>Receive email updates for
              important activities</p>
          </div>
          <label class='relative inline-flex items-center cursor-pointer'>
            <input type='checkbox' class='sr-only peer' checked />
            <div
              class='w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[""] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600'
            ></div>
          </label>
        </div>

        <div class='flex items-center justify-between'>
          <div>
            <label class='font-medium text-foreground'>Push Notifications</label>
            <p class='text-sm text-muted-foreground'>Get instant notifications
              in your browser</p>
          </div>
          <label class='relative inline-flex items-center cursor-pointer'>
            <input type='checkbox' class='sr-only peer' checked />
            <div
              class='w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[""] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600'
            ></div>
          </label>
        </div>

        <div class='flex items-center justify-between'>
          <div>
            <label class='font-medium text-foreground'>Task Reminders</label>
            <p class='text-sm text-muted-foreground'>Remind me about upcoming
              deadlines</p>
          </div>
          <label class='relative inline-flex items-center cursor-pointer'>
            <input type='checkbox' class='sr-only peer' />
            <div
              class='w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[""] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600'
            ></div>
          </label>
        </div>
      </div>
    </div>

    <!-- Privacy -->
    <div class='bg-card p-6 rounded-lg shadow-sm border border-border'>
      <h3 class='font-semibold text-foreground mb-4'>Privacy</h3>
      <div class='space-y-4'>
        <div class='flex items-center justify-between'>
          <div>
            <label class='font-medium text-foreground'>Profile Visibility</label>
            <p class='text-sm text-muted-foreground'>Make your profile visible
              to team members</p>
          </div>
          <label class='relative inline-flex items-center cursor-pointer'>
            <input type='checkbox' class='sr-only peer' checked />
            <div
              class='w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[""] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600'
            ></div>
          </label>
        </div>

        <div class='flex items-center justify-between'>
          <div>
            <label class='font-medium text-foreground'>Activity Status</label>
            <p class='text-sm text-muted-foreground'>Show when you're online and
              active</p>
          </div>
          <label class='relative inline-flex items-center cursor-pointer'>
            <input type='checkbox' class='sr-only peer' checked />
            <div
              class='w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[""] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600'
            ></div>
          </label>
        </div>
      </div>
    </div>

    <!-- File Sharing -->
    <div class='bg-card p-6 rounded-lg shadow-sm border border-border'>
      <h3 class='font-semibold text-foreground mb-4'>File Sharing</h3>
      <div class='space-y-4'>
        <div>
          <label class='font-medium text-foreground'>Default File Permissions</label>
          <p class='text-sm text-muted-foreground mb-2'>Set default sharing
            permissions for uploaded files</p>
          <select
            class='w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-primary'
          >
            <option>Team Only</option>
            <option>Organization</option>
            <option>Public Link</option>
          </select>
        </div>

        <div>
          <label class='font-medium text-foreground'>File Size Limit</label>
          <p class='text-sm text-muted-foreground mb-2'>Maximum file size for
            uploads</p>
          <select
            class='w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-primary'
          >
            <option>10 MB</option>
            <option>50 MB</option>
            <option>100 MB</option>
            <option>500 MB</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Calendar -->
    <div class='bg-card p-6 rounded-lg shadow-sm border border-border'>
      <h3 class='font-semibold text-foreground mb-4'>Calendar</h3>
      <div class='space-y-4'>
        <div class='flex items-center justify-between'>
          <div>
            <label class='font-medium text-foreground'>Auto-add to Calendar</label>
            <p class='text-sm text-muted-foreground'>Automatically add events to
              your personal calendar</p>
          </div>
          <label class='relative inline-flex items-center cursor-pointer'>
            <input type='checkbox' class='sr-only peer' />
            <div
              class='w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[""] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600'
            ></div>
          </label>
        </div>

        <div>
          <label class='font-medium text-foreground'>Default Meeting Duration</label>
          <p class='text-sm text-muted-foreground mb-2'>Default length for new
            meetings</p>
          <select
            class='w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-primary'
          >
            <option>15 minutes</option>
            <option>30 minutes</option>
            <option>1 hour</option>
            <option>2 hours</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Save Button -->
    <div class='flex justify-end'>
      <button
        class='flex items-center gap-2 px-6 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90'
      >
        {{lucide 'Save' 'w-4 h-4'}}
        Save Changes
      </button>
    </div>
  </div>
</div>