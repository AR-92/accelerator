<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Help Content Management</h1>
    <a href="/admin/content" class="text-blue-600 hover:text-blue-800">‚Üê Back to Content</a>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex flex-wrap gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
        <select id="categoryFilter" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="">All Categories</option>
          {{#each categories}}
          <option value="{{id}}" {{#if (eq this.id ../filters.category)}}selected{{/if}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
        <input type="text" id="searchInput" value="{{filters.search}}" placeholder="Search by title or content"
               class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="flex items-end">
        <button id="applyFilters" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors">
          Apply Filters
        </button>
      </div>
    </div>
  </div>

  <!-- Articles Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-medium text-gray-900">Help Articles ({{pagination.total}})</h2>
      <button class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
        + New Article
      </button>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {{#each articles}}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">{{title}}</div>
              <div class="text-sm text-gray-500">{{slug}}</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="text-sm">{{category.name}}</span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{#if published}}
              <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Published</span>
              {{else}}
              <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">Draft</span>
              {{/if}}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              {{formatDate createdAt}}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <button onclick="editArticle({{id}})" class="text-blue-600 hover:text-blue-900">Edit</button>
                <button onclick="togglePublish({{id}}, {{published}})" class="text-green-600 hover:text-green-900">
                  {{#if published}}Unpublish{{else}}Publish{{/if}}
                </button>
                <button onclick="deleteArticle({{id}}, '{{title}}')" class="text-red-600 hover:text-red-900">Delete</button>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.pages 1)}}
    <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
      <div class="text-sm text-gray-700">
        Showing {{pagination.limit}} of {{pagination.total}} articles
      </div>
      <div class="flex space-x-2">
        {{#if (gt pagination.page 1)}}
        <a href="?page={{subtract pagination.page 1}}&category={{filters.category}}&search={{filters.search}}"
           class="px-3 py-1 border border-gray-300 rounded-md text-sm hover:bg-gray-50">Previous</a>
        {{/if}}

        {{#each (range 1 pagination.pages)}}
        <a href="?page={{this}}&category={{filters.category}}&search={{filters.search}}"
           class="px-3 py-1 border {{#if (eq this ../pagination.page)}}border-blue-500 bg-blue-50 text-blue-600{{else}}border-gray-300 hover:bg-gray-50{{/if}} rounded-md text-sm">
          {{this}}
        </a>
        {{/each}}

        {{#if (lt pagination.page pagination.pages)}}
        <a href="?page={{add pagination.page 1}}&category={{filters.category}}&search={{filters.search}}"
           class="px-3 py-1 border border-gray-300 rounded-md text-sm hover:bg-gray-50">Next</a>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>
</div>

