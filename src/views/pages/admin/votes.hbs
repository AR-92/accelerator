<div class='flex flex-col gap-4 lg:gap-6'>
  <!-- Header -->
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1 class='font-heading text-2xl font-semibold text-foreground dark:text-white'>Votes Management</h1>
      <p class='text-base text-muted-foreground'>Total votes: {{pagination.total}}</p>
    </div>
  </div>

  <!-- Votes Table -->
  <div class='rounded-md bg-card text-card-foreground shadow-sm overflow-visible' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='px-6 py-4 border-b border-border'>
      <h2 class='text-lg font-medium text-foreground'>Votes ({{pagination.total}})</h2>
    </div>

    <div class='overflow-x-auto'>
      <table class='min-w-full divide-y divide-border table-fixed sm:table-auto'>
        <thead class='bg-muted/50'>
          <tr>
            <th class='w-16 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              ID
            </th>
            <th class='w-24 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Idea Slug
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              User ID
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Market Viability
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Real World Problem
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Innovation
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Technical Feasibility
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Scalability
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Market Survival
            </th>
            <th class='w-32 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              Created At
            </th>
          </tr>
        </thead>
        <tbody class='bg-card divide-y divide-border'>
          {{#each votes}}
          <tr class='hover:bg-muted/50 transition-colors'>
            <td class='px-4 py-4 whitespace-nowrap text-sm font-medium text-foreground'>
              {{id}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{ideaSlug}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{userId}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{marketViability}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{realWorldProblem}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{innovation}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{technicalFeasibility}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{scalability}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{marketSurvival}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm text-muted-foreground'>
              {{formatDate createdAt}}
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="10" class='px-4 py-8 text-center text-sm text-muted-foreground'>
              No votes found
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.pages 1)}}
    <div class='px-6 py-4 border-t border-border flex items-center justify-between'>
      <div class='text-sm text-muted-foreground'>
        Showing {{pagination.limit}} of {{pagination.total}} votes
      </div>
      <div class='flex items-center gap-2'>
        {{#if (gt pagination.page 1)}}
        <a href="?page={{subtract pagination.page 1}}&limit={{pagination.limit}}"
           class='px-3 py-1 text-sm border border-border rounded hover:bg-muted transition-colors'>
          Previous
        </a>
        {{/if}}

        <span class='px-3 py-1 text-sm text-muted-foreground'>
          Page {{pagination.page}} of {{pagination.pages}}
        </span>

        {{#if (lt pagination.page pagination.pages)}}
        <a href="?page={{add pagination.page 1}}&limit={{pagination.limit}}"
           class='px-3 py-1 text-sm border border-border rounded hover:bg-muted transition-colors'>
          Next
        </a>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>
</div>