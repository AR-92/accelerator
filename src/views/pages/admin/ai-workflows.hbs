<div class='flex flex-col gap-4 lg:gap-6'>
   <!-- Header -->
   <div class='flex items-center justify-between'>
     <div class='grid gap-1'>
       <h1 class='font-heading text-2xl font-semibold text-foreground dark:text-white'>AI Workflows Management</h1>
       <p class='text-base text-muted-foreground'>Total workflows: {{pagination.total}}</p>
     </div>
     <div class='flex gap-2'>
        <button onclick="exportToCSV()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2'>
          {{lucide 'Download' 'w-4 h-4 mr-2'}}
          Export CSV
        </button>
        <button onclick="createAIWorkflow()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
          {{lucide 'Plus' 'w-4 h-4 mr-2'}}
          Create Workflow
        </button>
     </div>
   </div>

  <!-- Stats Cards -->
  <div class='grid gap-4 md:grid-cols-2 lg:grid-cols-4'>
    <div class='rounded-lg border bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex flex-row items-center justify-between space-y-0 pb-2'>
        <h3 class='tracking-tight text-sm font-medium'>Total Workflows</h3>
        {{lucide 'Workflow' 'h-4 w-4 text-muted-foreground'}}
      </div>
      <div class='text-2xl font-bold'>{{stats.totalWorkflows}}</div>
    </div>
    <div class='rounded-lg border bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex flex-row items-center justify-between space-y-0 pb-2'>
        <h3 class='tracking-tight text-sm font-medium'>Active Workflows</h3>
        {{lucide 'CheckCircle' 'h-4 w-4 text-green-500'}}
      </div>
      <div class='text-2xl font-bold'>{{stats.activeWorkflows}}</div>
    </div>
    <div class='rounded-lg border bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex flex-row items-center justify-between space-y-0 pb-2'>
        <h3 class='tracking-tight text-sm font-medium'>Total Executions</h3>
        {{lucide 'Play' 'h-4 w-4 text-muted-foreground'}}
      </div>
      <div class='text-2xl font-bold'>{{stats.totalExecutions}}</div>
    </div>
    <div class='rounded-lg border bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex flex-row items-center justify-between space-y-0 pb-2'>
        <h3 class='tracking-tight text-sm font-medium'>Success Rate</h3>
        {{lucide 'TrendingUp' 'h-4 w-4 text-muted-foreground'}}
      </div>
      <div class='text-2xl font-bold'>{{stats.successRate}}%</div>
    </div>
  </div>

  <!-- Filters -->
  <div class='rounded-md bg-card text-card-foreground shadow-sm p-6' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='flex flex-wrap gap-4'>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Model</label>
        <select id="modelFilter" class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
          <option value="">All Models</option>
          <option value="1">Business Model</option>
          <option value="2">Financial Model</option>
          <option value="3">Legal Model</option>
          <option value="4">Marketing Model</option>
          <option value="5">Team Model</option>
          <option value="6">Idea Model</option>
          <option value="7">Funding Model</option>
        </select>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Search</label>
        <input type="text" id="searchInput" placeholder="Search by name"
               class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
      </div>
      <div class="flex items-end">
        <button id="applyFilters" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
          Apply Filters
        </button>
      </div>
    </div>
  </div>

   <!-- AI Workflows Table -->
    <div class='rounded-md bg-card text-card-foreground shadow-sm overflow-visible' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
     <div class='px-6 py-4 border-b border-border'>
       <h2 class='text-lg font-medium text-foreground'>AI Workflows ({{pagination.total}})</h2>
     </div>
     <div class='overflow-x-auto'>
       <table class='w-full'>
         <thead>
           <tr class='border-b border-border'>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Workflow</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Model</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Type</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Steps</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Executions</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Success Rate</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Created</th>
             <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Actions</th>
           </tr>
         </thead>
         <tbody>
           {{#each aiWorkflows}}
           <tr class='border-b border-border hover:bg-muted/50'>
             <td class='p-4 align-middle'>
               <div class='flex items-center gap-3'>
                 {{lucide 'Workflow' 'h-5 w-5 text-purple-500'}}
                 <div>
                   <div class='font-medium text-foreground'>{{name}}</div>
                   <div class='text-sm text-muted-foreground'>{{description}}</div>
                 </div>
               </div>
             </td>
             <td class='p-4 align-middle'>
               <span class='text-sm text-muted-foreground'>{{model_name}}</span>
             </td>
             <td class='p-4 align-middle'>
               <span class='inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                 {{#if (eq workflow_type 'business_plan')}}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300
                 {{else if (eq workflow_type 'pitch_deck')}}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300
                 {{else}}bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300{{/if}}'>
                 {{capitalize workflow_type}}
               </span>
             </td>
             <td class='p-4 align-middle'>
               <span class='text-sm font-medium'>{{step_count}}</span>
             </td>
             <td class='p-4 align-middle'>
               <span class='text-sm font-medium'>{{execution_count}}</span>
             </td>
             <td class='p-4 align-middle'>
               <span class='text-sm font-medium {{#if (gt success_rate 80)}}text-green-600{{else if (gt success_rate 50)}}text-yellow-600{{else}}text-red-600{{/if}}'>
                 {{success_rate}}%
               </span>
             </td>
             <td class='p-4 align-middle'>
               <span class='text-sm text-muted-foreground'>{{formatDate created_at}}</span>
             </td>
             <td class='p-4 align-middle'>
               <div class='flex items-center gap-2'>
                 <a href='/admin/ai/workflows/{{id}}' class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8'>
                   {{lucide 'Eye' 'h-4 w-4'}}
                 </a>
                 <button onclick="editAIWorkflow({{id}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8'>
                   {{lucide 'Edit' 'h-4 w-4'}}
                 </button>
                 <button onclick="deleteAIWorkflow({{id}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 text-destructive hover:bg-destructive hover:text-destructive-foreground'>
                   {{lucide 'Trash2' 'h-4 w-4'}}
                 </button>
               </div>
             </td>
           </tr>
           {{/each}}
         </tbody>
       </table>
     </div>

     <!-- Pagination -->
     {{#if pagination.pages}}
     <div class='flex items-center justify-between px-6 py-4 border-t border-border'>
       <div class='text-sm text-muted-foreground'>
         Showing {{pagination.page}} of {{pagination.pages}} pages
       </div>
       <div class='flex items-center gap-2'>
         {{#if pagination.hasPrev}}
         <a href='?page={{subtract pagination.page 1}}&limit={{pagination.limit}}&search={{filters.search}}&modelId={{filters.modelId}}' class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-3'>
           Previous
         </a>
         {{/if}}

         {{#each (range 1 pagination.pages)}}
         <a href='?page={{this}}&limit={{pagination.limit}}&search={{filters.search}}&modelId={{filters.modelId}}' class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 {{#if (eq this ../pagination.page)}}bg-primary text-primary-foreground{{else}}border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground{{/if}} h-9 w-9'>
           {{this}}
         </a>
         {{/each}}

         {{#if pagination.hasNext}}
         <a href='?page={{add pagination.page 1}}&limit={{pagination.limit}}&search={{filters.search}}&modelId={{filters.modelId}}' class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-3'>
           Next
         </a>
         {{/if}}
       </div>
     </div>
     {{/if}}
   </div>
</div>

<script>
// Filter functionality
document.getElementById('applyFilters').addEventListener('click', function() {
  const modelId = document.getElementById('modelFilter').value;
  const search = document.getElementById('searchInput').value;

  const params = new URLSearchParams(window.location.search);
  if (modelId) params.set('modelId', modelId); else params.delete('modelId');
  if (search) params.set('search', search); else params.delete('search');
  params.set('page', '1'); // Reset to first page

  window.location.search = params.toString();
});

// Export functionality
function exportToCSV() {
  const params = new URLSearchParams(window.location.search);
  window.location.href = '/admin/ai/workflows/export?' + params.toString();
}

