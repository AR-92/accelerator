 <script>
 // Helper functions for date formatting
 function formatDate(dateString) {
   return new Date(dateString).toLocaleDateString();
 }

 function range(start, end) {
   const result = [];
   for (let i = start; i <= end; i++) {
     result.push(i);
   }
   return result;
 }

 // Modal functions
 function editStartup(startupId) {
   // Fetch startup data and populate modal
   fetch(`/admin/api/startups/${startupId}`)
     .then(response => response.json())
     .then(data => {
       if (data.success) {
         document.getElementById('editStartupId').value = data.startup.id;
         document.getElementById('editStartupName').value = data.startup.name;
         document.getElementById('editStartupIndustry').value = data.startup.industry;
         document.getElementById('editStartupStatus').value = data.startup.status;
         document.getElementById('editStartupDescription').value = data.startup.description || '';
         document.getElementById('editStartupWebsite').value = data.startup.website || '';
         document.getElementById('editStartupFoundedDate').value = data.startup.foundedDate || '';
         document.getElementById('editStartupModal').classList.remove('hidden');
       }
     });
 }

 function closeEditStartupModal() {
   document.getElementById('editStartupModal').classList.add('hidden');
 }

 function openCreateStartupModal() {
   document.getElementById('createStartupModal').classList.remove('hidden');
 }

 function closeCreateStartupModal() {
   document.getElementById('createStartupModal').classList.add('hidden');
   document.getElementById('createStartupForm').reset();
 }

 // Bulk actions functions
 function updateBulkActions() {
   const checkboxes = document.querySelectorAll('.startupCheckbox:checked');
   const count = checkboxes.length;
   const bulkActions = document.getElementById('bulkActions');
   const selectedCount = document.getElementById('selectedCount');

   if (count > 0) {
     bulkActions.classList.remove('hidden');
     selectedCount.textContent = `${count} startup${count > 1 ? 's' : ''} selected`;
     document.getElementById('bulkDeleteBtn').disabled = false;
   } else {
     bulkActions.classList.add('hidden');
     document.getElementById('bulkDeleteBtn').disabled = true;
   }
 }

 function bulkDelete() {
   const checkboxes = document.querySelectorAll('.startupCheckbox:checked');
   const count = checkboxes.length;

   if (confirm(`Are you sure you want to delete ${count} startup${count > 1 ? 's' : ''}? This action cannot be undone.`)) {
     const startupIds = Array.from(checkboxes).map(cb => parseInt(cb.value));

     // Delete startups one by one
     Promise.all(startupIds.map(startupId =>
       fetch(`/admin/api/startups/${startupId}`, {
         method: 'DELETE',
         headers: {
           'Content-Type': 'application/json',
         },
       }).then(response => response.json())
     )).then(results => {
       const successCount = results.filter(r => r.success).length;
       alert(`Successfully deleted ${successCount} out of ${count} startups`);
       location.reload();
     });
   }
 }

 function deleteStartup(startupId, startupName) {
   if (confirm(`Are you sure you want to delete startup "${startupName}"? This action cannot be undone.`)) {
     fetch(`/admin/api/startups/${startupId}`, {
       method: 'DELETE',
       headers: {
         'Content-Type': 'application/json',
       },
     })
     .then(response => response.json())
     .then(data => {
       if (data.success) {
         location.reload();
       } else {
         alert('Error deleting startup: ' + data.error);
       }
     });
   }
 }

 // Form handlers
 document.getElementById('editStartupForm').addEventListener('submit', function(e) {
   e.preventDefault();
   const startupId = document.getElementById('editStartupId').value;
   const name = document.getElementById('editStartupName').value;
   const industry = document.getElementById('editStartupIndustry').value;
   const status = document.getElementById('editStartupStatus').value;
   const description = document.getElementById('editStartupDescription').value;
   const website = document.getElementById('editStartupWebsite').value;
   const foundedDate = document.getElementById('editStartupFoundedDate').value;

   fetch(`/admin/api/startups/${startupId}`, {
     method: 'PUT',
     headers: {
       'Content-Type': 'application/json',
     },
     body: JSON.stringify({ name, industry, status, description, website, foundedDate }),
   })
   .then(response => response.json())
   .then(data => {
     if (data.success) {
       closeEditStartupModal();
       location.reload();
     } else {
       alert('Error updating startup: ' + data.error);
     }
   });
 });

 document.getElementById('createStartupForm').addEventListener('submit', function(e) {
   e.preventDefault();

   // Clear previous errors
   clearFormErrors('createStartupForm');

   const userId = parseInt(document.getElementById('createStartupUserId').value);
   const name = document.getElementById('createStartupName').value.trim();
   const industry = document.getElementById('createStartupIndustry').value.trim();
   const status = document.getElementById('createStartupStatus').value;
   const description = document.getElementById('createStartupDescription').value.trim();
   const website = document.getElementById('createStartupWebsite').value.trim();
   const foundedDate = document.getElementById('createStartupFoundedDate').value;

   // Client-side validation
   let isValid = true;
   const errors = {};

   if (!userId || isNaN(userId)) {
     errors.userId = 'Please enter a valid user ID';
     isValid = false;
   }

   if (!name || name.length < 2) {
     errors.name = 'Name must be at least 2 characters';
     isValid = false;
   }

   if (!industry || industry.length === 0) {
     errors.industry = 'Industry is required';
     isValid = false;
   }

   if (!isValid) {
     showFormErrors('createStartupForm', errors);
     return;
   }

   fetch('/admin/api/startups', {
     method: 'POST',
     headers: {
       'Content-Type': 'application/json',
     },
     body: JSON.stringify({ userId, name, industry, status, description, website, foundedDate }),
   })
