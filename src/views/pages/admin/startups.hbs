 function updatePagination(pagination, filters) {
   const paginationContainer = document.querySelector('.flex.items-center.justify-between');
   if (!paginationContainer) return;

   let paginationHTML = `
     <div class='text-sm text-muted-foreground'>
       Showing 20 of ${pagination.total} startups
     </div>
     <div class='flex gap-2'>
   `;

   if (pagination.page > 1) {
     paginationHTML += `<a href="?page=${pagination.page - 1}&industry=${filters.industry || ''}&status=${filters.status || ''}&search=${filters.search || ''}&sortBy=${filters.sortBy}&sortOrder=${filters.sortOrder}"
         onclick="loadStartups(${pagination.page - 1}); return false;"
         class='px-3 py-1 border border-border rounded-md text-sm hover:bg-muted transition-colors'>Previous</a>`;
   }

   for (let i = 1; i <= pagination.pages; i++) {
     if (i === pagination.page) {
       paginationHTML += `<span class='px-3 py-1 border border-primary bg-primary/10 text-primary rounded-md text-sm'>${i}</span>`;
     } else {
       paginationHTML += `<a href="?page=${i}&industry=${filters.industry || ''}&status=${filters.status || ''}&search=${filters.search || ''}&sortBy=${filters.sortBy}&sortOrder=${filters.sortOrder}"
           onclick="loadStartups(${i}); return false;"
           class='px-3 py-1 border border-border hover:bg-muted rounded-md text-sm transition-colors'>${i}</a>`;
     }
   }

   if (pagination.page < pagination.pages) {
     paginationHTML += `<a href="?page=${pagination.page + 1}&industry=${filters.industry || ''}&status=${filters.status || ''}&search=${filters.search || ''}&sortBy=${filters.sortBy}&sortOrder=${filters.sortOrder}"
