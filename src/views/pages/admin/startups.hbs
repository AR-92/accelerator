 function loadStartups(page = 1) {
   const industry = document.getElementById('industryFilter').value;
   const status = document.getElementById('statusFilter').value;
   const search = document.getElementById('searchInput').value;
   const sortBy = new URLSearchParams(window.location.search).get('sortBy') || 'created_at';
   const sortOrder = new URLSearchParams(window.location.search).get('sortOrder') || 'desc';

   const params = new URLSearchParams({
     page: page.toString(),
     limit: '20',
     industry: industry,
     status: status,
     search: search,
     sortBy: sortBy,
     sortOrder: sortOrder,
     ajax: 'true'
   });

   fetch(`/admin/startups?${params}`)
     .then(response => response.json())
     .then(data => {
       if (data.success) {
         // Update the table body
         updateTableBody(data.startups);

         // Update pagination
