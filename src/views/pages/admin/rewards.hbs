
<!-- Glass card container -->
<div
  class="w-full max-w-5xl rounded-xl shadow-2xl overflow-hidden bg-white/85 backdrop-blur-sm ring-1 ring-gray-200 flex flex-col min-h-[600px]">

  <!-- Sticky header (toolbar) -->
   <header class="sticky top-0 z-20 bg-amber-800 text-white p-5">
    <!-- Page Title and Description -->
    <div class="mb-6 flex justify-between">

    <div class="text-left">
      <h1 class="text-3xl font-bold text-white mb-2">Reward Management</h1>
      <p class=" text-gray-200">Manage user rewards and achievements</p>
    </div>
        <div class="">
          <button onclick="openCreateRewardModal()" class="flex items-center gap-2 bg-white/10 hover:bg-white/20 border border-white/30 rounded-full px-4 py-2 text-sm">
          {{lucide 'Plus' 'w-4 h-4'}}
          <span class="text-sm font-medium">Create</span>
        </a>
    </div>
     </div>
     <div class="max-w-7xl mx-auto flex items-center gap-4">
      <!-- center: search and filters -->
      <div class="flex-1 flex justify-left gap-4">
        <div class="w-full max-w-xs">
          <label class="relative block">
            <span class="sr-only">Search</span>
            <span class="absolute inset-y-0 left-3 flex items-center">
              {{lucide 'Search' 'w-5 h-5 text-white/80'}}
            </span>
            <input
              class="w-full pl-12 pr-4 py-1.5 rounded-full bg-white/10 hover:bg-white/20 border border-white/30 placeholder-white/75 text-white focus:outline-none focus:ring-2 focus:ring-white/30"
              placeholder="Search rewards..." aria-label="Search" id="searchInput" />
          </label>
        </div>

        <div class="w-full max-w-xs">
          <label class="relative block">
            <span class="sr-only">Status</span>
            <span class="absolute inset-y-0 left-3 flex items-center">
              {{lucide 'Filter' 'w-5 h-5 text-white/80'}}
            </span>
            <select id="statusFilter" class="w-full pl-12 pr-4 py-1.5 rounded-full bg-white/10 hover:bg-white/20 border border-white/30 text-white focus:outline-none focus:ring-2 focus:ring-white/30 appearance-none">
              <option value="" class="text-gray-900">All Status</option>
              <option value="active" class="text-gray-900">Active</option>
              <option value="used" class="text-gray-900">Used</option>
              <option value="expired" class="text-gray-900">Expired</option>
              <option value="cancelled" class="text-gray-900">Cancelled</option>
            </select>
          </label>
        </div>

        <div class="w-full max-w-xs">
          <label class="relative block">
            <span class="sr-only">Type</span>
            <span class="absolute inset-y-0 left-3 flex items-center">
              {{lucide 'Tag' 'w-5 h-5 text-white/80'}}
            </span>
            <select id="typeFilter" class="w-full pl-12 pr-4 py-1.5 rounded-full bg-white/10 hover:bg-white/20 border border-white/30 text-white focus:outline-none focus:ring-2 focus:ring-white/30 appearance-none">
              <option value="" class="text-gray-900">All Types</option>
              <option value="achievement" class="text-gray-900">Achievement</option>
              <option value="bonus" class="text-gray-900">Bonus</option>
              <option value="referral" class="text-gray-900">Referral</option>
              <option value="milestone" class="text-gray-900">Milestone</option>
            </select>
          </label>
        </div>
      </div>

      <!-- right: small action icons -->
      <div class="flex items-center gap-3">
        <button onclick="location.reload()"
          class="p-2 rounded-full bg-white/10 border border-white/25 hover:bg-white/20" title="Refresh">
          {{lucide 'RefreshCw' 'w-5 h-5'}}
        </button>
        <button onclick="openGrantRewardModal()"
          class="flex items-center gap-2 bg-white/10 hover:bg-white/20 border border-white/30 rounded-full px-4 py-2 text-sm">
          {{lucide 'Gift' 'w-4 h-4'}}
          <span class="text-sm font-medium">Grant</span>
        </button>
      </div>
    </div>
   </header>

    <!-- Rewards Table -->
     <div class='rounded-md bg-card text-card-foreground shadow-sm overflow-visible' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
      <div class='px-6 py-4 border-b border-border'>
        <h2 class='text-lg font-medium text-foreground'>Rewards ({{pagination.total}})</h2>
      </div>
      <div class='overflow-x-auto'>
        <table class='min-w-full divide-y divide-border table-fixed sm:table-auto'>
          <thead class='bg-amber-200 dark:bg-amber-800'>
            <tr>
              <th class='w-16 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>
                ID
              </th>
              <th class='w-20 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>
                User
              </th>
              <th class='min-w-48 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>
                Title
              </th>
              <th class='w-24 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>
                Type
              </th>
              <th class='w-20 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>
                Credits
              </th>
              <th class='w-20 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>
                Status
              </th>
              <th class='w-32 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider hidden md:table-cell'>
                Earned At
              </th>
              <th class='w-32 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider hidden md:table-cell'>
                Expires At
              </th>
              <th class='w-32 px-4 py-3 text-left text-xs font-medium text-black dark:text-white uppercase tracking-wider'>Actions</th>
            </tr>
          </thead>
           <tbody class='bg-amber-50 dark:bg-amber-900 divide-y divide-border'>
           {{#each rewards}}
            <tr class='hover:bg-amber-100 dark:hover:bg-amber-800'>
             <td class='w-16 px-4 py-4 whitespace-nowrap'>
               <span class='text-sm font-medium text-foreground'>#{{id}}</span>
             </td>
             <td class='w-20 px-4 py-4 whitespace-nowrap'>
               <div class='text-sm font-medium text-foreground'>User #{{userId}}</div>
             </td>
             <td class='min-w-48 px-4 py-4 whitespace-nowrap'>
               <div class='text-sm font-medium text-foreground'>{{title}}</div>
               {{#if description}}
               <div class='text-sm text-black dark:text-white truncate max-w-xs'>{{description}}</div>
               {{/if}}
             </td>
             <td class='w-24 px-4 py-4 whitespace-nowrap'>
               <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400'>
                 {{type}}
               </span>
             </td>
             <td class='w-20 px-4 py-4 whitespace-nowrap'>
               <span class='text-sm font-medium text-foreground'>{{credits}}</span>
             </td>
             <td class='w-20 px-4 py-4 whitespace-nowrap'>
               <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                 {{#eq status "active"}}bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400
                 {{else if (eq status "used")}}bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400
                 {{else if (eq status "expired")}}bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400
                 {{else}}bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-400{{/eq}}'>
                 {{status}}
               </span>
             </td>
             <td class='w-32 px-4 py-4 whitespace-nowrap text-sm text-black dark:text-white hidden md:table-cell'>
               {{#if earnedAt}}
                 {{formatDate earnedAt}}
               {{else}}
                 -
               {{/if}}
             </td>
             <td class='w-32 px-4 py-4 whitespace-nowrap text-sm text-black dark:text-white hidden md:table-cell'>
               {{#if expiresAt}}
                 {{formatDate expiresAt}}
               {{else}}
                 Never
               {{/if}}
             </td>
             <td class='px-4 py-4 whitespace-nowrap text-sm font-medium'>
               <div class='flex items-center gap-2'>
                 <button onclick="viewReward({{id}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0'>
                   {{lucide 'Eye' 'w-4 h-4'}}
                 </button>
                 <button onclick="editReward({{id}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0'>
                   {{lucide 'Edit' 'w-4 h-4'}}
                 </button>
                 <button onclick="deleteReward({{id}}, '{{title}}')" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0 text-red-600 hover:text-red-700'>
                   {{lucide 'Trash2' 'w-4 h-4'}}
                 </button>
               </div>
             </td>
           </tr>
           {{else}}
           <tr>
             <td colspan="9" class='px-6 py-8 text-center text-gray-500'>
               <div class="text-gray-500">
                 <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                 </svg>
                 <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No rewards found</h3>
                 <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Rewards will appear here once they are created.</p>
               </div>
             </td>
           </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

      <!-- Pagination -->
      {{#if (gt pagination.pages 1)}}
      <div class='px-6 py-4 border-t border-border flex items-center justify-between'>
         <div class='text-sm text-black dark:text-white'>
           Showing {{#if rewards.length}}{{add (multiply (subtract pagination.page 1) pagination.limit) 1}}{{else}}0{{/if}}-{{add (multiply (subtract pagination.page 1) pagination.limit) rewards.length}} of {{pagination.total}} rewards
         </div>
        <div class='flex gap-2'>
          {{#if pagination.hasPrev}}
          <button onclick="loadPage({{subtract pagination.page 1}})" class='px-3 py-1 border border-border rounded-md text-sm hover:bg-muted transition-colors'>Previous</button>
          {{/if}}

          <span class='px-3 py-1 border border-primary bg-primary/10 text-primary rounded-md text-sm'>
            {{pagination.page}}
          </span>

          {{#if pagination.hasNext}}
          <button onclick="loadPage({{add pagination.page 1}})" class='px-3 py-1 border border-border rounded-md text-sm hover:bg-muted transition-colors'>Next</button>
          {{/if}}
        </div>
      </div>
      {{/if}}
    </div>
  </div>

   <!-- Create/Edit Reward Modal -->
  <div id="rewardModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="rewardModalTitle">Create Reward</h3>
            <button onclick="closeRewardModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
              {{lucide 'X' 'w-6 h-6'}}
            </button>
          </div>

          <form id="rewardForm" onsubmit="saveReward(event)">
            <input type="hidden" id="rewardId" name="id">

            <div class="space-y-4">
              <div>
                <label for="rewardUserId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">User ID *</label>
                <input type="number" id="rewardUserId" name="user_id" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="rewardTitle" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title *</label>
                <input type="text" id="rewardTitle" name="title" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="rewardDescription" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Description</label>
                <textarea id="rewardDescription" name="description" rows="2"
                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"></textarea>
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="rewardType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Type</label>
                  <select id="rewardType" name="type"
                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                    <option value="achievement">Achievement</option>
                    <option value="bonus">Bonus</option>
                    <option value="referral">Referral</option>
                    <option value="milestone">Milestone</option>
                  </select>
                </div>

                <div>
                  <label for="rewardCredits" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Credits</label>
                  <input type="number" id="rewardCredits" name="credits" min="0"
                         class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="rewardStatus" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
                  <select id="rewardStatus" name="status"
                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                    <option value="active">Active</option>
                    <option value="used">Used</option>
                    <option value="expired">Expired</option>
                    <option value="cancelled">Cancelled</option>
                  </select>
                </div>

                <div>
                  <label for="rewardExpiresAt" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Expires At</label>
                  <input type="datetime-local" id="rewardExpiresAt" name="expires_at"
                         class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                </div>
              </div>
            </div>

            <div class="flex justify-end gap-3 mt-6">
              <button type="button" onclick="closeRewardModal()"
                      class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600">
                Cancel
              </button>
              <button type="submit"
                      class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
                Save Reward
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Grant Reward Modal -->
  <div id="grantRewardModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Grant Reward</h3>
            <button onclick="closeGrantRewardModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
              {{lucide 'X' 'w-6 h-6'}}
            </button>
          </div>

          <form id="grantRewardForm" onsubmit="grantReward(event)">
            <div class="space-y-4">
              <div>
                <label for="grantUserId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">User ID *</label>
                <input type="number" id="grantUserId" name="user_id" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="grantType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Type</label>
                <select id="grantType" name="type"
                        class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                  <option value="bonus">Bonus</option>
                  <option value="achievement">Achievement</option>
                  <option value="referral">Referral</option>
                  <option value="milestone">Milestone</option>
                </select>
              </div>

              <div>
                <label for="grantTitle" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title *</label>
                <input type="text" id="grantTitle" name="title" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="grantCredits" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Credits *</label>
                <input type="number" id="grantCredits" name="credits" min="1" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>
            </div>

            <div class="flex justify-end gap-3 mt-6">
              <button type="button" onclick="closeGrantRewardModal()"
                      class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600">
                Cancel
              </button>
              <button type="submit"
                      class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700">
                Grant Reward
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentPage = {{pagination.page}};
    let currentFilters = {{{json filters}}};

    function loadPage(page) {
      currentPage = page;
      loadRewards();
    }

    function applyFilters() {
      currentFilters.status = document.getElementById('statusFilter').value;
      currentFilters.type = document.getElementById('typeFilter').value;
      currentFilters.userId = document.getElementById('userIdFilter').value;
      currentPage = 1;
      loadRewards();
    }

    function loadRewards() {
      const params = new URLSearchParams({
        page: currentPage,
        ...currentFilters
      });

      fetch(`/admin/rewards?${params}&ajax=true`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload(); // Simple reload for now
          }
        })
        .catch(error => console.error('Error loading rewards:', error));
    }

    function openCreateRewardModal() {
      document.getElementById('rewardModalTitle').textContent = 'Create Reward';
      document.getElementById('rewardForm').reset();
      document.getElementById('rewardId').value = '';
      document.getElementById('rewardModal').classList.remove('hidden');
    }

    function openGrantRewardModal() {
      document.getElementById('grantRewardForm').reset();
      document.getElementById('grantRewardModal').classList.remove('hidden');
    }

    function closeRewardModal() {
      document.getElementById('rewardModal').classList.add('hidden');
    }

    function closeGrantRewardModal() {
      document.getElementById('grantRewardModal').classList.add('hidden');
    }

    function viewReward(id) {
      window.location.href = `/admin/rewards/${id}`;
    }

    function editReward(id) {
      fetch(`/admin/api/rewards/${id}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const reward = data.reward;
            document.getElementById('rewardModalTitle').textContent = 'Edit Reward';
            document.getElementById('rewardId').value = reward.id;
            document.getElementById('rewardUserId').value = reward.userId;
            document.getElementById('rewardTitle').value = reward.title;
            document.getElementById('rewardDescription').value = reward.description || '';
            document.getElementById('rewardType').value = reward.type;
            document.getElementById('rewardCredits').value = reward.credits;
            document.getElementById('rewardStatus').value = reward.status;
            if (reward.expiresAt) {
              const date = new Date(reward.expiresAt);
              document.getElementById('rewardExpiresAt').value = date.toISOString().slice(0, 16);
            }
            document.getElementById('rewardModal').classList.remove('hidden');
          }
        })
        .catch(error => console.error('Error loading reward:', error));
    }

    function deleteReward(id, title) {
      Toast.warning(`Are you sure you want to delete the reward "${title}"?`);
      fetch(`/admin/api/rewards/${id}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          loadRewards();
        } else {
          Toast.error('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error deleting reward:', error);
        Toast.error('An error occurred');
      });
    }

    function saveReward(event) {
      event.preventDefault();

      const formData = new FormData(event.target);
      const rewardData = {
        user_id: parseInt(formData.get('user_id')),
        title: formData.get('title'),
        description: formData.get('description'),
        type: formData.get('type'),
        credits: parseInt(formData.get('credits')) || 0,
        status: formData.get('status'),
        expires_at: formData.get('expires_at') || null
      };

      const rewardId = formData.get('id');
      const url = rewardId ? `/admin/api/rewards/${rewardId}` : '/admin/api/rewards';
      const method = rewardId ? 'PUT' : 'POST';

      fetch(url, {
        method: method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(rewardData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          closeRewardModal();
          location.reload();
        } else {
          Toast.error('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error saving reward:', error);
        Toast.error('An error occurred');
      });
    }

    function grantReward(event) {
      event.preventDefault();

      const formData = new FormData(event.target);
      const rewardData = {
        userId: parseInt(formData.get('user_id')),
        type: formData.get('type'),
        title: formData.get('title'),
        credits: parseInt(formData.get('credits'))
      };

      fetch('/admin/api/rewards/grant', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(rewardData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          closeGrantRewardModal();
          location.reload();
        } else {
          Toast.error('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error granting reward:', error);
        Toast.error('An error occurred');
      });
    }

