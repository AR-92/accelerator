
<div class='flex flex-col gap-4 lg:gap-6'>
  <!-- Header -->
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1 class='font-heading text-2xl font-semibold text-foreground dark:text-white'>Reward Management</h1>
      <p class='text-base text-muted-foreground'>Total rewards: {{pagination.total}}</p>
    </div>
    <div class='flex gap-2'>
      <button onclick="openCreateRewardModal()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
        {{lucide 'Plus' 'w-4 h-4 mr-2'}}
        Create Reward
      </button>
      <button onclick="openGrantRewardModal()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2'>
        {{lucide 'Gift' 'w-4 h-4 mr-2'}}
        Grant Reward
      </button>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class='grid grid-cols-1 md:grid-cols-4 gap-6 mb-6'>
    <div class='rounded-md bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Total Rewards</p>
          <p class='text-2xl font-bold'>{{../rewards.totalRewards}}</p>
        </div>
        <div class='h-8 w-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center'>
          {{lucide 'Award' 'h-4 w-4 text-blue-600'}}
        </div>
      </div>
    </div>

    <div class='rounded-md bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Active Rewards</p>
          <p class='text-2xl font-bold'>{{../rewards.activeRewards}}</p>
        </div>
        <div class='h-8 w-8 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center'>
          {{lucide 'CheckCircle' 'h-4 w-4 text-green-600'}}
        </div>
      </div>
    </div>

    <div class='rounded-md bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Credits Granted</p>
          <p class='text-2xl font-bold'>{{../rewards.totalCreditsGranted}}</p>
        </div>
        <div class='h-8 w-8 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center'>
          {{lucide 'Coins' 'h-4 w-4 text-purple-600'}}
        </div>
      </div>
    </div>

    <div class='rounded-md bg-card text-card-foreground shadow-sm p-6'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Unique Users</p>
          <p class='text-2xl font-bold'>{{../rewards.uniqueUsersRewarded}}</p>
        </div>
        <div class='h-8 w-8 bg-orange-100 dark:bg-orange-900 rounded-full flex items-center justify-center'>
          {{lucide 'Users' 'h-4 w-4 text-orange-600'}}
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class='rounded-md bg-card text-card-foreground shadow-sm p-6' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='flex flex-wrap gap-4'>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Status</label>
        <select id="statusFilter" class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
          <option value="">All Status</option>
          <option value="active">Active</option>
          <option value="used">Used</option>
          <option value="expired">Expired</option>
          <option value="cancelled">Cancelled</option>
        </select>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Type</label>
        <select id="typeFilter" class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
          <option value="">All Types</option>
          <option value="achievement">Achievement</option>
          <option value="bonus">Bonus</option>
          <option value="referral">Referral</option>
          <option value="milestone">Milestone</option>
        </select>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>User ID</label>
        <input type="number" id="userIdFilter" placeholder="Filter by user ID"
               class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
      </div>
      <div class="flex items-end">
        <button id="applyFilters" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
          Apply Filters
        </button>
      </div>
    </div>
  </div>

  <!-- Rewards Table -->
  <div class='rounded-md bg-card text-card-foreground shadow-sm overflow-visible' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='px-6 py-4 border-b border-border'>
      <h2 class='text-lg font-medium text-foreground'>Rewards ({{pagination.total}})</h2>
    </div>

    <div class='overflow-x-auto'>
      <table class='w-full'>
        <thead>
          <tr class='border-b border-border'>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>ID</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>User</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Title</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Type</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Credits</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Status</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Earned At</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Expires At</th>
            <th class='h-12 px-4 text-left align-middle font-medium text-muted-foreground'>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each rewards}}
          <tr class='border-b border-border hover:bg-muted/50'>
            <td class='p-4 align-middle font-medium'>#{{id}}</td>
            <td class='p-4 align-middle'>
              <div class='font-medium'>User #{{userId}}</div>
            </td>
            <td class='p-4 align-middle'>
              <div class='font-medium'>{{title}}</div>
              {{#if description}}
              <div class='text-sm text-muted-foreground truncate max-w-xs'>{{description}}</div>
              {{/if}}
            </td>
            <td class='p-4 align-middle'>
              <span class='inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'>
                {{type}}
              </span>
            </td>
            <td class='p-4 align-middle font-medium'>{{credits}}</td>
            <td class='p-4 align-middle'>
              <span class='inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                {{#eq status "active"}}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300
                {{else if (eq status "used")}}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300
                {{else if (eq status "expired")}}bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300
                {{else}}bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-300{{/eq}}'>
                {{status}}
              </span>
            </td>
            <td class='p-4 align-middle text-sm text-muted-foreground'>
              {{#if earnedAt}}
                {{formatDate earnedAt}}
              {{else}}
                -
              {{/if}}
            </td>
            <td class='p-4 align-middle text-sm text-muted-foreground'>
              {{#if expiresAt}}
                {{formatDate expiresAt}}
              {{else}}
                Never
              {{/if}}
            </td>
            <td class='p-4 align-middle'>
              <div class='flex items-center gap-2'>
                <button onclick="viewReward({{id}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0'>
                  {{lucide 'Eye' 'w-4 h-4'}}
                </button>
                <button onclick="editReward({{id}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0'>
                  {{lucide 'Edit' 'w-4 h-4'}}
                </button>
                <button onclick="deleteReward({{id}}, '{{title}}')" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0 text-red-600 hover:text-red-700'>
                  {{lucide 'Trash2' 'w-4 h-4'}}
                </button>
              </div>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="9" class='p-8 text-center text-muted-foreground'>
              No rewards found.
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.pages 1)}}
    <div class='flex items-center justify-between px-6 py-4 border-t border-border'>
      <div class='text-sm text-muted-foreground'>
        Showing {{pagination.limit}} of {{pagination.total}} rewards
      </div>
      <div class='flex items-center gap-2'>
        {{#if pagination.hasPrev}}
        <button onclick="loadPage({{subtract pagination.page 1}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-3'>
          Previous
        </button>
        {{/if}}

        <span class='text-sm text-muted-foreground'>
          Page {{pagination.page}} of {{pagination.pages}}
        </span>

        {{#if pagination.hasNext}}
        <button onclick="loadPage({{add pagination.page 1}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-3'>
          Next
        </button>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>

  <!-- Create/Edit Reward Modal -->
  <div id="rewardModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="rewardModalTitle">Create Reward</h3>
            <button onclick="closeRewardModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
              {{lucide 'X' 'w-6 h-6'}}
            </button>
          </div>

          <form id="rewardForm" onsubmit="saveReward(event)">
            <input type="hidden" id="rewardId" name="id">

            <div class="space-y-4">
              <div>
                <label for="rewardUserId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">User ID *</label>
                <input type="number" id="rewardUserId" name="user_id" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="rewardTitle" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title *</label>
                <input type="text" id="rewardTitle" name="title" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="rewardDescription" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Description</label>
                <textarea id="rewardDescription" name="description" rows="2"
                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"></textarea>
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="rewardType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Type</label>
                  <select id="rewardType" name="type"
                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                    <option value="achievement">Achievement</option>
                    <option value="bonus">Bonus</option>
                    <option value="referral">Referral</option>
                    <option value="milestone">Milestone</option>
                  </select>
                </div>

                <div>
                  <label for="rewardCredits" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Credits</label>
                  <input type="number" id="rewardCredits" name="credits" min="0"
                         class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="rewardStatus" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
                  <select id="rewardStatus" name="status"
                          class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                    <option value="active">Active</option>
                    <option value="used">Used</option>
                    <option value="expired">Expired</option>
                    <option value="cancelled">Cancelled</option>
                  </select>
                </div>

                <div>
                  <label for="rewardExpiresAt" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Expires At</label>
                  <input type="datetime-local" id="rewardExpiresAt" name="expires_at"
                         class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                </div>
              </div>
            </div>

            <div class="flex justify-end gap-3 mt-6">
              <button type="button" onclick="closeRewardModal()"
                      class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600">
                Cancel
              </button>
              <button type="submit"
                      class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
                Save Reward
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Grant Reward Modal -->
  <div id="grantRewardModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Grant Reward</h3>
            <button onclick="closeGrantRewardModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
              {{lucide 'X' 'w-6 h-6'}}
            </button>
          </div>

          <form id="grantRewardForm" onsubmit="grantReward(event)">
            <div class="space-y-4">
              <div>
                <label for="grantUserId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">User ID *</label>
                <input type="number" id="grantUserId" name="user_id" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="grantType" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Type</label>
                <select id="grantType" name="type"
                        class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                  <option value="bonus">Bonus</option>
                  <option value="achievement">Achievement</option>
                  <option value="referral">Referral</option>
                  <option value="milestone">Milestone</option>
                </select>
              </div>

              <div>
                <label for="grantTitle" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title *</label>
                <input type="text" id="grantTitle" name="title" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>

              <div>
                <label for="grantCredits" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Credits *</label>
                <input type="number" id="grantCredits" name="credits" min="1" required
                       class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              </div>
            </div>

            <div class="flex justify-end gap-3 mt-6">
              <button type="button" onclick="closeGrantRewardModal()"
                      class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600">
                Cancel
              </button>
              <button type="submit"
                      class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700">
                Grant Reward
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentPage = {{pagination.page}};
    let currentFilters = {{{json filters}}};

    function loadPage(page) {
      currentPage = page;
      loadRewards();
    }

    function applyFilters() {
      currentFilters.status = document.getElementById('statusFilter').value;
      currentFilters.type = document.getElementById('typeFilter').value;
      currentFilters.userId = document.getElementById('userIdFilter').value;
      currentPage = 1;
      loadRewards();
    }

    function loadRewards() {
      const params = new URLSearchParams({
        page: currentPage,
        ...currentFilters
      });

      fetch(`/admin/rewards?${params}&ajax=true`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload(); // Simple reload for now
          }
        })
        .catch(error => console.error('Error loading rewards:', error));
    }

    function openCreateRewardModal() {
      document.getElementById('rewardModalTitle').textContent = 'Create Reward';
      document.getElementById('rewardForm').reset();
      document.getElementById('rewardId').value = '';
      document.getElementById('rewardModal').classList.remove('hidden');
    }

    function openGrantRewardModal() {
      document.getElementById('grantRewardForm').reset();
      document.getElementById('grantRewardModal').classList.remove('hidden');
    }

    function closeRewardModal() {
      document.getElementById('rewardModal').classList.add('hidden');
    }

    function closeGrantRewardModal() {
      document.getElementById('grantRewardModal').classList.add('hidden');
    }

    function viewReward(id) {
      window.location.href = `/admin/rewards/${id}`;
    }

    function editReward(id) {
      fetch(`/admin/api/rewards/${id}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const reward = data.reward;
            document.getElementById('rewardModalTitle').textContent = 'Edit Reward';
            document.getElementById('rewardId').value = reward.id;
            document.getElementById('rewardUserId').value = reward.userId;
            document.getElementById('rewardTitle').value = reward.title;
            document.getElementById('rewardDescription').value = reward.description || '';
            document.getElementById('rewardType').value = reward.type;
            document.getElementById('rewardCredits').value = reward.credits;
            document.getElementById('rewardStatus').value = reward.status;
            if (reward.expiresAt) {
              const date = new Date(reward.expiresAt);
              document.getElementById('rewardExpiresAt').value = date.toISOString().slice(0, 16);
            }
            document.getElementById('rewardModal').classList.remove('hidden');
          }
        })
        .catch(error => console.error('Error loading reward:', error));
    }

    function deleteReward(id, title) {
      if (confirm(`Are you sure you want to delete the reward "${title}"?`)) {
        fetch(`/admin/api/rewards/${id}`, {
          method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            loadRewards();
          } else {
            alert('Error: ' + data.error);
          }
        })
        .catch(error => {
          console.error('Error deleting reward:', error);
          alert('An error occurred');
        });
      }
    }

    function saveReward(event) {
      event.preventDefault();

      const formData = new FormData(event.target);
      const rewardData = {
        user_id: parseInt(formData.get('user_id')),
        title: formData.get('title'),
        description: formData.get('description'),
        type: formData.get('type'),
        credits: parseInt(formData.get('credits')) || 0,
        status: formData.get('status'),
        expires_at: formData.get('expires_at') || null
      };

      const rewardId = formData.get('id');
      const url = rewardId ? `/admin/api/rewards/${rewardId}` : '/admin/api/rewards';
      const method = rewardId ? 'PUT' : 'POST';

      fetch(url, {
        method: method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(rewardData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          closeRewardModal();
          location.reload();
        } else {
          alert('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error saving reward:', error);
        alert('An error occurred');
      });
    }

    function grantReward(event) {
      event.preventDefault();

      const formData = new FormData(event.target);
      const rewardData = {
        userId: parseInt(formData.get('user_id')),
        type: formData.get('type'),
        title: formData.get('title'),
        credits: parseInt(formData.get('credits'))
      };

      fetch('/admin/api/rewards/grant', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(rewardData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          closeGrantRewardModal();
          location.reload();
        } else {
          alert('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error granting reward:', error);
        alert('An error occurred');
      });
    }

    // Initialize filters
    document.getElementById('statusFilter').value = currentFilters.status || '';
    document.getElementById('typeFilter').value = currentFilters.type || '';
    document.getElementById('userIdFilter').value = currentFilters.userId || '';
    document.getElementById('applyFilters').addEventListener('click', applyFilters);
  </script>
