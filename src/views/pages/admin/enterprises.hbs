<script>
// Initialize page
document.addEventListener('DOMContentLoaded', function() {
  loadEnterprises();
  setupEventListeners();
});

// Load enterprises with current filters
function loadEnterprises() {
  const url = new URL(window.location);
  url.pathname = '/admin/enterprises';
  url.searchParams.set('ajax', 'true');

  fetch(url)
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        updateTable(data.enterprises);
        updatePagination(data.pagination);
      }
    });
}

// Update table with new data
function updateTable(enterprises) {
  const tbody = document.querySelector('tbody');
  tbody.innerHTML = enterprises.map(enterprise => `
    <tr class='hover:bg-muted/50'>
      <td class='w-12 px-4 py-4 whitespace-nowrap'>
        <input type="checkbox" class="enterpriseCheckbox" value="${enterprise.id}" data-enterprise-id="${enterprise.id}" class='rounded border-gray-300 text-primary focus:ring-primary'>
      </td>
      <td class='w-1/4 px-4 py-4 whitespace-nowrap'>
        <div class='text-sm font-medium text-foreground'>${enterprise.name}</div>
        <div class='text-sm text-muted-foreground'>${enterprise.description || ''}</div>
