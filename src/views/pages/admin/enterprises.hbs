      </td>
      <td class='w-20 px-4 py-4 whitespace-nowrap'>
        <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getStatusClass(enterprise.status)}'>
          ${enterprise.status}
        </span>
      </td>
      <td class='w-32 px-4 py-4 whitespace-nowrap text-sm text-muted-foreground hidden md:table-cell'>
        ${formatDate(enterprise.createdAt)}
      </td>
      <td class='px-4 py-4 whitespace-nowrap text-sm font-medium'>
        <div class='relative'>
          <button data-enterprise-id="${enterprise.id}" class='inline-flex items-center justify-center w-8 h-8 rounded-md text-muted-foreground hover:bg-muted hover:text-foreground transition-colors' title='Actions'>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
            </svg>
          </button>
          <div id="dropdown-${enterprise.id}" class='fixed w-48 bg-card rounded-md shadow-lg border border-border z-50 hidden'>
            <div class='py-1'>
              <a href="/admin/enterprises/${enterprise.id}" class='block px-4 py-2 text-sm text-foreground hover:bg-muted hover:text-foreground transition-colors'>
                View Details
              </a>
              <button onclick="editEnterprise(${enterprise.id})" class='block w-full text-left px-4 py-2 text-sm text-foreground hover:bg-muted hover:text-foreground transition-colors'>
                Edit
              </button>
              <button onclick="deleteEnterprise(${enterprise.id}, '${enterprise.name}')" class='block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-700 transition-colors'>
                Delete
              </button>
            </div>
          </div>
        </div>
      </td>
    </tr>
  `).join('');

  setupDropdownListeners();
}

// Update pagination
function updatePagination(pagination) {
  const paginationEl = document.querySelector('.pagination-info');
  if (paginationEl) {
    paginationEl.textContent = `Showing ${pagination.limit} of ${pagination.total} enterprises`;
  }
}

// Setup event listeners
function setupEventListeners() {
  // Filters
  document.getElementById('applyFilters').addEventListener('click', applyFilters);

  // Select all checkbox
  document.getElementById('selectAll').addEventListener('change', function(e) {
    const checkboxes = document.querySelectorAll('.enterpriseCheckbox');
    checkboxes.forEach(cb => cb.checked = e.target.checked);
    updateBulkActions();
  });

  // Individual checkboxes
  document.addEventListener('change', function(e) {
    if (e.target.classList.contains('enterpriseCheckbox')) {
      updateBulkActions();
    }
  });

  // Form submissions
  document.getElementById('createEnterpriseForm').addEventListener('submit', createEnterprise);
  document.getElementById('editEnterpriseForm').addEventListener('submit', updateEnterprise);

  setupDropdownListeners();
}

// Apply filters
function applyFilters() {
  const industry = document.getElementById('industryFilter').value;
  const status = document.getElementById('statusFilter').value;
  const companySize = document.getElementById('companySizeFilter').value;
  const search = document.getElementById('searchInput').value;

  const url = new URL(window.location);
  url.searchParams.set('industry', industry);
  url.searchParams.set('status', status);
  url.searchParams.set('companySize', companySize);
  url.searchParams.set('search', search);

  window.location.href = url.toString();
}

// Sort by column
function sortBy(column) {
  const url = new URL(window.location);
  const currentSort = url.searchParams.get('sortBy');
  const currentOrder = url.searchParams.get('sortOrder') || 'desc';

  let newOrder = 'asc';
  if (currentSort === column && currentOrder === 'asc') {
    newOrder = 'desc';
  }

  url.searchParams.set('sortBy', column);
  url.searchParams.set('sortOrder', newOrder);

  window.location.href = url.toString();
}

// Change page
function changePage(page) {
  const url = new URL(window.location);
  url.searchParams.set('page', page);
  window.location.href = url.toString();
}

// Modal functions
function openCreateEnterpriseModal() {
  document.getElementById('createEnterpriseModal').classList.remove('hidden');
}

function closeCreateEnterpriseModal() {
  document.getElementById('createEnterpriseModal').classList.add('hidden');
  document.getElementById('createEnterpriseForm').reset();
}

function closeEditEnterpriseModal() {
  document.getElementById('editEnterpriseModal').classList.add('hidden');
}

// CRUD operations
function createEnterprise(e) {
  e.preventDefault();

  const formData = new FormData(e.target);
  const data = Object.fromEntries(formData);

  fetch('/admin/api/enterprises', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify(data),
  })
  .then(response => response.json())
   .then(data => {
     if (data.success) {
       closeCreateEnterpriseModal();
       location.reload();
     } else {
       Toast.error('Error creating enterprise: ' + data.error);
     }
   });
}

function editEnterprise(enterpriseId) {
  fetch(`/admin/api/enterprises/${enterpriseId}`)
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        document.getElementById('editEnterpriseId').value = data.enterprise.id;
        document.getElementById('editEnterpriseName').value = data.enterprise.name;
        document.getElementById('editEnterpriseIndustry').value = data.enterprise.industry;
        document.getElementById('editEnterpriseCompanySize').value = data.enterprise.companySize;
        document.getElementById('editEnterpriseStatus').value = data.enterprise.status;
        document.getElementById('editEnterpriseDescription').value = data.enterprise.description || '';
        document.getElementById('editEnterpriseWebsite').value = data.enterprise.website || '';
        document.getElementById('editEnterpriseLocation').value = data.enterprise.location || '';
        document.getElementById('editEnterpriseRevenue').value = data.enterprise.revenue || '';
        document.getElementById('editEnterpriseFoundedDate').value = data.enterprise.foundedDate || '';
        document.getElementById('editEnterpriseModal').classList.remove('hidden');
      }
    });
}

function updateEnterprise(e) {
  e.preventDefault();

  const enterpriseId = document.getElementById('editEnterpriseId').value;
  const formData = new FormData(e.target);
  const data = Object.fromEntries(formData);

  fetch(`/admin/api/enterprises/${enterpriseId}`, {
    method: 'PUT',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify(data),
  })
  .then(response => response.json())
   .then(data => {
     if (data.success) {
       closeEditEnterpriseModal();
       location.reload();
     } else {
       Toast.error('Error updating enterprise: ' + data.error);
     }
   });
}

 function deleteEnterprise(enterpriseId, enterpriseName) {
   Toast.warning(`Are you sure you want to delete enterprise "${enterpriseName}"? This action cannot be undone.`);
   fetch(`/admin/api/enterprises/${enterpriseId}`, {
     method: 'DELETE',
   })
   .then(response => response.json())
   .then(data => {
     if (data.success) {
       location.reload();
     } else {
       Toast.error('Error deleting enterprise: ' + data.error);
     }
   });
 }

// Bulk operations
function updateBulkActions() {
  const checkboxes = document.querySelectorAll('.enterpriseCheckbox:checked');
  const count = checkboxes.length;
  const bulkActions = document.getElementById('bulkActions');
  const selectedCount = document.getElementById('selectedCount');

  if (count > 0) {
    bulkActions.classList.remove('hidden');
    selectedCount.textContent = `${count} enterprise${count > 1 ? 's' : ''} selected`;
    document.getElementById('bulkDeleteBtn').disabled = false;
  } else {
    bulkActions.classList.add('hidden');
    document.getElementById('bulkDeleteBtn').disabled = true;
  }
}

function bulkUpdateStatus() {
  const status = document.getElementById('bulkStatusSelect').value;
  if (!status) return;

  const checkboxes = document.querySelectorAll('.enterpriseCheckbox:checked');
  const enterpriseIds = Array.from(checkboxes).map(cb => parseInt(cb.value));

  if (enterpriseIds.length === 0) return;

  fetch('/admin/api/enterprises/bulk/status', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ enterpriseIds, status }),
  })
  .then(response => response.json())
   .then(data => {
     if (data.success) {
       location.reload();
     } else {
       Toast.error('Error updating enterprises: ' + data.error);
     }
   });
}

 function bulkDelete() {
   const checkboxes = document.querySelectorAll('.enterpriseCheckbox:checked');
   const enterpriseIds = Array.from(checkboxes).map(cb => parseInt(cb.value));

   if (enterpriseIds.length === 0) return;

   Toast.warning(`Are you sure you want to delete ${enterpriseIds.length} enterprise${enterpriseIds.length > 1 ? 's' : ''}? This action cannot be undone.`);
   fetch('/admin/api/enterprises/bulk/delete', {
     method: 'POST',
     headers: {
       'Content-Type': 'application/json',
     },
     body: JSON.stringify({ enterpriseIds }),
   })
   .then(response => response.json())
   .then(data => {
     if (data.success) {
       location.reload();
     } else {
       Toast.error('Error deleting enterprises: ' + data.error);
     }
   });
 }

// Export to CSV
function exportToCSV() {
  window.location.href = '/admin/api/enterprises/export/csv';
}

// Dropdown listeners
function setupDropdownListeners() {
  document.querySelectorAll('[data-enterprise-id]').forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const enterpriseId = this.dataset.enterpriseId;
      const dropdown = document.getElementById(`dropdown-${enterpriseId}`);

      // Hide all dropdowns
      document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
        if (d !== dropdown) d.classList.add('hidden');
      });

      // Toggle current dropdown
      dropdown.classList.toggle('hidden');
    });
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', function() {
    document.querySelectorAll('[id^="dropdown-"]').forEach(d => d.classList.add('hidden'));
  });
}

// Utility functions
function formatDate(dateString) {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}

function getStatusClass(status) {
  switch (status) {
    case 'active': return 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400';
    case 'inactive': return 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400';
    case 'acquired': return 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400';
    case 'failed': return 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400';
    default: return 'bg-gray-100 text-gray-800';
  }
}

function getCompanySizeClass(size) {
  switch (size) {
    case 'small': return 'bg-blue-100 text-blue-800';
    case 'medium': return 'bg-green-100 text-green-800';
    case 'large': return 'bg-yellow-100 text-yellow-800';
    case 'enterprise': return 'bg-purple-100 text-purple-800';
    default: return 'bg-gray-100 text-gray-800';
  }
}
