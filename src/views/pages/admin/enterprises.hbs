              <button onclick="sortBy('name')" class='hover:text-foreground transition-colors flex items-center gap-1'>
                Enterprise
                {{#if (eq filters.sortBy 'name')}}
                  {{#if (eq filters.sortOrder 'asc')}}↑{{else}}↓{{/if}}
                {{/if}}
              </button>
            </th>
            <th class='w-24 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              <button onclick="sortBy('industry')" class='hover:text-foreground transition-colors flex items-center gap-1'>
                Industry
                {{#if (eq filters.sortBy 'industry')}}
                  {{#if (eq filters.sortOrder 'asc')}}↑{{else}}↓{{/if}}
                {{/if}}
              </button>
            </th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Size</th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Status</th>
            <th class='w-32 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider hidden md:table-cell'>
              <button onclick="sortBy('created_at')" class='hover:text-foreground transition-colors flex items-center gap-1'>
                Created
                {{#if (eq filters.sortBy 'created_at')}}
                  {{#if (eq filters.sortOrder 'asc')}}↑{{else}}↓{{/if}}
                {{/if}}
              </button>
            </th>
            <th class='w-48 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Actions</th>
          </tr>
        </thead>
        <tbody class='bg-card divide-y divide-border'>
          {{#each enterprises}}
          <tr class='hover:bg-muted/50'>
            <td class='w-12 px-4 py-4 whitespace-nowrap'>
              <input type="checkbox" class="enterpriseCheckbox" value="{{id}}" data-enterprise-id="{{id}}" class='rounded border-gray-300 text-primary focus:ring-primary'>
            </td>
            <td class='w-1/4 px-4 py-4 whitespace-nowrap'>
              <div class='text-sm font-medium text-foreground'>{{name}}</div>
              <div class='text-sm text-muted-foreground'>{{description}}</div>
              {{#if website}}
              <a href="{{website}}" target="_blank" class='text-xs text-blue-600 hover:text-blue-800'>{{website}}</a>
              {{/if}}
            </td>
            <td class='w-24 px-4 py-4 whitespace-nowrap'>
              <span class='text-sm text-foreground'>{{industry}}</span>
            </td>
            <td class='w-20 px-4 py-4 whitespace-nowrap'>
              <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq companySize 'small')}}bg-blue-100 text-blue-800{{else if (eq companySize 'medium')}}bg-green-100 text-green-800{{else if (eq companySize 'large')}}bg-yellow-100 text-yellow-800{{else}}bg-purple-100 text-purple-800{{/if}}'>
                {{companySize}}
              </span>
            </td>
            <td class='w-20 px-4 py-4 whitespace-nowrap'>
              <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq status 'active')}}bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400{{else if (eq status 'inactive')}}bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400{{else if (eq status 'acquired')}}bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400{{else}}bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400{{/if}}'>
                {{status}}
              </span>
            </td>
            <td class='w-32 px-4 py-4 whitespace-nowrap text-sm text-muted-foreground hidden md:table-cell'>
              {{formatDate createdAt}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm font-medium'>
              <div class='relative'>
                <button data-enterprise-id="{{id}}" class='inline-flex items-center justify-center w-8 h-8 rounded-md text-muted-foreground hover:bg-muted hover:text-foreground transition-colors' title='Actions'>
                  {{lucide 'MoreVertical' 'w-4 h-4'}}
                </button>
