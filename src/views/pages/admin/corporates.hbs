// Helper functions
function getCompanySizeClass(size) {
  const classes = {
    'small': 'bg-blue-100 text-blue-800',
    'medium': 'bg-green-100 text-green-800',
    'large': 'bg-yellow-100 text-yellow-800',
    'enterprise': 'bg-purple-100 text-purple-800'
  };
  return classes[size] || 'bg-gray-100 text-gray-800';
}

function getStatusClass(status) {
  const classes = {
    'active': 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400',
    'inactive': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400',
    'acquired': 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400',
    'failed': 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400'
  };
  return classes[status] || 'bg-gray-100 text-gray-800';
}

function formatDate(dateString) {
  if (!dateString) return '';
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}

// Dropdown functionality
function initializeDropdowns() {
  document.querySelectorAll('[data-corporate-id]').forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation();
      const corporateId = this.getAttribute('data-corporate-id');
      const dropdown = document.getElementById(`dropdown-${corporateId}`);

      // Close all other dropdowns
      document.querySelectorAll('[id^="dropdown-"]').forEach(d => {
        if (d !== dropdown) d.classList.add('hidden');
      });

      // Toggle current dropdown
      dropdown.classList.toggle('hidden');

      // Position dropdown
      const rect = this.getBoundingClientRect();
      dropdown.style.top = `${rect.bottom + 5}px`;
      dropdown.style.left = `${rect.left - 160}px`;
    });
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', function() {
    document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
      dropdown.classList.add('hidden');
    });
  });
}

// Form handlers
function initializeFormHandlers() {
  // Create corporate form
  document.getElementById('createCorporateForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    await createCorporate();
  });

  // Edit corporate form
  document.getElementById('editCorporateForm').addEventListener('submit', async function(e) {
