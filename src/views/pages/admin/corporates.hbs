  });
}

// Filter functions
function applyFilters() {
  const industry = document.getElementById('industryFilter').value;
  const status = document.getElementById('statusFilter').value;
  const sector = document.getElementById('sectorFilter').value;
  const companySize = document.getElementById('companySizeFilter').value;
  const search = document.getElementById('searchInput').value;

  const params = new URLSearchParams();
  params.set('ajax', 'true');
  if (industry) params.set('industry', industry);
  if (status) params.set('status', status);
  if (sector) params.set('sector', sector);
  if (companySize) params.set('companySize', companySize);
  if (search) params.set('search', search);

  fetch(`/admin/corporates?${params.toString()}`)
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        updateTable(data.corporates);
        updatePagination(data.pagination);
        // Update URL without reloading
        const url = new URL(window.location);
        url.searchParams.delete('ajax');
        if (industry) url.searchParams.set('industry', industry);
        else url.searchParams.delete('industry');
        if (status) url.searchParams.set('status', status);
        else url.searchParams.delete('status');
        if (sector) url.searchParams.set('sector', sector);
        else url.searchParams.delete('sector');
        if (companySize) url.searchParams.set('companySize', companySize);
        else url.searchParams.delete('companySize');
        if (search) url.searchParams.set('search', search);
        else url.searchParams.delete('search');
        window.history.pushState({}, '', url);
      }
    });
}

function sortBy(field) {
  const urlParams = new URLSearchParams(window.location.search);
  const currentSortBy = urlParams.get('sortBy') || 'created_at';
  const currentSortOrder = urlParams.get('sortOrder') || 'desc';

  let newSortOrder = 'asc';
  if (currentSortBy === field && currentSortOrder === 'asc') {
    newSortOrder = 'desc';
  }

  const params = new URLSearchParams(window.location.search);
  params.set('sortBy', field);
  params.set('sortOrder', newSortOrder);
  params.set('ajax', 'true');

  fetch(`/admin/corporates?${params.toString()}`)
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        updateTable(data.corporates);
        updatePagination(data.pagination);
        // Update URL
        const url = new URL(window.location);
        url.searchParams.set('sortBy', field);
        url.searchParams.set('sortOrder', newSortOrder);
        window.history.pushState({}, '', url);
      }
    });
}

function changePage(page) {
  const params = new URLSearchParams(window.location.search);
  params.set('page', page);
  params.set('ajax', 'true');

  fetch(`/admin/corporates?${params.toString()}`)
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        updateTable(data.corporates);
        updatePagination(data.pagination);
        // Update URL
        const url = new URL(window.location);
        url.searchParams.set('page', page);
        window.history.pushState({}, '', url);
      }
    });
}

// Bulk actions
function updateBulkActions() {
  const checkedBoxes = document.querySelectorAll('.corporateCheckbox:checked');
  const bulkActions = document.getElementById('bulkActions');
  const selectedCount = document.getElementById('selectedCount');
  const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');

  if (checkedBoxes.length > 0) {
    bulkActions.classList.remove('hidden');
    selectedCount.textContent = `${checkedBoxes.length} corporate(s) selected`;
    bulkDeleteBtn.disabled = false;
  } else {
    bulkActions.classList.add('hidden');
    bulkDeleteBtn.disabled = true;
  }
}

async function bulkUpdateStatus() {
  const status = document.getElementById('bulkStatusSelect').value;
  if (!status) {
    alert('Please select a status');
    return;
  }

  const corporateIds = Array.from(document.querySelectorAll('.corporateCheckbox:checked')).map(cb => parseInt(cb.value));

  try {
    const response = await fetch('/admin/api/corporates/bulk/status', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ corporateIds, status }),
    });

    const result = await response.json();

    if (result.success) {
      alert(result.message);
      location.reload();
    } else {
      alert('Error: ' + result.error);
    }
  } catch (error) {
    console.error('Error updating corporates:', error);
    alert('An error occurred while updating corporates');
  }
}

async function bulkDelete() {
  if (!confirm('Are you sure you want to delete the selected corporates? This action cannot be undone.')) {
    return;
  }

  const corporateIds = Array.from(document.querySelectorAll('.corporateCheckbox:checked')).map(cb => parseInt(cb.value));

  try {
    const response = await fetch('/admin/api/corporates/bulk/delete', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ corporateIds }),
    });

    const result = await response.json();

    if (result.success) {
      alert(result.message);
      location.reload();
    } else {
      alert('Error: ' + result.error);
    }
  } catch (error) {
    console.error('Error deleting corporates:', error);
    alert('An error occurred while deleting corporates');
  }
}

