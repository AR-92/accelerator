<div class='container mx-auto px-4 py-8 max-w-7xl'>
  <!-- Header -->
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1 class='font-heading text-2xl font-semibold text-foreground dark:text-white'>Corporate Management</h1>
      <p class='text-base text-muted-foreground'>Total corporates: {{pagination.total}}</p>
    </div>
    <div class='flex gap-2'>
      <button onclick="exportToCSV()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2'>
        {{lucide 'Download' 'w-4 h-4 mr-2'}}
        Export CSV
      </button>
      <button onclick="openCreateCorporateModal()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
        {{lucide 'Plus' 'w-4 h-4 mr-2'}}
        Create Corporate
      </button>
    </div>
  </div>

  <!-- Filters -->
  <div class='rounded-md bg-card text-card-foreground shadow-sm p-6' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='flex flex-wrap gap-4'>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Industry</label>
        <input type="text" id="industryFilter" placeholder="Filter by industry"
               class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Status</label>
        <select id="statusFilter" class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
          <option value="">All Statuses</option>
          <option value="active">Active</option>
          <option value="inactive">Inactive</option>
          <option value="acquired">Acquired</option>
          <option value="failed">Failed</option>
        </select>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Sector</label>
        <input type="text" id="sectorFilter" placeholder="Filter by sector"
               class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Company Size</label>
        <select id="companySizeFilter" class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
          <option value="">All Sizes</option>
          <option value="small">Small</option>
          <option value="medium">Medium</option>
          <option value="large">Large</option>
          <option value="enterprise">Enterprise</option>
        </select>
      </div>
      <div>
        <label class='block text-sm font-medium text-foreground mb-2'>Search</label>
        <input type="text" id="searchInput" placeholder="Search by name or description"
               class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
      </div>
      <div class="flex items-end">
        <button id="applyFilters" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
          Apply Filters
        </button>
      </div>
    </div>
  </div>

  <!-- Bulk Actions -->
  <div id="bulkActions" class='hidden rounded-md bg-card text-card-foreground shadow-sm p-4' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='flex items-center justify-between'>
      <span id="selectedCount" class='text-sm text-foreground'>0 corporates selected</span>
      <div class='flex gap-2'>
        <select id="bulkStatusSelect" class='flex h-9 rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'>
          <option value="">Change Status</option>
          <option value="active">Active</option>
          <option value="inactive">Inactive</option>
          <option value="acquired">Acquired</option>
          <option value="failed">Failed</option>
        </select>
        <button onclick="bulkUpdateStatus()" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'>
          Update Status
        </button>
        <button id="bulkDeleteBtn" onclick="bulkDelete()" disabled class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-destructive text-destructive-foreground shadow hover:bg-destructive/90 h-9 px-4 py-2'>
          Delete Selected
        </button>
      </div>
    </div>
  </div>

  <!-- Corporates Table -->
  <div class='rounded-md bg-card text-card-foreground shadow-sm overflow-visible' style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'>
    <div class='px-6 py-4 border-b border-border'>
      <h2 class='text-lg font-medium text-foreground'>Corporates ({{pagination.total}})</h2>
    </div>

    <div class='overflow-x-auto'>
      <table class='min-w-full divide-y divide-border table-fixed sm:table-auto'>
        <thead class='bg-muted/50'>
          <tr>
            <th class='w-12 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              <input type="checkbox" id="selectAll" class='rounded border-gray-300 text-primary focus:ring-primary'>
            </th>
            <th class='min-w-48 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              <button onclick="sortBy('name')" class='hover:text-foreground transition-colors flex items-center gap-1'>
                Corporate
                {{#if (eq filters.sortBy 'name')}}
                  {{#if (eq filters.sortOrder 'asc')}}↑{{else}}↓{{/if}}
                {{/if}}
              </button>
            </th>
            <th class='w-24 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>
              <button onclick="sortBy('industry')" class='hover:text-foreground transition-colors flex items-center gap-1'>
                Industry
                {{#if (eq filters.sortBy 'industry')}}
                  {{#if (eq filters.sortOrder 'asc')}}↑{{else}}↓{{/if}}
                {{/if}}
              </button>
            </th>
            <th class='w-24 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Sector</th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Size</th>
            <th class='w-20 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Status</th>
            <th class='w-32 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider hidden md:table-cell'>
              <button onclick="sortBy('created_at')" class='hover:text-foreground transition-colors flex items-center gap-1'>
                Created
                {{#if (eq filters.sortBy 'created_at')}}
                  {{#if (eq filters.sortOrder 'asc')}}↑{{else}}↓{{/if}}
                {{/if}}
              </button>
            </th>
            <th class='w-48 px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider'>Actions</th>
          </tr>
        </thead>
        <tbody class='bg-card divide-y divide-border'>
          {{#each corporates}}
          <tr class='hover:bg-muted/50'>
            <td class='w-12 px-4 py-4 whitespace-nowrap'>
              <input type="checkbox" class="corporateCheckbox" value="{{id}}" data-corporate-id="{{id}}" class='rounded border-gray-300 text-primary focus:ring-primary'>
            </td>
            <td class='w-1/4 px-4 py-4 whitespace-nowrap'>
              <div class='text-sm font-medium text-foreground'>{{name}}</div>
              <div class='text-sm text-muted-foreground'>{{description}}</div>
              {{#if headquarters}}
              <div class='text-xs text-muted-foreground'>HQ: {{headquarters}}</div>
              {{/if}}
              {{#if employeeCount}}
              <div class='text-xs text-muted-foreground'>{{employeeCount}} employees</div>
              {{/if}}
              {{#if website}}
              <a href="{{website}}" target="_blank" class='text-xs text-blue-600 hover:text-blue-800'>{{website}}</a>
              {{/if}}
            </td>
            <td class='w-24 px-4 py-4 whitespace-nowrap'>
              <span class='text-sm text-foreground'>{{industry}}</span>
            </td>
            <td class='w-24 px-4 py-4 whitespace-nowrap'>
              <span class='text-sm text-foreground'>{{sector}}</span>
            </td>
            <td class='w-20 px-4 py-4 whitespace-nowrap'>
              <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq companySize 'small')}}bg-blue-100 text-blue-800{{else if (eq companySize 'medium')}}bg-green-100 text-green-800{{else if (eq companySize 'large')}}bg-yellow-100 text-yellow-800{{else}}bg-purple-100 text-purple-800{{/if}}'>
                {{companySize}}
              </span>
            </td>
            <td class='w-20 px-4 py-4 whitespace-nowrap'>
              <span class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq status 'active')}}bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400{{else if (eq status 'inactive')}}bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400{{else if (eq status 'acquired')}}bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400{{else}}bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400{{/if}}'>
                {{status}}
              </span>
            </td>
            <td class='w-32 px-4 py-4 whitespace-nowrap text-sm text-muted-foreground hidden md:table-cell'>
              {{formatDate createdAt}}
            </td>
            <td class='px-4 py-4 whitespace-nowrap text-sm font-medium'>
              <div class='relative'>
                <button data-corporate-id="{{id}}" class='inline-flex items-center justify-center w-8 h-8 rounded-md text-muted-foreground hover:bg-muted hover:text-foreground transition-colors' title='Actions'>
                  {{lucide 'MoreVertical' 'w-4 h-4'}}
                </button>
                <div id="dropdown-{{id}}" class='fixed w-48 bg-card rounded-md shadow-lg border border-border z-50 hidden'>
                  <div class='py-1'>
                    <a href="/admin/corporates/{{id}}" class='block px-4 py-2 text-sm text-foreground hover:bg-muted hover:text-foreground transition-colors'>
                      View Details
                    </a>
                    <button onclick="editCorporate({{id}})" class='block w-full text-left px-4 py-2 text-sm text-foreground hover:bg-muted hover:text-foreground transition-colors'>
                      Edit
                    </button>
                    <button onclick="deleteCorporate({{id}}, '{{name}}')" class='block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-700 transition-colors'>
                      Delete
                    </button>
                  </div>
                </div>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {{#if (gt pagination.pages 1)}}
    <div class='px-6 py-4 border-t border-border flex items-center justify-between'>
      <div class='text-sm text-muted-foreground'>
        Showing {{pagination.limit}} of {{pagination.total}} corporates
      </div>
      <div class='flex gap-2'>
        {{#if (gt pagination.page 1)}}
        <button onclick="changePage({{subtract pagination.page 1}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2'>
          Previous
        </button>
        {{/if}}
        <span class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium h-9 px-4 py-2'>
          Page {{pagination.page}} of {{pagination.pages}}
        </span>
        {{#if (lt pagination.page pagination.pages)}}
        <button onclick="changePage({{add pagination.page 1}})" class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2'>
          Next
        </button>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>
</div>

