<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add click handler for package selection
    const packageButtons = document.querySelectorAll('button');
    packageButtons.forEach(button => {
      if (button.textContent.includes('Select Plan')) {
        button.addEventListener('click', function() {
          // Remove selected class from all plans
          document.querySelectorAll('.border').forEach(el => {
            el.classList.remove('border-primary', 'border-2');
          });
          
          // Add selected class to current plan
          const planCard = this.closest('.border');
          planCard.classList.add('border-primary', 'border-2');
          
          // Show a temporary confirmation
          const originalText = this.textContent;
          this.textContent = 'Selected!';
          this.classList.remove('bg-muted', 'bg-primary', 'text-foreground', 'text-primary-foreground');
          this.classList.add('bg-green-600', 'text-white');
          
          setTimeout(() => {
            this.textContent = originalText;
            this.classList.remove('bg-green-600', 'text-white');
            if (this.querySelector('svg')) {
              // Premium button
              this.classList.add('bg-primary', 'text-primary-foreground');
            } else {
              this.classList.add('bg-muted', 'text-foreground');
            }
          }, 2000);
        });
      }
    });
    
    // Add functionality to FAQ accordion
    const faqButtons = document.querySelectorAll('.group');
    faqButtons.forEach(button => {
      button.addEventListener('click', function() {
        const content = this.nextElementSibling;
        const icon = this.querySelector('svg');
        
        if (content.style.display === 'block') {
          content.style.display = 'none';
          icon.style.transform = 'rotate(0deg)';
        } else {
          // Close other openFAQs
          document.querySelectorAll('.group').forEach(btn => {
            if (btn !== this) {
              btn.nextElementSibling.style.display = 'none';
              btn.querySelector('svg').style.transform = 'rotate(0deg)';
            }
          });
          
          content.style.display = 'block';
          icon.style.transform = 'rotate(180deg)';
        }
      });
    });
    
    // Initialize the first FAQ as open
    if (faqButtons.length > 0) {
      faqButtons[0].nextElementSibling.style.display = 'block';
      faqButtons[0].querySelector('svg').style.transform = 'rotate(180deg)';
    }
  });
</script>

