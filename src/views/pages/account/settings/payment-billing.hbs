  <!-- Payment Methods Section -->
  <section class='bg-card rounded-xl border border-border overflow-hidden' aria-labelledby='payment-methods-heading'>
    <div class='p-6 border-b border-border'>
      <div class='flex items-center justify-between'>
        <h2 id='payment-methods-heading' class='text-xl font-semibold text-foreground'>Payment Methods</h2>
        <button class='text-sm text-primary hover:text-primary/80 font-medium'>Manage All</button>
      </div>
    </div>

    <div class='p-6'>
      <div class='grid grid-cols-1 lg:grid-cols-2 gap-6'>
        <!-- Default Card -->
        <div class='relative border-2 border-primary rounded-xl p-6 bg-gradient-to-br from-primary/5 to-primary/10'>
          <div class='absolute top-4 right-4'>
            <span class='inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary text-primary-foreground'>
              Default
            </span>
          </div>

          <div class='flex items-center gap-4 mb-4'>
            <div class='w-12 h-8 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg flex items-center justify-center'>
              <span class='text-white text-xs font-bold'>VISA</span>
            </div>
            <div>
              <p class='font-semibold text-foreground'>•••• •••• •••• 4242</p>
              <p class='text-sm text-muted-foreground'>Expires 12/25</p>
            </div>
          </div>

          <div class='flex gap-2'>
            <button class='text-sm text-muted-foreground hover:text-foreground'>Edit</button>
            <button class='text-sm text-red-500 hover:text-red-600'>Remove</button>
          </div>
        </div>

        <!-- Secondary Card -->
        <div class='border border-border rounded-xl p-6 hover:shadow-md transition-shadow'>
          <div class='flex items-center gap-4 mb-4'>
            <div class='w-12 h-8 bg-gradient-to-r from-red-600 to-red-700 rounded-lg flex items-center justify-center'>
              <span class='text-white text-xs font-bold'>MC</span>
            </div>
            <div>
              <p class='font-semibold text-foreground'>•••• •••• •••• 8888</p>
              <p class='text-sm text-muted-foreground'>Expires 08/26</p>
            </div>
          </div>

          <div class='flex items-center justify-between'>
            <button class='text-sm text-primary hover:text-primary/80 font-medium'>Set as Default</button>
            <div class='flex gap-2'>
              <button class='text-sm text-muted-foreground hover:text-foreground'>Edit</button>
              <button class='text-sm text-red-500 hover:text-red-600'>Remove</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Add New Card Section -->
      <div class='mt-8 pt-6 border-t border-border'>
        <h3 class='text-lg font-medium text-foreground mb-4'>Add New Payment Method</h3>
        <form class='grid grid-cols-1 md:grid-cols-2 gap-6'>
          <div class='space-y-4'>
            <div class='space-y-2'>
              <label class='text-sm font-medium text-foreground'>Card Number</label>
              <div class='relative'>
                <input type='text' placeholder='1234 5678 9012 3456' class='w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors'>
                <div class='absolute right-3 top-1/2 -translate-y-1/2'>
                  <svg class='w-5 h-5 text-muted-foreground' fill='none' stroke='currentColor' viewBox='0 0 24 24' aria-hidden='true'>
                    <rect width='20' height='14' x='2' y='5' rx='2'/>
                    <line x1='2' x2='22' y1='10' y2='10'/>
                  </svg>
                </div>
              </div>
            </div>

            <div class='space-y-2'>
              <label class='text-sm font-medium text-foreground'>Cardholder Name</label>
              <input type='text' placeholder='John Doe' class='w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors'>
            </div>
          </div>

          <div class='space-y-4'>
            <div class='grid grid-cols-2 gap-4'>
              <div class='space-y-2'>
                <label class='text-sm font-medium text-foreground'>Expiry Date</label>
                <input type='text' placeholder='MM/YY' class='w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors'>
              </div>
              <div class='space-y-2'>
                <label class='text-sm font-medium text-foreground'>CVV</label>
                <input type='text' placeholder='123' class='w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors'>
              </div>
            </div>

            <div class='flex items-center gap-3 pt-2'>
              <input type='checkbox' id='default_new_card' class='rounded border-input'>
              <label for='default_new_card' class='text-sm text-muted-foreground'>Set as default payment method</label>
            </div>
          </div>
        </div>
        </form>

        <div class='flex gap-3 mt-6'>
          <button type='submit' class='px-6 py-3 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors font-medium'>
            Add Card
          </button>
          <button class='px-6 py-3 border border-input rounded-lg hover:bg-muted transition-colors'>
            Cancel
          </button>
        </div>
      </div>
    </div>
  </section>

