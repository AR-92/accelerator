<div class='w-full'>
  <div class='mb-8'>
    <h1 class='text-2xl font-light mb-2'>Reports</h1>
    <p class='text-gray-500'>Analyze your data and generate insights</p>
  </div>

  <!-- Report filters -->
  <div
    class='bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 mb-8 shadow-sm'
  >
    <div class='grid grid-cols-1 md:grid-cols-4 gap-4'>
      <div>
        <label
          class='block text-sm text-gray-500 dark:text-gray-400 mb-2'
        >Report Type</label>
        <select
          class='w-full px-4 py-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-1 focus:ring-primary-purple'
        >
          <option>All Reports</option>
          <option>Weekly</option>
          <option>Monthly</option>
          <option>Quarterly</option>
        </select>
      </div>

      <div>
        <label class='block text-sm text-gray-500 dark:text-gray-400 mb-2'>Date
          Range</label>
        <select
          class='w-full px-4 py-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-1 focus:ring-primary-purple'
        >
          <option>Last 7 days</option>
          <option selected>Last 30 days</option>
          <option>Last 90 days</option>
          <option>This year</option>
        </select>
      </div>

      <div>
        <label
          class='block text-sm text-gray-500 dark:text-gray-400 mb-2'
        >Category</label>
        <select
          class='w-full px-4 py-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-1 focus:ring-primary-purple'
        >
          <option>All Categories</option>
          <option>Sales</option>
          <option>Marketing</option>
          <option>Operations</option>
        </select>
      </div>

      <div class='flex items-end'>
        <button
          class='w-full py-3 bg-primary-purple hover:bg-primary-purple-hover text-white rounded transition'
        >
          Apply Filters
        </button>
      </div>
    </div>
  </div>

  <!-- Report charts -->
  <div class='grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8'>
    <div
      class='bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 shadow-sm'
    >
      <h2
        class='text-lg font-light mb-4 text-gray-900 dark:text-gray-100'
      >Performance Overview</h2>
      <div
        class='h-64 flex items-center justify-center text-gray-500 dark:text-gray-400'
      >
        Performance chart visualization would appear here
      </div>
    </div>

    <div
      class='bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 shadow-sm'
    >
      <h2 class='text-lg font-light mb-4 text-gray-900 dark:text-gray-100'>Trend
        Analysis</h2>
      <div
        class='h-64 flex items-center justify-center text-gray-500 dark:text-gray-400'
      >
        Trend analysis chart would appear here
      </div>
    </div>
  </div>

  <!-- Report data table -->
  <div
    class='bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6 shadow-sm'
  >
    <div class='flex justify-between items-center mb-4'>
      <h2 class='text-lg font-light text-gray-900 dark:text-gray-100'>Detailed
        Report</h2>
      <div class='flex gap-2'>
        <button
          class='px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 rounded text-sm'
        >
          Export
        </button>
        <button
          class='px-4 py-2 bg-primary-purple hover:bg-primary-purple-hover text-white rounded text-sm'
        >
          Generate
        </button>
      </div>
    </div>

    <div class='overflow-x-auto'>
      <table class='w-full'>
        <thead>
          <tr class='border-b border-gray-200 dark:border-gray-700'>
            <th
              class='py-3 px-4 text-left text-gray-500 dark:text-gray-400 font-light text-sm'
            >Metric</th>
            <th
              class='py-3 px-4 text-left text-gray-500 dark:text-gray-400 font-light text-sm'
            >Current</th>
            <th
              class='py-3 px-4 text-left text-gray-500 dark:text-gray-400 font-light text-sm'
            >Previous</th>
            <th
              class='py-3 px-4 text-left text-gray-500 dark:text-gray-400 font-light text-sm'
            >Change</th>
            <th
              class='py-3 px-4 text-left text-gray-500 dark:text-gray-400 font-light text-sm'
            >Status</th>
          </tr>
        </thead>
        <tbody>
          <tr class='border-b border-gray-100 dark:border-gray-700/50'>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>Revenue</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>$42,567</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>$38,921</td>
            <td class='py-3 px-4 text-green-600 dark:text-green-400'>+9.4%</td>
            <td class='py-3 px-4'><span
                class='text-green-600 dark:text-green-400 text-xs'
              >Up</span></td>
          </tr>
          <tr class='border-b border-gray-100 dark:border-gray-700/50'>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>Users</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>1,248</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>1,102</td>
            <td class='py-3 px-4 text-green-600 dark:text-green-400'>+13.2%</td>
            <td class='py-3 px-4'><span
                class='text-green-600 dark:text-green-400 text-xs'
              >Up</span></td>
          </tr>
          <tr class='border-b border-gray-100 dark:border-gray-700/50'>
            <td
              class='py-3 px-4 text-gray-900 dark:text-gray-100'
            >Conversion</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>4.2%</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>4.5%</td>
            <td class='py-3 px-4 text-red-600 dark:text-red-400'>-6.7%</td>
            <td class='py-3 px-4'><span
                class='text-red-600 dark:text-red-400 text-xs'
              >Down</span></td>
          </tr>
          <tr>
            <td
              class='py-3 px-4 text-gray-900 dark:text-gray-100'
            >Engagement</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>24 min</td>
            <td class='py-3 px-4 text-gray-900 dark:text-gray-100'>22 min</td>
            <td class='py-3 px-4 text-green-600 dark:text-green-400'>+9.1%</td>
            <td class='py-3 px-4'><span
                class='text-green-600 dark:text-green-400 text-xs'
              >Up</span></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>