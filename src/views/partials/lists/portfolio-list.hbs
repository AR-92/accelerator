 <div id='portfolio-list' class='flex flex-col pb-[100px] max-md:pb-[64px] px-4 max-md:px-[2px]'>
   <div class='flex items-start flex-row justify-between'>
     <div class='flex items-center justify-center flex-wrap flex-1 gap-2'>
         <button
          class='rounded-full border clickable inline-flex justify-center items-center hover:bg-[var(--fill-tsp-white-main)] {{#if (eq currentCategory "All")}}!bg-[var(--tab-active-black)] border-gray-300 text-[var(--text-onblack)]{{else}}border-gray-300{{/if}} font-medium'
          hx-get='/pages/portfolio?category=All{{#if currentSearch}}&search={{currentSearch}}{{/if}}'
          hx-target='#portfolio-list'
          hx-trigger='click'
        >
         <div class='pl-3 relative text-[13px] 1.5xl:text-[14px]'>
           <span class='font-semibold opacity-0'>All</span>
           <span
             class='flex justify-center items-center h-full absolute top-1/2 -translate-y-1/2 start-3'
           >All</span>
         </div>
         <div class='w-px h-3.5 ml-[7px] bg-[var(--border-white)]'></div>
         <div class='ps-[7px] pe-[11px] py-[7px] 1.5xl:py-[9px]'>
           <svg
             xmlns='http://www.w3.org/2000/svg'
             width='16'
             height='16'
             viewBox='0 0 24 24'
             fill='none'
             stroke='currentColor'
             stroke-width='2'
             stroke-linecap='round'
             stroke-linejoin='round'
             class='lucide lucide-refresh-cw'
           >
             <path d='M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8'></path>
             <path d='M21 3v5h-5'></path>
             <path
               d='M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16'
             ></path>
             <path d='M8 16H3v5'></path>
           </svg>
         </div>
       </button>

        <button
          class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] {{#if (eq currentCategory "Web Design")}}!bg-[var(--tab-active-black)] border-gray-300 text-[var(--text-onblack)]{{else}}border-gray-300{{/if}} transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
          hx-get='/pages/portfolio?category=Web%20Design{{#if currentSearch}}&search={{currentSearch}}{{/if}}'
          hx-target='#portfolio-list'
          hx-trigger='click'
        >
         <span
           class='flex justify-center items-center relative {{#if (eq currentCategory "Web Design")}}text-[var(--text-onblack)]{{else}}text-[var(--text-tertiary)]{{/if}} text-[13px] 1.5xl:text-[14px]'
         >
           <span class='font-medium opacity-0'>Web Design</span>
           <span
             class='flex w-full h-full whitespace-nowrap absolute justify-center'
           >Web Design</span>
         </span>
       </button>

        <button
          class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] {{#if (eq currentCategory "Mobile")}}!bg-[var(--tab-active-black)] border-gray-300 text-[var(--text-onblack)]{{else}}border-gray-300{{/if}} transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
          hx-get='/pages/portfolio?category=Mobile{{#if currentSearch}}&search={{currentSearch}}{{/if}}'
          hx-target='#portfolio-list'
          hx-trigger='click'
        >
         <span
           class='flex justify-center items-center relative {{#if (eq currentCategory "Mobile")}}text-[var(--text-onblack)]{{else}}text-[var(--text-tertiary)]{{/if}} text-[13px] 1.5xl:text-[14px]'
         >
           <span class='font-medium opacity-0'>Mobile</span>
           <span
             class='flex w-full h-full whitespace-nowrap absolute justify-center'
           >Mobile</span>
         </span>
       </button>

        <button
          class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] {{#if (eq currentCategory "Data")}}!bg-[var(--tab-active-black)] border-gray-300 text-[var(--text-onblack)]{{else}}border-gray-300{{/if}} transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
          hx-get='/pages/portfolio?category=Data{{#if currentSearch}}&search={{currentSearch}}{{/if}}'
          hx-target='#portfolio-list'
          hx-trigger='click'
        >
         <span
           class='flex justify-center items-center relative {{#if (eq currentCategory "Data")}}text-[var(--text-onblack)]{{else}}text-[var(--text-tertiary)]{{/if}} text-[13px] 1.5xl:text-[14px]'
         >
           <span class='font-medium opacity-0'>Data</span>
           <span
             class='flex w-full h-full whitespace-nowrap absolute justify-center'
           >Data</span>
         </span>
       </button>

        <button
          class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] {{#if (eq currentCategory "E-commerce")}}!bg-[var(--tab-active-black)] border-gray-300 text-[var(--text-onblack)]{{else}}border-gray-300{{/if}} transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
          hx-get='/pages/portfolio?category=E-commerce{{#if currentSearch}}&search={{currentSearch}}{{/if}}'
          hx-target='#portfolio-list'
          hx-trigger='click'
        >
         <span
           class='flex justify-center items-center relative {{#if (eq currentCategory "E-commerce")}}text-[var(--text-onblack)]{{else}}text-[var(--text-tertiary)]{{/if}} text-[13px] 1.5xl:text-[14px]'
         >
           <span class='font-medium opacity-0'>E-commerce</span>
           <span
             class='flex w-full h-full whitespace-nowrap absolute justify-center'
           >E-commerce</span>
         </span>
       </button>
     </div>

     <div
       class='flex p-1 justify-center items-center gap-1.5 size-8 cursor-pointer hover:opacity-80 duration-150 mt-[2px]'
     >
       <svg
         xmlns='http://www.w3.org/2000/svg'
         width='20px'
         height='20px'
         viewBox='0 0 20 20'
         fill='none'
       >
         <path
           d='M5 5.75L10 10.75L15 5.75'
           stroke='#858481'
           stroke-width='1.10833'
           stroke-linecap='round'
           stroke-linejoin='round'
         ></path>
         <path
           d='M5 10.75L10 15.75L15 10.75'
           stroke='#B9B9B7'
           stroke-width='1.10833'
           stroke-linecap='round'
           stroke-linejoin='round'
         ></path>
       </svg>
      </div>
    </div>

     <div class='my-6'>
        <div
          class='flex flex-wrap gap-6'
        >
         {{#each portfolio}}
           {{> components/portfolio-card
             id=id
             title=title
             category=category
             description=description
             tags=tags
             votes=votes
             isPublic=isPublic
             image=image
           }}
         {{/each}}
       </div>
     </div>
</div>