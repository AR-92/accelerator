      <button
        class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
      >
        <span
          class='flex justify-center items-center relative text-[var(--text-tertiary)] text-[13px] 1.5xl:text-[14px]'
        >
          <span class='font-medium opacity-0'>Data</span>
          <span
            class='flex w-full h-full whitespace-nowrap absolute justify-center'
          >Data</span>
        </span>
      </button>

      <button
        class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
      >
        <span
          class='flex justify-center items-center relative text-[var(--text-tertiary)] text-[13px] 1.5xl:text-[14px]'
        >
          <span class='font-medium opacity-0'>Edu</span>
          <span
            class='flex w-full h-full whitespace-nowrap absolute justify-center'
          >Edu</span>
        </span>
      </button>

      <button
        class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
      >
        <span
          class='flex justify-center items-center relative text-[var(--text-tertiary)] text-[13px] 1.5xl:text-[14px]'
        >
          <span class='font-medium opacity-0'>Productivity</span>
          <span
            class='flex w-full h-full whitespace-nowrap absolute justify-center'
          >Productivity</span>
        </span>
      </button>

      <button
        class='rounded-full flex items-center clickable border border-gray-300 hover:bg-[var(--fill-tsp-white-main)] transition-colors px-3 py-[5.25px] 1.5xl:py-[6.5px]'
      >
        <span
          class='flex justify-center items-center relative text-[var(--text-tertiary)] text-[13px] 1.5xl:text-[14px]'
        >
          <span class='font-medium opacity-0'>Programming</span>
          <span
            class='flex w-full h-full whitespace-nowrap absolute justify-center'
          >Programming</span>
        </span>
      </button>
    </div>

    <div
      class='flex p-1 justify-center items-center gap-1.5 size-8 cursor-pointer hover:opacity-80 duration-150 mt-[2px]'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='20px'
        height='20px'
        viewBox='0 0 20 20'
        fill='none'
      >
        <path
          d='M5 5.75L10 10.75L15 5.75'
          stroke='#858481'
          stroke-width='1.10833'
          stroke-linecap='round'
          stroke-linejoin='round'
        ></path>
        <path
          d='M5 10.75L10 15.75L15 10.75'
          stroke='#B9B9B7'
          stroke-width='1.10833'
          stroke-linecap='round'
          stroke-linejoin='round'
        ></path>
      </svg>
    </div>
  </div>

  <div class='my-6'>
     <div
       class='flex-row flex-wrap grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 relative'
     >
       {{#each ideas}}
         {{> components/idea-card
           href=href
           title=title
           type=type
           typeIcon=typeIcon
           rating=rating
           isFavorite=isFavorite
           description=description
           tags=tags
         }}
       {{/each}}
     </div>
  </div>

  <div class='flex justify-center items-center mt-6'>
    <a
      class='group rounded-full relative inline-flex h-[32px] animate-rainbow cursor-pointer items-center justify-center border-0 bg-[length:200%] px-3 max-md:px-[12px] py-2 font-medium text-primary-foreground transition-colors [background-clip:padding-box,border-box,border-box] [background-origin:border-box] [border:calc(0.08*1rem)_solid_transparent] focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 before:absolute before:bottom-[-20%] before:left-1/2 before:z-0 before:h-1/5 before:w-3/5 before:-translate-x-1/2 before:animate-rainbow before:bg-[linear-gradient(90deg,hsl(var(--color-1)),hsl(var(--color-5)),hsl(var(--color-3)),hsl(var(--color-4)),hsl(var(--color-2)))] before:[filter:blur(calc(0.8*1rem))] bg-[linear-gradient(#121213,#121213),linear-gradient(#121213_50%,rgba(18,18,19,0.6)_80%,rgba(18,18,19,0)),linear-gradient(90deg,hsl(var(--color-1)),hsl(var(--color-5)),hsl(var(--color-3)),hsl(var(--color-4)),hsl(var(--color-2)))]'
      target='_blank'
      rel='noreferrer'
      href='/usecase-from-user'
    >
      <button
        class='relative flex w-fit cursor-pointer items-center justify-center rounded-lg border-none bg-primary text-primary-foreground px-0'
        style='opacity: 1;'
      >
        <span
          class='relative flex items-center justify-center font-semibold'
          style='transform: none;'
        >
          <span
            class='group inline-flex items-center text-[13px] leading-[18px] text-white font-medium group-hover:opacity-80 duration-300'
          >
            <span class='relative top-[-1px] hidden @sm:block px-6 py-1'>Explore
              more use cases</span>
            <span class='relative top-[-1px] block @sm:hidden px-6 py-1'>Explore
              more</span>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='24'
              height='24'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='3'
              stroke-linecap='round'
              stroke-linejoin='round'
              class='lucide lucide-chevron-right ml-1 size-4'
            >
              <path d='m9 18 6-6-6-6'></path>
            </svg>
          </span>
        </span>
      </button>
    </a>
  </div>
</div>