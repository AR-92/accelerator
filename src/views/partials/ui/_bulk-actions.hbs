<div id="bulk-actions-bar" class="fixed bottom-4 left-1/2 transform -translate-x-1/2 bg-primary text-primary-foreground px-6 py-3 rounded-lg shadow-lg z-50 hidden">
  <div class="flex items-center gap-4">
    <span class="text-sm font-medium">{{selectedCount}} item(s) selected</span>
    <div class="flex gap-2">
      {{#each actions}}
      <button onclick="{{onclick}}" class="px-3 py-1 text-sm bg-primary-foreground/20 hover:bg-primary-foreground/30 rounded-md transition-colors">
        {{lucide icon 'w-4 h-4 mr-1'}}
        {{text}}
      </button>
      {{/each}}
    </div>
    <button onclick="clearSelection()" class="text-primary-foreground/70 hover:text-primary-foreground transition-colors">
      {{lucide 'X' 'w-4 h-4'}}
    </button>
  </div>
</div>