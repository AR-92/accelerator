{{#if active}}
  <a href="{{href}}"
     class="group flex items-center px-3 py-2.5 rounded-lg bg-primary text-primary-foreground shadow-sm transition-all duration-200">
     <div class="flex items-center justify-center w-8 h-8 bg-primary-foreground/20 rounded-md mr-3 transition-colors">
         {{lucide icon 'w-4 h-4'}}
     </div>
     <span class="font-medium">{{text}}</span>
  </a>
{{else}}
  <a href="{{href}}"
     class="group flex items-center px-3 py-2.5 rounded-lg text-muted-foreground hover:text-foreground hover:bg-muted/50 transition-all duration-200">
     <div class="flex items-center justify-center w-8 h-8 group-hover:bg-muted rounded-md mr-3 transition-colors">
         {{lucide icon 'w-4 h-4'}}
     </div>
     <span class="font-medium">{{text}}</span>
  </a>
{{/if}}