<div class="mb-4">
  <label for="{{id}}" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
    {{label}}
    {{#if required}}<span class="text-red-500">*</span>{{/if}}
  </label>
  <input
    type="{{type}}"
    id="{{id}}"
    name="{{id}}"
    value="{{value}}"
    placeholder="{{placeholder}}"
    {{#if required}}required{{/if}}
    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary {{#if error}}border-red-500{{/if}}"
  />
  {{#if error}}
  <p class="mt-1 text-sm text-red-600">{{error}}</p>
  {{/if}}
</div>