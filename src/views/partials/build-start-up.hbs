<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Helper to get expanded states from localStorage
    function getExpandedStates() {
      try {
        return JSON.parse(localStorage.getItem('sidebarExpandedStates') || '{}');
      } catch {
        return {};
      }
    }

    // Helper to save expanded states to localStorage
    function saveExpandedStates(states) {
      try {
        localStorage.setItem('sidebarExpandedStates', JSON.stringify(states));
      } catch {
        // Ignore if localStorage fails
      }
    }

    // Add click handlers for collapsible items
    const collapsibleItems = document.querySelectorAll('[data-collapsible="true"]');

    collapsibleItems.forEach(item => {
      item.addEventListener('click', function (e) {
        // Don't trigger if ellipsis menu was clicked
        if (e.target.closest('[aria-haspopup="dialog"]')) {
          return;
        }

        const targetId = this.getAttribute('data-target');
        const targetElement = document.getElementById(targetId);
        const chevron = this.querySelector('[data-icon="chevron"]');

        if (targetElement) {
          // Toggle the content visibility
          const isHidden = targetElement.classList.contains('hidden');
          targetElement.classList.toggle('hidden');

          // Rotate the chevron icon
          chevron.classList.toggle('rotate-180');

          // Update aria-expanded
          item.setAttribute('aria-expanded', !isHidden ? 'true' : 'false');

          // Update localStorage for state persistence
          const states = getExpandedStates();
          states[targetId] = !isHidden; // Store if now expanded
          saveExpandedStates(states);

          // Store last clicked for test page expansion
          try {
            localStorage.setItem('lastClickedProject', targetId);
          } catch {}


        }
      });
    });

    // Restore expanded states on page load
    const states = getExpandedStates();
    Object.keys(states).forEach(targetId => {
      if (states[targetId]) {
        const el = document.getElementById(targetId);
        const item = document.querySelector(`[data-target="${targetId}"]`);
        const chevron = item?.querySelector('[data-icon="chevron"]');
        if (el && el.classList.contains('hidden')) {
          el.classList.remove('hidden');
          chevron?.classList.add('rotate-180');
          item?.setAttribute('aria-expanded', 'true');
        }
      }
    });



    // Add dropdown toggle handlers
    document.querySelectorAll('[data-dropdown-toggle]').forEach(toggle => {
      toggle.addEventListener('click', function(e) {
        e.stopPropagation();
        const menu = this.querySelector('[data-dropdown-menu]');
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        // Close other menus
        document.querySelectorAll('[data-dropdown-menu]').forEach(m => {
          if (m !== menu) m.classList.add('hidden');
        });
        document.querySelectorAll('[data-dropdown-toggle]').forEach(t => {
          if (t !== this) t.setAttribute('aria-expanded', 'false');
        });
        if (!isExpanded) {
          menu.classList.remove('hidden');
          this.setAttribute('aria-expanded', 'true');
        } else {
          menu.classList.add('hidden');
          this.setAttribute('aria-expanded', 'false');
        }
      });
    });

