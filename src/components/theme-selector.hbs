<!-- Theme Selector Component -->
<div class="theme-selector relative">
  <button id="theme-toggle" class="theme-toggle-btn p-2 rounded-full bg-accent hover:bg-accent-foreground/10 transition-colors" aria-label="Toggle theme">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
    </svg>
  </button>
  <div id="theme-dropdown" class="theme-dropdown absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-popover text-popover-foreground z-50 hidden">
    <div class="py-1">
      {{#each themes}}
      <button 
        data-theme="{{this.id}}" 
        class="theme-option block w-full text-left px-4 py-2 text-sm hover:bg-accent hover:text-accent-foreground {{#if (eq this.id ../currentTheme)}}bg-accent text-accent-foreground{{/if}}"
      >
        {{this.name}}
      </button>
      {{/each}}
    </div>
  </div>
</div>