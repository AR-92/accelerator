<div class='flex flex-col gap-4 lg:gap-6'>
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1 class='font-heading text-2xl font-semibold dark:text-white'>Startup
        Overview</h1>
      <p class='text-base text-muted-foreground'>Monitor your startup's progress
        and key metrics.</p>
    </div>
    <div class='flex items-center gap-2'>
      <button
        class='flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='16'
          height='16'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-plus'
        >
          <path d='M5 12h14' />
          <path d='M12 5v14' />
        </svg>
        New Project
      </button>
    </div>
  </div>

  <!-- Startup Metrics -->
  <div
    class='grid grid-cols-1 gap-[17px] sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5'
  >
    <div
      class='rounded-md bg-card px-2 py-[40px] text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='flex items-center justify-between px-[10px] py-[4px]'>
        <div class='flex flex-col gap-[4px]'>
          <h3
            class='text-[14px] font-[500] text-gray-500 dark:text-gray-400'
          >Active Projects</h3>
          <p
            class='text-[18px] font-[600] text-gray-900 dark:text-gray-100'
          >12</p>
        </div>
        <div>
          <div style='background:#E3F2FD; border-radius: 6px;'>
            <div
              style='width:38px; height:38px; background:#E3F2FD; border-radius:50%; position:relative;'
            >
              <div
                class='flex items-center justify-center'
                style='width:35px; height:35px; background:#2196F3; border-radius:50%; position:absolute; top:1.5px; left:1.5px;'
              >{{lucide 'FolderOpen' 'w-4 h-4 text-white'}}</div>
            </div>
          </div>
        </div>
      </div>
      <p
        class='flex items-center gap-[4px] text-[13px] font-[500] text-gray-500 dark:text-gray-400'
      >
        {{lucide 'TrendingUp' 'w-5 h-4' style='color: #2196F3'}}
        <span class='text-[#2196F3] dark:text-blue-400'>+2</span>Since last
        month
      </p>
    </div>

    <div
      class='rounded-md bg-card px-2 py-[40px] text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='flex items-center justify-between px-[10px] py-[4px]'>
        <div class='flex flex-col gap-[4px]'>
          <h3
            class='text-[14px] font-[500] text-gray-500 dark:text-gray-400'
          >Total Ideas</h3>
          <p
            class='text-[18px] font-[600] text-gray-900 dark:text-gray-100'
          >47</p>
        </div>
        <div>
          <div style='background:#FFF3E0; border-radius: 6px;'>
            <div
              style='width:38px; height:38px; background:#FFF3E0; border-radius:50%; position:relative;'
            >
              <div
                class='flex items-center justify-center'
                style='width:35px; height:35px; background:#FF9800; border-radius:50%; position:absolute; top:1.5px; left:1.5px;'
              >{{lucide 'Lightbulb' 'w-4 h-4 text-white'}}</div>
            </div>
          </div>
        </div>
      </div>
      <p
        class='flex items-center gap-[4px] text-[13px] font-[500] text-gray-500 dark:text-gray-400'
      >
        {{lucide 'TrendingUp' 'w-5 h-4' style='color: #FF9800'}}
        <span class='text-[#FF9800] dark:text-yellow-400'>+8</span>Since last
        month
      </p>
    </div>

    <div
      class='rounded-md bg-card px-2 py-[40px] text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='flex items-center justify-between px-[10px] py-[4px]'>
        <div class='flex flex-col gap-[4px]'>
          <h3
            class='text-[14px] font-[500] text-gray-500 dark:text-gray-400'
          >Team Members</h3>
          <p
            class='text-[18px] font-[600] text-gray-900 dark:text-gray-100'
          >15</p>
        </div>
        <div>
          <div style='background:#FCE4EC; border-radius: 6px;'>
            <div
              style='width:38px; height:38px; background:#FCE4EC; border-radius:50%; position:relative;'
            >
              <div
                class='flex items-center justify-center'
                style='width:35px; height:35px; background:#E91E63; border-radius:50%; position:absolute; top:1.5px; left:1.5px;'
              >{{lucide 'Users' 'w-4 h-4 text-white'}}</div>
            </div>
          </div>
        </div>
      </div>
      <p
        class='flex items-center gap-[4px] text-[13px] font-[500] text-gray-500 dark:text-gray-400'
      >
        {{lucide 'TrendingUp' 'w-5 h-4' style='color: #E91E63'}}
        <span class='text-[#E91E63] dark:text-pink-400'>+3</span>Since last
        month
      </p>
    </div>

    <div
      class='rounded-md bg-card px-2 py-[40px] text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='flex items-center justify-between px-[10px] py-[4px]'>
        <div class='flex flex-col gap-[4px]'>
          <h3
            class='text-[14px] font-[500] text-gray-500 dark:text-gray-400'
          >Funding Raised</h3>
          <p
            class='text-[18px] font-[600] text-gray-900 dark:text-gray-100'
          >$125K</p>
        </div>
        <div>
          <div style='background:#E8F5E8; border-radius: 6px;'>
            <div
              style='width:38px; height:38px; background:#E8F5E8; border-radius:50%; position:relative;'
            >
              <div
                class='flex items-center justify-center'
                style='width:35px; height:35px; background:#4CAF50; border-radius:50%; position:absolute; top:1.5px; left:1.5px;'
              >{{lucide 'DollarSign' 'w-4 h-4 text-white'}}</div>
            </div>
          </div>
        </div>
      </div>
      <p
        class='flex items-center gap-[4px] text-[13px] font-[500] text-gray-500 dark:text-gray-400'
      >
        {{lucide 'TrendingUp' 'w-5 h-4' style='color: #4CAF50'}}
        <span class='text-[#4CAF50] dark:text-green-400'>+25%</span>Since last
        month
      </p>
    </div>

    <div
      class='rounded-md bg-card px-2 py-[40px] text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='flex items-center justify-between px-[10px] py-[4px]'>
        <div class='flex flex-col gap-[4px]'>
          <h3
            class='text-[14px] font-[500] text-gray-500 dark:text-gray-400'
          >Growth Rate</h3>
          <p
            class='text-[18px] font-[600] text-gray-900 dark:text-gray-100'
          >18%</p>
        </div>
        <div>
          <div style='background:#F3E5F5; border-radius: 6px;'>
            <div
              style='width:38px; height:38px; background:#F3E5F5; border-radius:50%; position:relative;'
            >
              <div
                class='flex items-center justify-center'
                style='width:35px; height:35px; background:#9C27B0; border-radius:50%; position:absolute; top:1.5px; left:1.5px;'
              >{{lucide 'TrendingUp' 'w-4 h-4 text-white'}}</div>
            </div>
          </div>
        </div>
      </div>
      <p
        class='flex items-center gap-[4px] text-[13px] font-[500] text-gray-500 dark:text-gray-400'
      >
        {{lucide 'TrendingUp' 'w-5 h-4' style='color: #9C27B0'}}
        <span class='text-[#9C27B0] dark:text-purple-400'>+5%</span>Since last
        month
      </p>
    </div>
  </div>
</div>