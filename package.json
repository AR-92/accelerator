{
  "name": "accelerator",
  "version": "1.0.0",
  "description": "A comprehensive web application accelerator",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:tailwind\" \"npm run dev:browser-sync\"",
    "dev:server": "nodemon server.js",
    "dev:tailwind": "npx tailwindcss -i ./src/input.css -o ./public/css/main.css --watch",
    "dev:browser-sync": "browser-sync start --proxy 'localhost:3000' --port 3002 --files 'src/views/**/*.hbs, public/**/*.js, public/**/*.css' --reload-delay 500",
    "build": "npm run build:css && npm run build:clean && echo 'Build completed successfully'",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/css/main.css --minify",
    "build:css:optimized": "NODE_ENV=production npx tailwindcss -i ./src/input.css -o ./public/css/main.css --minify --config tailwind.config.js",
    "build:analyze": "NODE_ENV=production npx tailwindcss -i ./src/input.css -o ./public/css/main.css --minify --config postcss.config.optimized.js",
    "build:clean": "rm -rf dist && mkdir -p dist && cp -r public src config server.js package*.json .env.example dist/",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:staging": "npm run build && echo 'Deploy to staging environment'",
    "deploy:prod": "npm run build && echo 'Deploy to production environment'",
    "perf:check": "npm run build:analyze && echo 'Performance analysis completed'"
  },
  "keywords": [
    "express",
    "handlebars",
    "tailwind",
    "langgraph",
    "ai",
    "agent",
    "template"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/accelerator.git"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@langchain/community": "^0.3.0",
    "@langchain/core": "^1.0.1",
    "@langchain/groq": "^0.1.0",
    "@langchain/langgraph": "^1.0.1",
    "@langchain/langgraph-checkpoint": "^1.0.0",
    "@langchain/openai": "^0.3.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "cssnano": "^7.1.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^7.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "lucide-static": "^0.548.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.18.3"
  }
}
