{
  "name": "accelerator",
  "version": "1.0.0",
  "description": "A comprehensive web application accelerator",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:fast": "SKIP_DB_MIGRATION=true node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:tailwind\" \"npm run dev:browser-sync\"",
    "dev:server": "SKIP_DB_MIGRATION=true nodemon server.js",
    "dev:tailwind": "npx tailwindcss -i ./src/input.css -o ./public/css/main.css --watch",
    "dev:browser-sync": "browser-sync start --proxy 'localhost:3000' --port 3002 --files 'src/views/**/*.hbs, public/**/*.js, public/**/*.css' --reload-delay 500",
    "build": "npx tailwindcss -i ./src/input.css -o ./public/css/main.css --minify",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "bash setup-db.sh",
    "db:schema": "bash -c 'psql -U \"${DB_USER:-postgres}\" -d \"${DB_NAME:-accelerator_db}\" -f sql/database-schema.sql'",
    "db:test": "bash -c 'psql -U \"${DB_USER:-postgres}\" -d \"${DB_NAME:-accelerator_db}\" -f sql/test-database.sql'",
    "db:migrate": "node -e \"require('./config/database').runMigrations()\""
  },
  "keywords": [
    "express",
    "handlebars",
    "tailwind",
    "ai",
    "agent",
    "template"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/accelerator.git"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "bcrypt": "^6.0.0",
    "concurrently": "^9.2.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "lucide-static": "^0.548.0",
    "pg": "^8.13.1",
    "systeminformation": "^5.27.11",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.18.3"
  }
}
