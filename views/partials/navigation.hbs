<div class="w-64 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 min-h-screen flex flex-col">
    <div class="p-5 border-b border-gray-200 dark:border-gray-700">
        <div class="flex justify-center">
            <img src="/public/images/accelerator_logo.svg" alt="Accelerator Logo" class="w-full max-w-[80%] h-auto">
        </div>
    </div>
    <nav class="flex-grow p-3">
        <a href="/pages/dashboard" class="block py-2.5 px-3 rounded text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-200 transition mb-1.5 {{#if isActiveDashboard}}bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-200{{/if}}">Dashboard</a>
        <a href="/pages/portfolio" class="block py-2.5 px-3 rounded text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-200 transition mb-1.5 {{#if isActivePortfolio}}bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-200{{/if}}">Portfolio</a>
        <a href="/pages/chat" class="block py-2.5 px-3 rounded text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-200 transition mb-1.5 {{#if isActiveChat}}bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-200{{/if}}">Chat</a>
        <a href="/pages/ideas" class="block py-2.5 px-3 rounded text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-200 transition mb-1.5 {{#if isActiveIdeas}}bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-200{{/if}}">Ideas</a>
        <a href="/pages/reports" class="block py-2.5 px-3 rounded text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-200 transition mb-1.5 {{#if isActiveReports}}bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-200{{/if}}">Reports</a>
        <a href="/pages/settings" class="block py-2.5 px-3 rounded text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-200 transition mb-1.5 {{#if isActiveSettings}}bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-200{{/if}}">Settings</a>
    </nav>
    <div class="p-3 border-t border-gray-200 dark:border-gray-700">
        <div class="flex justify-between items-center mb-3">
            <span class="text-gray-500 dark:text-gray-400 text-sm font-medium">Theme</span>
            <button id="theme-toggle" onclick="toggleTheme()" class="relative inline-flex items-center justify-center w-14 h-7 rounded-full bg-gradient-to-r from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 transition-all duration-300 shadow-sm hover:shadow-md border border-gray-300 dark:border-gray-600">
                <div class="absolute left-1 flex items-center justify-center w-5 h-5 bg-white dark:bg-gray-800 rounded-full shadow-md transition-all duration-300 transform"
                      id="theme-toggle-indicator">
                    <svg class="w-3 h-3 text-yellow-500 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                    </svg>
                    <svg class="w-3 h-3 text-gray-700 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                    </svg>
                </div>
            </button>
        </div>
        <form action="/auth/logout" method="POST" class="w-full">
            <button type="submit" class="w-full py-2 px-3 bg-primary-purple hover:bg-primary-purple-hover text-white rounded transition text-sm">
                Logout
            </button>
        </form>
        <p class="text-center text-gray-500 dark:text-gray-400 text-xs mt-3">&copy; 2025 Accelerator</p>
    </div>
</div>