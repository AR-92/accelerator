{{#if simple}}
<div class='mb-8'>
  <div class='text-left'>
    <h1 class='text-3xl font-bold text-foreground mb-2'>{{title}}</h1>
    <p class='text-muted-foreground'>{{description}}</p>
  </div>
</div>
{{else}}
<header class='sticky top-0 z-20 text-card-foreground p-5{{#if border}} border-b border-border{{/if}}'>
  <!-- Page Title and Description -->
  <div class='mb-6 flex justify-between'>
    <div class='text-left'>
      <h1 class='text-3xl font-bold text-card-foreground mb-2'>{{title}}</h1>
      <p class='text-muted-foreground'>{{description}}</p>
    </div>
    {{#if backLink}}
    <div class="flex items-center gap-3">
      <a href="{{backLink}}" class="inline-flex items-center px-4 py-2 border border-input rounded-md text-sm font-medium text-card-foreground bg-background hover:bg-accent hover:text-accent-foreground transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {{backText}}
      </a>
    </div>
    {{/if}}
  </div>
  <div class='max-w-7xl mx-auto flex items-center gap-4'>
  </div>
</header>
{{/if}}