<!-- Filter Navigation Bar -->
 <nav class="bg-card text-card-foreground px-4 border-b border-border flex items-center justify-between min-h-9">
  <!-- Left Section: Icon and Filter Links -->
   <div class="flex items-center gap-4">
     <!-- Sidebar Toggle Button -->
       <button id="sidebar-toggle" class="w-6 h-6 ml-1 mr-6 flex items-center justify-center hover:bg-accent rounded-md transition-colors" onclick="toggleSidebar()" title="Toggle Sidebar">
        {{{icon 'panel-right' size='16' class='text-muted-foreground w-4 h-4'}}}
      </button>
     <!-- Filter Links -->
       <div class="flex flex-col items-center justify-center group">
         <div class="border-t-4 border-primary w-6 rounded-full {{#unless query.status}}opacity-100{{else}}opacity-0{{/unless}} group-hover:opacity-100"></div>
         <a href="/todos" class="{{#unless query.status}}text-foreground font-medium{{/unless}} {{#if query.status}}text-muted-foreground{{/if}} text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium" hx-get="/todos" hx-target="#todosTableContainer">All Todos</a>
      </div>
       <div class="flex flex-col items-center justify-center group">
         <div class="border-t-4 border-primary w-6 rounded-full {{#if (eq query.status 'pending')}}opacity-100{{else}}opacity-0{{/if}} group-hover:opacity-100"></div>
         <a href="/todos?status=pending" class="{{#if (eq query.status 'pending')}}text-foreground font-medium{{else}}text-muted-foreground{{/if}} text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium" hx-get="/todos?status=pending" hx-target="#todosTableContainer">Pending</a>
      </div>
       <div class="flex flex-col items-center justify-center group">
         <div class="border-t-4 border-primary w-6 rounded-full {{#if (eq query.status 'completed')}}opacity-100{{else}}opacity-0{{/if}} group-hover:opacity-100"></div>
         <a href="/todos?status=completed" class="{{#if (eq query.status 'completed')}}text-foreground font-medium{{else}}text-muted-foreground{{/if}} text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium" hx-get="/todos?status=completed" hx-target="#todosTableContainer">Completed</a>
      </div>
  </div>
  <!-- Right Section: Create Todo Button -->
  <div>
     <!-- Create Todo Button -->
     <button onclick="openCreateTodoModal()"
       class="flex items-center gap-2 px-3 py-2 rounded-md text-muted-foreground text-xs leading-[2.5] hover:bg-accent hover:text-accent-foreground focus:outline-none">
       {{{icon 'plus' size='16' class='w-4 h-4'}}}
      <span class="text-xs">Create Todo</span>
    </button>
  </div>
</nav>