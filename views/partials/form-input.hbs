<div>
    <label for="{{id}}" class="block text-sm text-slate-400 mb-2">{{label}}</label>
    <input 
        type="{{inputType}}" 
        id="{{id}}" 
        name="{{name}}" 
        {{#if value}}value="{{value}}"{{/if}}
        class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:border-transparent {{#if required}}required{{/if}}" 
        {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
    >
</div>