<div>
    <label for="{{id}}" class="block text-sm text-gray-500 mb-2">{{label}}</label>
    <input 
        type="{{inputType}}" 
        id="{{id}}" 
        name="{{name}}" 
        {{#if value}}value="{{value}}"{{/if}}
        class="w-full px-4 py-3 bg-white border border-gray-300 rounded-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-primary-purple focus:border-transparent {{#if required}}required{{/if}}" 
        {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}
    >
</div>