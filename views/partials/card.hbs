{{!-- partials/card.hbs --}}
<div class="rounded-lg border bg-card text-card-foreground shadow-sm">
  {{#if header}}<div class="flex flex-col space-y-1.5 p-6">{{#if title}}<h3 class="text-2xl font-semibold leading-none tracking-tight">{{title}}</h3>{{/if}}{{#if description}}<p class="text-sm text-muted-foreground">{{description}}</p>{{/if}}</div>{{/if}}
  {{#if content}}<div class="p-6 pt-0">{{{content}}}</div>{{/if}}
  {{#if footer}}<div class="flex items-center p-6 pt-0">{{{footer}}}</div>{{/if}}
  {{#if body}}{{{body}}}{{/if}}
</div>