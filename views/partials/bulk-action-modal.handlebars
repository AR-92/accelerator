<!-- Generic Bulk Action Confirmation Modal -->
<div id="{{modalId}}" data-modal-backdrop class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden" role="dialog" aria-hidden="true">
  <div class="bg-card p-6 rounded-lg shadow-lg max-w-md w-full mx-4">
    <h3 id="{{titleId}}" class="text-lg font-semibold mb-4 text-card-foreground">{{#if defaultTitle}}{{defaultTitle}}{{else}}Bulk Action{{/if}}</h3>
    <p id="{{messageId}}" class="text-sm text-muted-foreground mb-6">{{#if defaultMessage}}{{defaultMessage}}{{else}}Are you sure?{{/if}}</p>
    <div class="flex justify-end gap-2">
      <button type="button" data-modal-close {{#if cancelAction}}onclick="{{cancelAction}}"{{/if}} class="px-4 py-2 text-sm font-medium text-muted-foreground hover:bg-accent rounded-md">Cancel</button>
      <button id="{{confirmBtnId}}" type="button" {{#if confirmAction}}onclick="{{confirmAction}}"{{/if}}       class="px-4 py-2 text-sm font-medium {{#if defaultConfirmClass}}{{defaultConfirmClass}}{{else}}bg-primary/10 text-primary hover:bg-primary/20{{/if}} rounded-md">{{#if defaultConfirmText}}{{defaultConfirmText}}{{else}}Confirm{{/if}}</button>
    </div>
  </div>
</div>