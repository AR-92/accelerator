{{!-- partials/modal.hbs --}}
<div id="modal-{{id}}" class="fixed inset-0 z-50 hidden flex items-center justify-center" role="dialog" aria-modal="true" aria-hidden="true">
  <div class="fixed inset-0 z-50 bg-black/80" data-modal-backdrop></div>

  <div class="relative z-50 grid w-full max-w-lg gap-4 border bg-background p-6 shadow-lg duration-200 sm:rounded-lg">
    {{#if header}}<div class="flex flex-col space-y-1.5 text-center sm:text-left">
      <h3 class="text-lg font-semibold leading-none tracking-tight">{{title}}</h3>
      {{#if description}}<p class="text-sm text-muted-foreground">{{description}}</p>{{/if}}
      <button type="button" class="close-modal absolute right-4 top-4 rounded-sm opacity-70 ring-offset-background transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:pointer-events-none data-[state=open]:bg-accent data-[state=open]:text-muted-foreground" data-modal-close aria-label="Close">
        âœ•
      </button>
    </div>{{/if}}

    <div class="modal-body text-sm">{{{body}}}</div>

    {{#if footer}}<div class="flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2">{{{footer}}}</div>{{/if}}
  </div>
</div>