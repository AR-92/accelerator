<!-- Dashboard Container -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden bg-card ring-1 ring-border flex flex-col min-h-[600px] mx-4 my-4">

  <!-- Page Header -->
  <header class="sticky top-0 z-20 bg-card text-card-foreground p-5 border-b border-border">
    <!-- Page Title and Description -->
    <div class="mb-6 flex justify-between">

      <div class="text-left">
        <h1 class="text-3xl font-bold text-card-foreground mb-2">Dashboard</h1>
        <p class="text-muted-foreground">Welcome to your task management system</p>
      </div>

    </div>
  </header>

  <!-- Dashboard Content -->
  <div class="flex-1 p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">

      <!-- Quick Stats -->
      <div class="bg-gradient-to-r from-primary to-primary/80 rounded-lg p-6 text-primary-foreground">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-primary-foreground/80 text-sm font-medium">Total Todos</p>
            <p class="text-2xl font-bold">{{totalTodos}}</p>
          </div>
          <svg class="w-8 h-8 text-primary-foreground/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
      </div>

      <div class="bg-gradient-to-r from-secondary to-secondary/80 rounded-lg p-6 text-secondary-foreground">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-secondary-foreground/80 text-sm font-medium">Completed</p>
            <p class="text-2xl font-bold">{{completedTodos}}</p>
          </div>
          <svg class="w-8 h-8 text-secondary-foreground/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>

      <div class="bg-gradient-to-r from-accent to-accent/80 rounded-lg p-6 text-accent-foreground">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-accent-foreground/80 text-sm font-medium">Pending</p>
            <p class="text-2xl font-bold">{{pendingTodos}}</p>
          </div>
          <svg class="w-8 h-8 text-accent-foreground/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>

    </div>

    <!-- Quick Actions -->
    <div class="bg-muted/50 rounded-lg p-6 mb-8">
      <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <a href="/todos" class="flex items-center p-4 bg-card rounded-lg border border-border hover:border-primary hover:shadow-md transition-all">
          <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <span class="text-sm font-medium text-card-foreground">View All Todos</span>
        </a>

        <button onclick="openAddTodoModal()" class="flex items-center p-4 bg-card rounded-lg border border-border hover:border-primary hover:shadow-md transition-all">
          <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span class="text-sm font-medium text-card-foreground">Add New Todo</span>
        </button>

        <a href="/admin/dashboard" class="flex items-center p-4 bg-card rounded-lg border border-border hover:border-primary hover:shadow-md transition-all">
          <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-sm font-medium text-card-foreground">Admin Panel</span>
        </a>

        <a href="/admin/users" class="flex items-center p-4 bg-card rounded-lg border border-border hover:border-primary hover:shadow-md transition-all">
          <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          <span class="text-sm font-medium text-card-foreground">Manage Users</span>
        </a>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-card rounded-lg border border-border p-6">
      <h3 class="text-lg font-semibold text-card-foreground mb-4">Recent Activity</h3>
      <div class="space-y-4">
        {{#if recentTodos}}
          {{#each recentTodos}}
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-card-foreground">{{title}}</p>
              <p class="text-sm text-muted-foreground">{{formatDate created_at}}</p>
            </div>
            <div class="flex-shrink-0">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if completed}}bg-success/10 text-success{{else}}bg-warning/10 text-warning{{/if}}">
                {{#if completed}}Completed{{else}}Pending{{/if}}
              </span>
            </div>
          </div>
          {{/each}}
        {{else}}
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-card-foreground">No recent activity</h3>
            <p class="mt-1 text-sm text-muted-foreground">Get started by creating your first todo.</p>
            <div class="mt-6">
              <button onclick="openAddTodoModal()" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-primary-foreground bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Todo
              </button>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
