<div class='flex flex-col gap-4 lg:gap-6'>
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1 class='font-heading text-2xl font-semibold dark:text-white'>Activity
        Timeline</h1>
      <p class='text-base text-muted-foreground'>Track recent team activities,
        updates, and changes.</p>
    </div>
    <div class='flex items-center gap-2'>
      <button
        class='flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-muted'
      >
        {{lucide 'Filter' 'w-4 h-4'}}
        Filter
      </button>
      <button
        class='flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-muted'
      >
        {{lucide 'Download' 'w-4 h-4'}}
        Export
      </button>
    </div>
  </div>

  <!-- Activity Stats -->
  <div class='grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4'>
    <div class='rounded-md bg-card p-4 text-card-foreground shadow-sm'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Today's
            Activities</p>
          <p class='text-2xl font-bold'>24</p>
        </div>
        <div
          class='h-8 w-8 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center'
        >
          {{lucide 'Activity' 'w-4 h-4 text-blue-600 dark:text-blue-400'}}
        </div>
      </div>
    </div>

    <div class='rounded-md bg-card p-4 text-card-foreground shadow-sm'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>This Week</p>
          <p class='text-2xl font-bold'>156</p>
        </div>
        <div
          class='h-8 w-8 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center'
        >
          {{lucide 'Calendar' 'w-4 h-4 text-green-600 dark:text-green-400'}}
        </div>
      </div>
    </div>

    <div class='rounded-md bg-card p-4 text-card-foreground shadow-sm'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Active Users</p>
          <p class='text-2xl font-bold'>8</p>
        </div>
        <div
          class='h-8 w-8 rounded-full bg-purple-100 dark:bg-purple-900 flex items-center justify-center'
        >
          {{lucide 'Users' 'w-4 h-4 text-purple-600 dark:text-purple-400'}}
        </div>
      </div>
    </div>

    <div class='rounded-md bg-card p-4 text-card-foreground shadow-sm'>
      <div class='flex items-center justify-between'>
        <div>
          <p class='text-sm font-medium text-muted-foreground'>Files Modified</p>
          <p class='text-2xl font-bold'>12</p>
        </div>
        <div
          class='h-8 w-8 rounded-full bg-orange-100 dark:bg-orange-900 flex items-center justify-center'
        >
          {{lucide 'FileText' 'w-4 h-4 text-orange-600 dark:text-orange-400'}}
        </div>
      </div>
    </div>
  </div>

  <!-- Activity Timeline -->
  <div class='bg-card rounded-lg shadow-sm border border-border'>
    <div class='p-6'>
      <div class='space-y-6'>
        <!-- Activity Item -->
        <div class='flex gap-4'>
          <div class='flex flex-col items-center'>
            <div
              class='w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white text-sm font-bold'
            >
              JD
            </div>
            <div class='w-0.5 h-16 bg-border mt-2'></div>
          </div>
          <div class='flex-1 pb-6'>
            <div class='flex items-center gap-2 mb-2'>
              <span class='font-medium text-foreground'>John Doe</span>
              <span class='text-sm text-muted-foreground'>updated the project
                timeline</span>
              <span class='text-xs text-muted-foreground'>2 hours ago</span>
            </div>
            <p class='text-sm text-muted-foreground'>Modified 3 tasks and added
              new milestones for Q1 2025</p>
            <div class='mt-2 flex gap-2'>
              <span
                class='px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs rounded-full'
              >Project Update</span>
            </div>
          </div>
        </div>

        <div class='flex gap-4'>
          <div class='flex flex-col items-center'>
            <div
