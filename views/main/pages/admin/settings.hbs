<div class='flex flex-col gap-4 lg:gap-6'>
  <!-- Header -->
  <div class='flex items-center justify-between'>
    <div class='grid gap-1'>
      <h1
        class='font-heading text-2xl font-semibold text-foreground dark:text-white'
      >System Settings</h1>
      <p class='text-base text-muted-foreground'>Configure application settings
        and preferences.</p>
    </div>
  </div>

  <!-- Settings Sections -->
  <div class='space-y-6'>
    <!-- General Settings -->
    <div
      class='rounded-md bg-card text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='px-6 py-4 border-b border-border'>
        <h2 class='text-lg font-medium text-foreground'>General Settings</h2>
        <p class='text-sm text-muted-foreground'>Basic application configuration</p>
      </div>
      <div class='p-6 space-y-4'>
        <div>
          <label
            class='block text-sm font-medium text-foreground mb-2'
          >Application Name</label>
          <input
            type='text'
            value='Accelerator Platform'
            class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            readonly
          />
        </div>
        <div>
          <label class='block text-sm font-medium text-foreground mb-2'>Default
            User Role</label>
          <select
            class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
          >
            <option value='startup' selected>Startup</option>
            <option value='corporate'>Corporate</option>
            <option value='enterprise'>Enterprise</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Credit Settings -->
    <div
      class='rounded-md bg-card text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='px-6 py-4 border-b border-border'>
        <h2 class='text-lg font-medium text-foreground'>Credit System</h2>
        <p class='text-sm text-muted-foreground'>Configure credit allocation and
          pricing</p>
      </div>
      <div class='p-6 space-y-4'>
        <div>
          <label class='block text-sm font-medium text-foreground mb-2'>Default
            Credits for New Users</label>
          <input
            type='number'
            value='100'
            class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            min='0'
          />
        </div>
        <div>
          <label class='block text-sm font-medium text-foreground mb-2'>Credit
            Cost per AI Request</label>
          <input
            type='number'
            value='1'
            class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            min='0'
            step='0.1'
          />
        </div>
        <div>
          <label class='block text-sm font-medium text-foreground mb-2'>Monthly
            Free Credits</label>
          <div class='grid grid-cols-3 gap-4'>
            <div>
              <label
                class='block text-xs text-muted-foreground mb-1'
              >Startup</label>
              <input
                type='number'
                value='500'
                class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
                min='0'
              />
            </div>
            <div>
              <label
                class='block text-xs text-muted-foreground mb-1'
              >Corporate</label>
              <input
                type='number'
                value='2000'
                class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
                min='0'
              />
            </div>
            <div>
              <label
                class='block text-xs text-muted-foreground mb-1'
              >Enterprise</label>
              <input
                type='number'
                value='10000'
                class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
                min='0'
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Security Settings -->
    <div
      class='rounded-md bg-card text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='px-6 py-4 border-b border-border'>
        <h2 class='text-lg font-medium text-foreground'>Security Settings</h2>
        <p class='text-sm text-muted-foreground'>Configure authentication and
          security options</p>
      </div>
      <div class='p-6 space-y-4'>
        <div class='flex items-center justify-between'>
          <div>
            <label class='text-sm font-medium text-foreground'>Two-Factor
              Authentication</label>
            <p class='text-sm text-muted-foreground'>Require 2FA for admin
              accounts</p>
          </div>
          <input type='checkbox' class='rounded border-border text-primary' />
        </div>
        <div class='flex items-center justify-between'>
          <div>
            <label class='text-sm font-medium text-foreground'>Session Timeout</label>
            <p class='text-sm text-muted-foreground'>Auto-logout after
              inactivity (minutes)</p>
          </div>
          <input
            type='number'
            value='60'
            class='flex h-9 w-20 rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            min='5'
          />
        </div>
        <div class='flex items-center justify-between'>
          <div>
            <label class='text-sm font-medium text-foreground'>Password Policy</label>
            <p class='text-sm text-muted-foreground'>Minimum password length</p>
          </div>
          <input
            type='number'
            value='8'
            class='flex h-9 w-20 rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            min='6'
          />
        </div>
      </div>
    </div>

    <!-- Email Settings -->
    <div
      class='rounded-md bg-card text-card-foreground shadow-sm'
      style='box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px 0px;'
    >
      <div class='px-6 py-4 border-b border-border'>
        <h2 class='text-lg font-medium text-foreground'>Email Settings</h2>
        <p class='text-sm text-muted-foreground'>Configure email notifications
          and templates</p>
      </div>
      <div class='p-6 space-y-4'>
        <div>
          <label class='block text-sm font-medium text-foreground mb-2'>SMTP
            Server</label>
          <input
            type='text'
            placeholder='smtp.example.com'
            class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
          />
        </div>
        <div class='grid grid-cols-2 gap-4'>
          <div>
            <label class='block text-sm font-medium text-foreground mb-2'>SMTP
              Port</label>
            <input
              type='number'
              value='587'
              class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            />
          </div>
          <div>
            <label
              class='block text-sm font-medium text-foreground mb-2'
            >Encryption</label>
            <select
              class='flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm shadow-sm transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring'
            >
              <option value='tls' selected>TLS</option>
              <option value='ssl'>SSL</option>
              <option value='none'>None</option>
            </select>
          </div>
        </div>
        <div class='flex items-center justify-between'>
          <div>
            <label class='text-sm font-medium text-foreground'>Welcome Emails</label>
            <p class='text-sm text-muted-foreground'>Send welcome email to new
              users</p>
          </div>
          <input
            type='checkbox'
            checked
            class='rounded border-border text-primary'
          />
        </div>
      </div>
    </div>

    <!-- Save Button -->
    <div class='flex justify-end'>
      <button
        class='inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-9 px-4 py-2'
      >
        Save Settings
      </button>
    </div>
  </div>
</div>