<script>
  document.addEventListener('DOMContentLoaded', function() { // Add smooth
  scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function(e) { e.preventDefault(); const
  target = document.querySelector(this.getAttribute('href')); if (target) {
  target.scrollIntoView({ behavior: 'smooth', block: 'start' }); } }); }); //
  Add basic interactivity to learning tip items const tipItems =
  document.querySelectorAll('.border-b'); tipItems.forEach(item => { const
  header = item.querySelector('h3'); if (header) { header.style.cursor =
  'pointer'; header.addEventListener('click', () => { const content =
  item.querySelector('p'); content.style.display = content.style.display ===
  'none' ? 'block' : 'none'; }); } }); });
</script>

