<!-- Forgot Password Page -->
<div class="min-h-screen bg-background">
<div id="forgot-main-content" class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Reset Password</h1>
      <p class="text-base text-muted-foreground">Enter your email to receive a password reset link.</p>
    </div>
  </div>

    <!-- Reset Form -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <form class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-foreground mb-2">Email Address</label>
          <input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter your email">
        </div>
        <button type="submit" class="w-full px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">Send Reset Link</button>
      </form>
      <div class="mt-4 text-center">
        <a href="/auth" class="text-primary hover:underline text-sm">Back to Sign In</a>
      </div>
    </div>
  </div>
</div>
</div>