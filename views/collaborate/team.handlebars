<!-- Team Page -->
<div class="min-h-screen bg-background">
<div id="team-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Team Members</h1>
      <p class="text-base text-muted-foreground">Manage your team and collaborate effectively.</p>
    </div>
    <button class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
{{{icon "user-plus" class="w-4 h-4 mr-2"}}}
      Invite Member
    </button>
  </div>

    <!-- Team Stats -->
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div class="rounded-lg bg-card px-6 py-5 text-card-foreground shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Total Members</p>
            <p class="text-2xl font-semibold text-foreground">8</p>
          </div>
          <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center">
{{{icon "users" class="w-5 h-5 text-primary"}}}
          </div>
        </div>
      </div>

      <div class="rounded-lg bg-card px-6 py-5 text-card-foreground shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Active Projects</p>
            <p class="text-2xl font-semibold text-foreground">5</p>
          </div>
          <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center">
{{{icon "folder" class="w-5 h-5 text-secondary"}}}
          </div>
        </div>
      </div>

      <div class="rounded-lg bg-card px-6 py-5 text-card-foreground shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Pending Invites</p>
            <p class="text-2xl font-semibold text-foreground">2</p>
          </div>
          <div class="w-10 h-10 bg-warning/20 rounded-lg flex items-center justify-center">
{{{icon "mail" class="w-5 h-5 text-warning"}}}
          </div>
        </div>
      </div>
    </div>

    <!-- Team Members -->
