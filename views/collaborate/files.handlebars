<!-- Files Page -->
<div class="min-h-screen bg-background">
    <div id="collaborate-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
            <div class="flex items-center justify-between">
                <div class="grid gap-1">
                    <h1 class="font-heading text-2xl font-semibold text-foreground">Files</h1>
                    <p class="text-base text-muted-foreground">Shared documents and resources</p>
                </div>
                <div class="flex items-center gap-2">
                    <button class="flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-accent">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        Upload
                    </button>
                    <button class="flex items-center gap-2 px-4 py-2 bg-primary/10 text-primary rounded-md hover:bg-primary/20">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        New Folder
                    </button>
                </div>
            </div>

            <!-- File Browser -->
            <div class="bg-card rounded-lg shadow-sm">
                <!-- Toolbar -->
                <div class="flex items-center justify-between p-4 border-b border-border">
                    <div class="flex items-center gap-4">
                        <button class="p-2 hover:bg-accent rounded-md">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </button>
                        <span class="text-sm font-medium">Shared Files</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <input type="text" placeholder="Search files..." class="px-3 py-1 bg-background border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                        <button class="p-2 hover:bg-accent rounded-md">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- File List -->
                <div class="p-4">
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                        <!-- Folder -->
                        <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border hover:bg-accent cursor-pointer">
                            <div class="w-10 h-10 bg-muted rounded-md flex items-center justify-center">
                                <svg class="w-5 h-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v2H8V5z"></path>
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium truncate">Project Documents</p>
                                <p class="text-xs text-muted-foreground">12 files</p>
                            </div>
                        </div>

                        <!-- PDF File -->
                        <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border hover:bg-accent cursor-pointer">
                            <div class="w-10 h-10 bg-muted rounded-md flex items-center justify-center">
                                <svg class="w-5 h-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium truncate">Requirements.pdf</p>
                                <p class="text-xs text-muted-foreground">2.3 MB • 2 days ago</p>
                            </div>
                        </div>

                        <!-- Image File -->
                        <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border hover:bg-accent cursor-pointer">
                            <div class="w-10 h-10 bg-muted rounded-md flex items-center justify-center">
                                <svg class="w-5 h-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium truncate">Wireframes.png</p>
                                <p class="text-xs text-muted-foreground">1.8 MB • 1 week ago</p>
                            </div>
                        </div>

                        <!-- Code File -->
                        <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border hover:bg-accent cursor-pointer">
                            <div class="w-10 h-10 bg-muted rounded-md flex items-center justify-center">
                                <svg class="w-5 h-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium truncate">app.js</p>
                                <p class="text-xs text-muted-foreground">45 KB • 3 hours ago</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>