<!-- Chat Page -->
<div class="min-h-screen bg-background">
<div id="chat-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Team Chat</h1>
      <p class="text-base text-muted-foreground">Communicate with your team members in real-time.</p>
    </div>
  </div>

    <!-- Chat Interface -->
    <div class="flex flex-col lg:flex-row gap-4 h-[600px]">
      <!-- Chat List -->
      <div class="w-full lg:w-1/3 rounded-lg bg-card px-4 py-5 text-card-foreground">
        <h3 class="text-lg font-medium text-foreground mb-4">Conversations</h3>
        <div class="space-y-3">
          <div class="p-3 bg-primary/10 rounded-lg cursor-pointer">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center">
                <span class="text-primary font-medium text-sm">JD</span>
              </div>
              <div class="flex-1">
                <p class="font-medium text-foreground">John Doe</p>
                <p class="text-sm text-muted-foreground">Hey, how's the project coming along?</p>
              </div>
            </div>
          </div>
          <div class="p-3 hover:bg-muted rounded-lg cursor-pointer">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-secondary/20 rounded-full flex items-center justify-center">
                <span class="text-secondary font-medium text-sm">SM</span>
              </div>
              <div class="flex-1">
                <p class="font-medium text-foreground">Sarah Miller</p>
                <p class="text-sm text-muted-foreground">The design looks great!</p>
              </div>
            </div>
          </div>
          <div class="p-3 hover:bg-muted rounded-lg cursor-pointer">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-success/20 rounded-full flex items-center justify-center">
                <span class="text-success font-medium text-sm">MJ</span>
              </div>
              <div class="flex-1">
                <p class="font-medium text-foreground">Mike Johnson</p>
                <p class="text-sm text-muted-foreground">Meeting scheduled for tomorrow</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Chat Messages -->
      <div class="w-full lg:w-2/3 rounded-lg bg-card px-4 py-5 text-card-foreground flex flex-col">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
            <span class="text-primary font-medium">JD</span>
          </div>
          <div>
            <h3 class="font-medium text-foreground">John Doe</h3>
            <p class="text-sm text-muted-foreground">Online</p>
          </div>
        </div>

        <!-- Messages -->
        <div class="flex-1 overflow-y-auto mb-4 space-y-4">
          <div class="flex gap-3">
            <div class="w-8 h-8 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-primary font-medium text-sm">JD</span>
            </div>
            <div class="bg-muted p-3 rounded-lg">
              <p class="text-sm text-foreground">Hey, how's the project coming along? Any updates on the new features?</p>
              <p class="text-xs text-muted-foreground mt-1">2 hours ago</p>
            </div>
          </div>
          <div class="flex gap-3 justify-end">
            <div class="bg-primary p-3 rounded-lg">
              <p class="text-sm text-primary-foreground">Going well! We've completed the initial design phase and are moving into development.</p>
              <p class="text-xs text-primary-foreground/80 mt-1">1 hour ago</p>
            </div>
            <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-primary-foreground font-medium text-sm">Y</span>
            </div>
          </div>
        </div>

        <!-- Message Input -->
        <div class="flex gap-3">
          <input type="text" placeholder="Type your message..." class="flex-1 px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
          <button class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
{{{icon "send" class="w-4 h-4"}}}
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
</div>