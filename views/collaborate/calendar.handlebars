<!-- Calendar Page -->
<div class="min-h-screen bg-background">
    <div id="collaborate-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
            <div class="flex items-center justify-between">
                <div class="grid gap-1">
                    <h1 class="font-heading text-2xl font-semibold text-foreground">Calendar</h1>
                    <p class="text-base text-muted-foreground">Meetings and events scheduling</p>
                </div>
                <div class="flex items-center gap-2">
                    <button class="flex items-center gap-2 px-4 py-2 border border-border rounded-md hover:bg-accent">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Today
                    </button>
                    <button class="flex items-center gap-2 px-4 py-2 bg-primary/10 text-primary rounded-md hover:bg-primary/20">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        New Event
                    </button>
                </div>
            </div>

            <!-- Calendar Header -->
            <div class="bg-card rounded-lg shadow-sm p-4">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-4">
                        <button class="p-2 hover:bg-accent rounded-md">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </button>
                        <h2 class="text-xl font-semibold">November 2025</h2>
                        <button class="p-2 hover:bg-accent rounded-md">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="flex items-center gap-2">
                        <button class="px-3 py-1 text-sm bg-primary/10 text-primary rounded-md hover:bg-primary/20">Month</button>
                        <button class="px-3 py-1 text-sm hover:bg-accent rounded-md">Week</button>
                        <button class="px-3 py-1 text-sm hover:bg-accent rounded-md">Day</button>
                    </div>
                </div>

                <!-- Calendar Grid -->
                <div class="grid grid-cols-7 gap-px bg-border">
                    <!-- Days of week -->
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Sun</div>
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Mon</div>
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Tue</div>
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Wed</div>
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Thu</div>
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Fri</div>
                    <div class="bg-card p-2 text-center font-medium text-muted-foreground">Sat</div>

                    <!-- Calendar days -->
                    {{#each (range 1 35)}}
                    <div class="bg-card min-h-[120px] p-2 {{#if (eq this 15)}}bg-primary/5 border border-primary{{/if}}">
                        <div class="text-sm font-medium {{#if (eq this 15)}}text-primary{{/if}}">{{this}}</div>
                        <div class="mt-1 space-y-1">
                            {{#if (eq this 15)}}
                            <div class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 p-1 rounded">Team Standup 10:00 AM</div>
                            <div class="text-xs bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 p-1 rounded">Client Meeting 2:00 PM</div>
                            {{/if}}
                            {{#if (eq this 22)}}
                            <div class="text-xs bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 p-1 rounded">Sprint Review 4:00 PM</div>
                            {{/if}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="bg-card rounded-lg shadow-sm p-4">
                <h3 class="font-semibold mb-4">Upcoming Events</h3>
                <div class="space-y-3">
                    <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border">
                        <div class="w-3 h-3 bg-blue-500 rounded-full flex-shrink-0"></div>
                        <div class="flex-1">
                            <h4 class="font-medium">Team Standup</h4>
                            <p class="text-sm text-muted-foreground">Daily team sync meeting</p>
                        </div>
                        <div class="text-sm text-muted-foreground">Today, 10:00 AM</div>
                    </div>
                    <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border">
                        <div class="w-3 h-3 bg-green-500 rounded-full flex-shrink-0"></div>
                        <div class="flex-1">
                            <h4 class="font-medium">Client Presentation</h4>
                            <p class="text-sm text-muted-foreground">Present project progress to client</p>
                        </div>
                        <div class="text-sm text-muted-foreground">Tomorrow, 2:00 PM</div>
                    </div>
                    <div class="flex items-center gap-3 p-3 bg-background rounded-md border border-border">
                        <div class="w-3 h-3 bg-purple-500 rounded-full flex-shrink-0"></div>
                        <div class="flex-1">
                            <h4 class="font-medium">Sprint Planning</h4>
                            <p class="text-sm text-muted-foreground">Plan next sprint tasks and goals</p>
                        </div>
                        <div class="text-sm text-muted-foreground">Friday, 9:00 AM</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>