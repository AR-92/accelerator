<!-- Calendar Page -->
<div class="min-h-screen bg-background">
<div id="calendar-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Team Calendar</h1>
      <p class="text-base text-muted-foreground">Schedule and manage team meetings and events.</p>
    </div>
    <button class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
{{{icon "calendar" class="w-4 h-4 mr-2"}}}
      New Event
    </button>
  </div>

    <!-- Calendar Header -->
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold text-foreground">December 2024</h2>
      <div class="flex gap-2">
        <button class="p-2 hover:bg-muted rounded-md">
{{{icon "chevron-left" class="w-4 h-4"}}}
        </button>
        <button class="p-2 hover:bg-muted rounded-md">
{{{icon "chevron-right" class="w-4 h-4"}}}
        </button>
      </div>
    </div>

    <!-- Calendar Grid -->
    <div class="rounded-lg bg-card p-6 text-card-foreground">
      <div class="grid grid-cols-7 gap-1 mb-4">
        <div class="p-2 text-center font-medium text-muted-foreground">Sun</div>
        <div class="p-2 text-center font-medium text-muted-foreground">Mon</div>
        <div class="p-2 text-center font-medium text-muted-foreground">Tue</div>
        <div class="p-2 text-center font-medium text-muted-foreground">Wed</div>
        <div class="p-2 text-center font-medium text-muted-foreground">Thu</div>
        <div class="p-2 text-center font-medium text-muted-foreground">Fri</div>
        <div class="p-2 text-center font-medium text-muted-foreground">Sat</div>
      </div>

      <div class="grid grid-cols-7 gap-1">
        <!-- Calendar days would be dynamically generated -->
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">1</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">2</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">3</div>
          <div class="bg-primary/20 text-primary text-xs p-1 rounded mb-1">Team Standup</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">4</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">5</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">6</div>
          <div class="bg-secondary/20 text-secondary text-xs p-1 rounded mb-1">Client Meeting</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-muted-foreground mb-1">7</div>
        </div>
        <!-- More days... -->
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">8</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">9</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">10</div>
          <div class="bg-success/20 text-success text-xs p-1 rounded mb-1">Project Review</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">11</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">12</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">13</div>
        </div>
        <div class="min-h-[100px] p-2 border border-border rounded-md">
          <div class="text-sm font-medium text-foreground mb-1">14</div>
        </div>
      </div>
    </div>

    <!-- Upcoming Events -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <h3 class="text-xl font-semibold text-foreground mb-4">Upcoming Events</h3>
      <div class="space-y-3">
        <div class="flex items-center gap-3 p-3 border border-border rounded-lg">
          <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center">
{{{icon "users" class="w-5 h-5 text-primary"}}}
          </div>
          <div class="flex-1">
            <h4 class="font-medium text-foreground">Team Standup</h4>
            <p class="text-sm text-muted-foreground">Daily team sync meeting</p>
          </div>
          <div class="text-right">
            <p class="text-sm font-medium text-foreground">Today, 10:00 AM</p>
            <p class="text-xs text-muted-foreground">30 min</p>
          </div>
        </div>

        <div class="flex items-center gap-3 p-3 border border-border rounded-lg">
          <div class="w-10 h-10 bg-secondary/20 rounded-lg flex items-center justify-center">
{{{icon "presentation" class="w-5 h-5 text-secondary"}}}
          </div>
          <div class="flex-1">
            <h4 class="font-medium text-foreground">Client Presentation</h4>
            <p class="text-sm text-muted-foreground">Present project progress to client</p>
          </div>
          <div class="text-right">
            <p class="text-sm font-medium text-foreground">Dec 6, 2:00 PM</p>
            <p class="text-xs text-muted-foreground">1 hour</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>