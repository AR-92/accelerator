<!-- Dashboard Content -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden flex flex-col mx-4 my-4">

  <!-- Page Header -->
  <header class="sticky top-0 z-20 text-card-foreground p-5 border-b border-border">
   <!-- Page Title and Description -->
   <div class="mb-6 flex justify-between">

     <div class="text-left">
       <h1 class="text-3xl font-bold text-card-foreground mb-2">Dashboard</h1>
       <p class="text-muted-foreground">Overview of the system</p>
     </div>

   </div>
    <div class="max-w-7xl mx-auto flex items-center gap-4">
    </div>
   </header>
  <div class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
       <div class="bg-gradient-to-r from-primary to-primary/80 rounded-lg p-6 text-primary-foreground">
         <div class="flex items-center justify-between">
           <div>
             <p class="text-primary-foreground/80">Total Users</p>
             <p class="text-2xl font-bold">1,234</p>
           </div>
{{{icon 'users' size='32' class='text-primary-foreground/70'}}}
         </div>
       </div>
       <div class="bg-gradient-to-r from-secondary to-secondary/80 rounded-lg p-6 text-secondary-foreground">
         <div class="flex items-center justify-between">
           <div>
             <p class="text-secondary-foreground/80">Active Todos</p>
             <p class="text-2xl font-bold">567</p>
           </div>
{{{icon 'clipboard-list' size='32' class='text-secondary-foreground/70'}}}
         </div>
       </div>
       <div class="bg-gradient-to-r from-accent to-accent/80 rounded-lg p-6 text-accent-foreground">
         <div class="flex items-center justify-between">
           <div>
             <p class="text-accent-foreground/80">Ideas Submitted</p>
             <p class="text-2xl font-bold">89</p>
           </div>
{{{icon 'lightbulb' size='32' class='text-accent-foreground/70'}}}
         </div>
       </div>
       <div class="bg-gradient-to-r from-muted to-muted/80 rounded-lg p-6 text-muted-foreground">
         <div class="flex items-center justify-between">
           <div>
             <p class="text-muted-foreground/80">Revenue</p>
             <p class="text-2xl font-bold">$12,345</p>
           </div>
{{{icon 'dollar-sign' size='32' class='text-muted-foreground/70'}}}
         </div>
       </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
       <div class="bg-card rounded-lg border border-border p-6">
         <h3 class="text-lg font-semibold text-card-foreground mb-4">Recent Activity</h3>
         <div class="space-y-3">
           <div class="flex items-center space-x-3">
             <div class="w-2 h-2 bg-green-500 rounded-full"></div>
             <p class="text-sm text-muted-foreground">New user registered</p>
             <span class="text-xs text-muted-foreground ml-auto">2 min ago</span>
           </div>
           <div class="flex items-center space-x-3">
             <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
             <p class="text-sm text-muted-foreground">Todo completed</p>
             <span class="text-xs text-muted-foreground ml-auto">5 min ago</span>
           </div>
           <div class="flex items-center space-x-3">
             <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
             <p class="text-sm text-muted-foreground">New idea submitted</p>
             <span class="text-xs text-muted-foreground ml-auto">10 min ago</span>
           </div>
         </div>
      </div>
       <div class="bg-card rounded-lg border border-border p-6">
         <h3 class="text-lg font-semibold text-card-foreground mb-4">System Status</h3>
         <div class="space-y-3">
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">Database</span>
             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Healthy</span>
           </div>
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">API</span>
             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Healthy</span>
           </div>
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">Storage</span>
             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">Warning</span>
           </div>
         </div>
       </div>
    </div>
  </div>
</div>