<!-- System Health Content -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden bg-card ring-1 ring-border flex flex-col min-h-[600px] mx-4 my-4">
  <header class="sticky top-0 z-20 bg-card text-card-foreground p-5 border-b border-border">
    <div class="text-left">
      <h1 class="text-3xl font-bold text-card-foreground mb-2">System Health</h1>
      <p class="text-muted-foreground">Monitor system performance and health metrics</p>
    </div>
  </header>
   <div class="p-6 space-y-6">
     <!-- System Status Overview -->
     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Database Status -->
        <div class="bg-card rounded-lg border border-border p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-muted-foreground">Database</p>
              <p class="text-2xl font-bold {{#if systemMetrics.dbConnected}}text-green-600 dark:text-green-400{{else}}text-red-600 dark:text-red-400{{/if}}" id="db-status">
                {{#if systemMetrics.dbConnected}}Connected{{else}}Disconnected{{/if}}
              </p>
            </div>
            <div class="w-12 h-12 {{#if systemMetrics.dbConnected}}bg-green-100 dark:bg-green-900{{else}}bg-red-100 dark:bg-red-900{{/if}} rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 {{#if systemMetrics.dbConnected}}text-green-600 dark:text-green-400{{else}}text-red-600 dark:text-red-400{{/if}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {{#if systemMetrics.dbConnected}}
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                {{else}}
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                {{/if}}
              </svg>
            </div>
          </div>
        </div>

        <!-- Server Status -->
        <div class="bg-card rounded-lg border border-border p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-muted-foreground">Server</p>
              <p class="text-2xl font-bold text-green-600 dark:text-green-400">Online</p>
            </div>
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
             <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
             </svg>
           </div>
         </div>
       </div>

        <!-- Memory Usage -->
        <div class="bg-card rounded-lg border border-border p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-muted-foreground">Memory</p>
              <p class="text-2xl font-bold text-blue-600 dark:text-blue-400" id="memory-usage">{{systemMetrics.memoryUsagePercent}}%</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Uptime -->
        <div class="bg-card rounded-lg border border-border p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-muted-foreground">Uptime</p>
              <p class="text-2xl font-bold text-purple-600 dark:text-purple-400" id="uptime">{{systemMetrics.uptimeString}}</p>
            </div>
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
             <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
             </svg>
           </div>
         </div>
       </div>
     </div>

     <!-- Detailed Metrics -->
     <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
       <!-- System Resources -->
       <div class="bg-card rounded-lg border border-border">
         <div class="p-6 border-b border-border">
           <h3 class="text-lg font-semibold text-card-foreground">System Resources</h3>
         </div>
         <div class="p-6 space-y-4">
           <div>
             <div class="flex justify-between text-sm mb-1">
               <span>CPU Usage</span>
               <span id="cpu-usage">{{systemMetrics.cpuUsage}}%</span>
             </div>
             <div class="w-full bg-muted rounded-full h-2">
               <div class="bg-blue-600 h-2 rounded-full" style="width: {{systemMetrics.cpuUsage}}%"></div>
             </div>
           </div>
           <div>
             <div class="flex justify-between text-sm mb-1">
               <span>Memory Usage</span>
               <span id="memory-percent">{{systemMetrics.memoryUsagePercent}}%</span>
             </div>
             <div class="w-full bg-muted rounded-full h-2">
               <div class="bg-green-600 h-2 rounded-full" style="width: {{systemMetrics.memoryUsagePercent}}%"></div>
             </div>
           </div>
           <div>
             <div class="flex justify-between text-sm mb-1">
               <span>Disk Usage</span>
               <span id="disk-usage">{{systemMetrics.diskUsage}}%</span>
             </div>
             <div class="w-full bg-muted rounded-full h-2">
               <div class="bg-yellow-600 h-2 rounded-full" style="width: {{systemMetrics.diskUsage}}%"></div>
             </div>
           </div>
         </div>
       </div>

       <!-- Database Metrics -->
       <div class="bg-card rounded-lg border border-border">
         <div class="p-6 border-b border-border">
           <h3 class="text-lg font-semibold text-card-foreground">Database Metrics</h3>
         </div>
         <div class="p-6 space-y-4">
           <div class="grid grid-cols-2 gap-4">
             <div class="text-center">
               <p class="text-2xl font-bold text-blue-600" id="total-tables">{{systemMetrics.totalTables}}</p>
               <p class="text-sm text-muted-foreground">Tables</p>
             </div>
             <div class="text-center">
               <p class="text-2xl font-bold text-green-600" id="total-records">{{systemMetrics.totalRecords}}</p>
               <p class="text-sm text-muted-foreground">Records</p>
             </div>
           </div>
           <div class="border-t pt-4">
             <h4 class="text-sm font-medium text-card-foreground mb-2">Recent Activity</h4>
             <div class="space-y-2 text-sm">
               <div class="flex justify-between">
                 <span>Queries/min</span>
                 <span id="queries-per-min">{{systemMetrics.queriesPerMin}}</span>
               </div>
               <div class="flex justify-between">
                 <span>Active Connections</span>
                 <span id="active-connections">{{systemMetrics.activeConnections}}</span>
               </div>
               <div class="flex justify-between">
                 <span>Response Time</span>
                 <span id="response-time">{{systemMetrics.responseTime}}ms</span>
               </div>
             </div>
           </div>
         </div>
       </div>
     </div>

     <!-- Recent Logs -->
     <div class="bg-card rounded-lg border border-border">
       <div class="p-6 border-b border-border">
         <h3 class="text-lg font-semibold text-card-foreground">Recent System Logs</h3>
       </div>
       <div class="p-6">
         <div class="space-y-3" id="system-logs">
           <div class="flex items-start space-x-3">
             <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
             <div class="flex-1">
               <p class="text-sm text-card-foreground">Database connection established successfully</p>
               <p class="text-xs text-muted-foreground">2 minutes ago</p>
             </div>
           </div>
           <div class="flex items-start space-x-3">
             <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
             <div class="flex-1">
               <p class="text-sm text-card-foreground">Server started on port 3000</p>
               <p class="text-xs text-muted-foreground">5 minutes ago</p>
             </div>
           </div>
           <div class="flex items-start space-x-3">
             <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2"></div>
             <div class="flex-1">
               <p class="text-sm text-card-foreground">Memory usage above 60% threshold</p>
               <p class="text-xs text-muted-foreground">10 minutes ago</p>
             </div>
           </div>
         </div>
       </div>
     </div>

     <!-- Quick Actions -->
     <div class="bg-card rounded-lg border border-border">
       <div class="p-6 border-b border-border">
         <h3 class="text-lg font-semibold text-card-foreground">Quick Actions</h3>
       </div>
       <div class="p-6">
         <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
           <button class="flex items-center justify-center px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
             <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
             </svg>
             Refresh Metrics
           </button>
           <button class="flex items-center justify-center px-4 py-2 bg-success text-success-foreground rounded-lg hover:bg-success/90 transition-colors">
             <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
             </svg>
             Export Report
           </button>
           <button class="flex items-center justify-center px-4 py-2 bg-secondary text-secondary-foreground rounded-lg hover:bg-secondary/80 transition-colors">
             <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
             </svg>
             System Settings
           </button>
         </div>
       </div>
     </div>
   </div>
</div>