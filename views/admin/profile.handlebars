<!-- Profile Content -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden bg-card ring-1 ring-border flex flex-col min-h-[600px] mx-4 my-4">
  <header class="sticky top-0 z-20 bg-card text-card-foreground p-5 border-b border-border">
    <div class="text-left">
      <h1 class="text-3xl font-bold text-card-foreground mb-2">Profile</h1>
      <p class="text-muted-foreground">View and manage your profile information</p>
    </div>
  </header>
   <div class="p-6 space-y-6">
      <!-- Profile Header -->
      <div class="bg-card rounded-lg border border-border p-6">
        <div class="flex items-center space-x-6">
          <div class="w-20 h-20 bg-gradient-to-br from-primary to-primary/80 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-2xl font-bold text-card-foreground">{{profile.name}}</h2>
            <p class="text-muted-foreground">{{profile.role}}</p>
           <div class="flex items-center mt-2">
             <div class="w-2 h-2 {{#if profile.status}}bg-green-500{{else}}bg-red-500{{/if}} rounded-full animate-pulse mr-2"></div>
             <span class="text-sm text-muted-foreground">{{#if profile.status}}Active{{else}}Inactive{{/if}}</span>
           </div>
         </div>
         <div>
           <button class="px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
             Edit Profile
           </button>
         </div>
       </div>
     </div>

     <!-- Profile Information -->
     <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
       <!-- Personal Information -->
       <div class="bg-card rounded-lg border border-border">
         <div class="p-6 border-b border-border">
           <h3 class="text-lg font-semibold text-card-foreground">Personal Information</h3>
         </div>
         <div class="p-6 space-y-4">
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-1">Full Name</label>
             <p class="text-card-foreground">{{profile.name}}</p>
           </div>
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-1">Email Address</label>
             <p class="text-card-foreground">{{profile.email}}</p>
           </div>
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-1">Phone Number</label>
             <p class="text-card-foreground">{{profile.phone}}</p>
           </div>
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-1">Location</label>
             <p class="text-card-foreground">{{profile.location}}</p>
           </div>
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-1">Member Since</label>
             <p class="text-card-foreground">{{profile.memberSince}}</p>
           </div>
         </div>
       </div>

       <!-- Account Statistics -->
       <div class="bg-card rounded-lg border border-border">
         <div class="p-6 border-b border-border">
           <h3 class="text-lg font-semibold text-card-foreground">Account Statistics</h3>
         </div>
         <div class="p-6 space-y-4">
           <div class="grid grid-cols-2 gap-4">
             <div class="text-center">
               <p class="text-2xl font-bold text-blue-600">{{profile.stats.totalActions}}</p>
               <p class="text-sm text-muted-foreground">Total Actions</p>
             </div>
             <div class="text-center">
               <p class="text-2xl font-bold text-green-600">{{profile.stats.thisMonth}}</p>
               <p class="text-sm text-muted-foreground">This Month</p>
             </div>
           </div>
           <div class="border-t pt-4">
             <h4 class="text-sm font-medium text-card-foreground mb-2">Recent Activity</h4>
             <div class="space-y-2 text-sm">
               <div class="flex justify-between">
                 <span>Users Managed</span>
                 <span>{{profile.stats.usersManaged}}</span>
               </div>
               <div class="flex justify-between">
                 <span>System Health Checks</span>
                 <span>{{profile.stats.healthChecks}}</span>
               </div>
               <div class="flex justify-between">
                 <span>Settings Updated</span>
                 <span>{{profile.stats.settingsUpdated}}</span>
               </div>
               <div class="flex justify-between">
                 <span>Reports Generated</span>
                 <span>{{profile.stats.reportsGenerated}}</span>
               </div>
             </div>
           </div>
         </div>
       </div>
     </div>

     <!-- Security Settings -->
     <div class="bg-card rounded-lg border border-border">
       <div class="p-6 border-b border-border">
         <h3 class="text-lg font-semibold text-card-foreground">Security Settings</h3>
         <p class="text-sm text-muted-foreground mt-1">Manage your account security and authentication</p>
       </div>
       <div class="p-6 space-y-6">
         <div class="flex items-center justify-between">
           <div>
             <h4 class="text-sm font-medium text-card-foreground">Two-Factor Authentication</h4>
             <p class="text-sm text-muted-foreground">Add an extra layer of security to your account</p>
           </div>
           <div class="flex items-center space-x-3">
             <span class="text-sm {{#if profile.twoFactorEnabled}}text-green-600{{else}}text-red-600{{/if}} font-medium">
               {{#if profile.twoFactorEnabled}}Enabled{{else}}Disabled{{/if}}
             </span>
             <label class="relative inline-flex items-center cursor-pointer">
               <input type="checkbox" class="sr-only peer" {{#if profile.twoFactorEnabled}}checked{{/if}}>
               <div class="w-11 h-6 bg-muted peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-card after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
             </label>
           </div>
         </div>
         <div class="flex items-center justify-between">
           <div>
             <h4 class="text-sm font-medium text-card-foreground">Login Notifications</h4>
             <p class="text-sm text-muted-foreground">Get notified of new login attempts</p>
           </div>
           <label class="relative inline-flex items-center cursor-pointer">
             <input type="checkbox" class="sr-only peer" {{#if profile.loginNotifications}}checked{{/if}}>
             <div class="w-11 h-6 bg-muted peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-card after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
           </label>
         </div>
         <div class="border-t pt-4">
           <h4 class="text-sm font-medium text-card-foreground mb-3">Password</h4>
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">Last changed {{profile.lastPasswordChange}}</span>
             <button class="px-4 py-2 text-blue-600 border border-blue-600 rounded-lg hover:bg-blue-50 transition-colors">
               Change Password
             </button>
           </div>
         </div>
       </div>
     </div>

     <!-- Preferences -->
     <div class="bg-card rounded-lg border border-border">
       <div class="p-6 border-b border-border">
         <h3 class="text-lg font-semibold text-card-foreground">Preferences</h3>
         <p class="text-sm text-muted-foreground mt-1">Customize your experience</p>
       </div>
       <div class="p-6 space-y-6">
         <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-2">Language</label>
             <select class="w-full px-3 py-2 border border-input rounded-md focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent">
               <option value="en" {{#eq profile.language "en"}}selected{{/eq}}>English</option>
               <option value="es" {{#eq profile.language "es"}}selected{{/eq}}>Spanish</option>
               <option value="fr" {{#eq profile.language "fr"}}selected{{/eq}}>French</option>
               <option value="de" {{#eq profile.language "de"}}selected{{/eq}}>German</option>
             </select>
           </div>
           <div>
             <label class="block text-sm font-medium text-card-foreground mb-2">Timezone</label>
             <select class="w-full px-3 py-2 border border-input rounded-md focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent">
               <option value="UTC" {{#eq profile.timezone "UTC"}}selected{{/eq}}>UTC</option>
               <option value="EST" {{#eq profile.timezone "EST"}}selected{{/eq}}>Eastern Time</option>
               <option value="PST" {{#eq profile.timezone "PST"}}selected{{/eq}}>Pacific Time</option>
               <option value="GMT" {{#eq profile.timezone "GMT"}}selected{{/eq}}>GMT</option>
             </select>
           </div>
         </div>
         <div class="flex items-center justify-between">
           <div>
             <h4 class="text-sm font-medium text-card-foreground">Email Notifications</h4>
             <p class="text-sm text-muted-foreground">Receive email updates about your account</p>
           </div>
           <label class="relative inline-flex items-center cursor-pointer">
             <input type="checkbox" class="sr-only peer" {{#if profile.emailNotifications}}checked{{/if}}>
             <div class="w-11 h-6 bg-muted peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-card after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
           </label>
         </div>
         <div class="flex items-center justify-between">
           <div>
             <h4 class="text-sm font-medium text-card-foreground">Dashboard Analytics</h4>
             <p class="text-sm text-muted-foreground">Show detailed analytics on your dashboard</p>
           </div>
           <label class="relative inline-flex items-center cursor-pointer">
             <input type="checkbox" class="sr-only peer" {{#if profile.dashboardAnalytics}}checked{{/if}}>
             <div class="w-11 h-6 bg-muted peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-card after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
           </label>
         </div>
       </div>
     </div>

     <!-- Action Buttons -->
     <div class="flex justify-end space-x-4">
       <button class="px-6 py-2 border border-input text-card-foreground rounded-lg hover:bg-accent transition-colors">
         Cancel
       </button>
       <button class="px-6 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors">
         Save Changes
       </button>
     </div>
   </div>
</div>