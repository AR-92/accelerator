<!-- Users Management Content -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden flex flex-col mx-4 my-4">

   <!-- Page Header -->
   {{> page-header title="Users Management" description="Manage and organize all system users efficiently"}}

    {{> table}}
  </div>

  <!-- Create User Modal -->
  <div id="createUserModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-card p-6 rounded-lg shadow-lg max-w-md w-full mx-4">
      <h3 class="text-lg font-semibold mb-4 text-card-foreground">Create New User</h3>
      <form hx-post="/api/users" hx-target="#usersTableContainer" hx-swap="beforeend" hx-on:htmx:after-request="document.getElementById('createUserModal').classList.add('hidden')">
        <div class="mb-4">
          <label for="userName" class="block text-sm font-medium text-card-foreground mb-2">Name</label>
          <input type="text" id="userName" name="name" required class="w-full px-3 py-2 border border-input rounded-md bg-background text-card-foreground">
        </div>
        <div class="mb-4">
          <label for="userEmail" class="block text-sm font-medium text-card-foreground mb-2">Email</label>
          <input type="email" id="userEmail" name="email" required class="w-full px-3 py-2 border border-input rounded-md bg-background text-card-foreground">
        </div>
        <div class="mb-4">
          <label for="userStatus" class="block text-sm font-medium text-card-foreground mb-2">Status</label>
          <select id="userStatus" name="status" class="w-full px-3 py-2 border border-input rounded-md bg-background text-card-foreground">
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
        </div>
        <div class="flex justify-end gap-2">
          <button type="button" onclick="document.getElementById('createUserModal').classList.add('hidden')" class="px-4 py-2 text-sm font-medium text-muted-foreground hover:bg-accent rounded-md">Cancel</button>
          <button type="submit" class="px-4 py-2 text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 rounded-md">Create User</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit User Modal -->
  <div id="editUserModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-card p-6 rounded-lg shadow-lg max-w-md w-full mx-4">
      <h3 class="text-lg font-semibold mb-4 text-card-foreground">Edit User</h3>
      <form id="editUserForm" hx-put="/api/users/:id" hx-target="#user-row-:id" hx-swap="outerHTML" hx-on:htmx:after-request="document.getElementById('editUserModal').classList.add('hidden')">
        <input type="hidden" id="editUserId" name="id">
        <div class="mb-4">
          <label for="editUserName" class="block text-sm font-medium text-card-foreground mb-2">Name</label>
          <input type="text" id="editUserName" name="name" required class="w-full px-3 py-2 border border-input rounded-md bg-background text-card-foreground">
        </div>
        <div class="mb-4">
          <label for="editUserEmail" class="block text-sm font-medium text-card-foreground mb-2">Email</label>
          <input type="email" id="editUserEmail" name="email" required class="w-full px-3 py-2 border border-input rounded-md bg-background text-card-foreground">
        </div>
        <div class="mb-4">
          <label for="editUserStatus" class="block text-sm font-medium text-card-foreground mb-2">Status</label>
          <select id="editUserStatus" name="status" class="w-full px-3 py-2 border border-input rounded-md bg-background text-card-foreground">
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
        </div>
         <div class="flex justify-end gap-2">
           <button type="button" onclick="document.getElementById('editUserModal').classList.add('hidden')" class="px-4 py-2 text-sm font-medium text-muted-foreground hover:bg-accent rounded-md">Cancel</button>
           <button type="submit" class="px-4 py-2 text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 rounded-md">Update User</button>
         </div>
       </form>
     </div>
   </div>

   <script src="/js/table.js?v=1"></script>

