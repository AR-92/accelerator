<!-- System Section Overview -->
<div class="min-h-screen bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">System Overview</h1>
      <p class="text-muted-foreground">Overview of system health, notifications, and activity monitoring</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- Notifications Card -->
      <div class="bg-card rounded-lg border border-border p-6">
        <div class="flex items-center justify-between mb-4">
           <div class="flex items-center">
             {{{icon 'bell' size='32' class='text-primary mr-3'}}}
             <h3 class="text-lg font-semibold text-card-foreground">Notifications</h3>
           </div>
          <a href="/admin/notifications" class="text-primary hover:text-primary/80 text-sm font-medium" title="View All">{{{icon "chevron-right" size="16" class="text-primary hover:text-primary/80"}}}</a>
        </div>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-sm text-muted-foreground">Total</span>
            <span class="text-sm font-medium">{{stats.notifications.total}}</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-muted-foreground">Unread</span>
            <span class="text-sm font-medium text-orange-600">{{stats.notifications.unread}}</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-muted-foreground">Read</span>
            <span class="text-sm font-medium text-green-600">{{stats.notifications.read}}</span>
          </div>
        </div>
      </div>

      <!-- Activity Logs Card -->
      <div class="bg-card rounded-lg border border-border p-6">
        <div class="flex items-center justify-between mb-4">
           <div class="flex items-center">
             {{{icon 'activity' size='32' class='text-primary mr-3'}}}
             <h3 class="text-lg font-semibold text-card-foreground">Activity Logs</h3>
           </div>
          <a href="/admin/activity" class="text-primary hover:text-primary/80 text-sm font-medium" title="View All">{{{icon "chevron-right" size="16" class="text-primary hover:text-primary/80"}}}</a>
        </div>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-sm text-muted-foreground">Total</span>
            <span class="text-sm font-medium">{{stats.activityLogs.total}}</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-muted-foreground">Today</span>
            <span class="text-sm font-medium text-blue-600">{{stats.activityLogs.today}}</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm text-muted-foreground">This Week</span>
            <span class="text-sm font-medium text-purple-600">{{stats.activityLogs.thisWeek}}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- System Health Card -->
    <div class="bg-card rounded-lg border border-border p-6 mb-8">
      <div class="flex items-center justify-between mb-4">
         <div class="flex items-center">
           {{{icon 'activity' size='32' class='text-primary mr-3'}}}
           <h3 class="text-lg font-semibold text-card-foreground">System Health</h3>
         </div>
        <a href="/admin/system-health" class="text-primary hover:text-primary/80 text-sm font-medium">View Details</a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600">‚óè</div>
          <div class="text-sm text-muted-foreground">Database</div>
          <div class="text-xs text-green-600">Connected</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600">85%</div>
          <div class="text-sm text-muted-foreground">Memory</div>
          <div class="text-xs text-blue-600">Usage</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-600">42</div>
          <div class="text-sm text-muted-foreground">Tables</div>
          <div class="text-xs text-purple-600">Active</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-orange-600">1.2k</div>
          <div class="text-sm text-muted-foreground">Records</div>
          <div class="text-xs text-orange-600">Total</div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-card rounded-lg border border-border p-6">
      <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
         <a href="/admin/system-health" class="flex flex-col items-center p-4 rounded-lg border border-border hover:bg-accent hover:border-accent-foreground/20 transition-colors">
           {{{icon 'activity' size='24' class='text-primary mb-2'}}}
           <span class="text-sm font-medium text-center">System Health</span>
         </a>
         <a href="/admin/notifications" class="flex flex-col items-center p-4 rounded-lg border border-border hover:bg-accent hover:border-accent-foreground/20 transition-colors">
           {{{icon 'bell' size='24' class='text-primary mb-2'}}}
           <span class="text-sm font-medium text-center">Notifications</span>
         </a>
         <a href="/admin/activity" class="flex flex-col items-center p-4 rounded-lg border border-border hover:bg-accent hover:border-accent-foreground/20 transition-colors">
           {{{icon 'activity' size='24' class='text-primary mb-2'}}}
           <span class="text-sm font-medium text-center">Activity Logs</span>
         </a>
      </div>
    </div>
  </div>
</div>