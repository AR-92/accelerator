<!-- Dashboard Content -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden flex flex-col mx-4 my-4">

   <!-- Page Header -->
   {{> page-header title="Dashboard" description="Overview of the system" border=true}}
  <div class="p-6">
     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
{{#> stats-card icon="users" title="Users" link="#"}}
{{> stats-item label="Total" value="1,234"}}
{{/stats-card}}

{{#> stats-card icon="clipboard-list" title="Todos" link="#"}}
{{> stats-item label="Active" value="567"}}
{{/stats-card}}

{{#> stats-card icon="lightbulb" title="Ideas" link="#"}}
{{> stats-item label="Submitted" value="89"}}
{{/stats-card}}

{{#> stats-card icon="dollar-sign" title="Revenue" link="#"}}
{{> stats-item label="Total" value="$12,345"}}
{{/stats-card}}
     </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
       <div class="bg-card rounded-lg border border-border p-6">
         <h3 class="text-lg font-semibold text-card-foreground mb-4">Recent Activity</h3>
         <div class="space-y-3">
           <div class="flex items-center space-x-3">
             <div class="w-2 h-2 bg-green-500 rounded-full"></div>
             <p class="text-sm text-muted-foreground">New user registered</p>
             <span class="text-xs text-muted-foreground ml-auto">2 min ago</span>
           </div>
           <div class="flex items-center space-x-3">
             <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
             <p class="text-sm text-muted-foreground">Todo completed</p>
             <span class="text-xs text-muted-foreground ml-auto">5 min ago</span>
           </div>
           <div class="flex items-center space-x-3">
             <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
             <p class="text-sm text-muted-foreground">New idea submitted</p>
             <span class="text-xs text-muted-foreground ml-auto">10 min ago</span>
           </div>
         </div>
      </div>
       <div class="bg-card rounded-lg border border-border p-6">
         <h3 class="text-lg font-semibold text-card-foreground mb-4">System Status</h3>
         <div class="space-y-3">
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">Database</span>
             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Healthy</span>
           </div>
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">API</span>
             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Healthy</span>
           </div>
           <div class="flex items-center justify-between">
             <span class="text-sm text-muted-foreground">Storage</span>
             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">Warning</span>
           </div>
         </div>
       </div>
    </div>
  </div>
</div>