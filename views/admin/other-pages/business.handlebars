<!-- Business Section Overview -->
<div class="min-h-screen bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">Business Overview</h1>
      <p class="text-muted-foreground">Overview of business models, plans, financials, and operations</p>
    </div>

     <!-- Stats Grid -->
     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
{{#> stats-card icon="table" title="Business Models" link="/admin/business-model"}}
{{> stats-item label="Total" value=stats.businessModels.total}}
{{> stats-item label="Active" value=stats.businessModels.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.businessModels.inactive color="text-gray-600"}}
{{/stats-card}}

 {{#> stats-card icon="file-text" title="Business Plans" link="/admin/business-plan"}}
{{> stats-item label="Total" value=stats.businessPlans.total}}
{{> stats-item label="Completed" value=stats.businessPlans.completed color="text-green-600"}}
{{> stats-item label="Draft" value=stats.businessPlans.draft color="text-orange-600"}}
 {{/stats-card}}

