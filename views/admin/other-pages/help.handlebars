<!-- Help Section Overview -->
<div class="min-h-screen bg-background">
   <div id="help-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
     {{> page-header title="Help Overview" description="Overview of help center and support resources" simple=true}}

     <!-- Stats Grid -->
     <div class="grid grid-cols-1 gap-6 mb-8">
 {{#> stats-card icon="help-circle" title="Help Center" link="/admin/help-center"}}
{{> stats-item label="Total Articles" value=stats.helpCenter.total}}
{{> stats-item label="Published" value=stats.helpCenter.published color="text-green-600"}}
{{> stats-item label="Draft" value=stats.helpCenter.draft color="text-orange-600"}}
 {{/stats-card}}
     </div>

     <!-- Quick Actions -->
     <div class="bg-card rounded-lg border border-border p-6">
       <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
       <div class="grid grid-cols-1 gap-4">
 {{> quick-action link="/admin/table-pages/help-center" icon="help-circle" text="Manage Help Center"}}
        </div>
      </div>
   </div>
 </div>
{{!-- these are the quick links in this page that should be shown on the filter nav as links using htmx on load on this id : id="filter-links" --}}
<div id="help-filter-links" class="hidden" _="on load set #filter-links.innerHTML to #help-filter-links.innerHTML">
 <div class="flex flex-col items-center justify-center group">
   <div class="border-t-4 border-primary w-6 rounded-full opacity-0 group-hover:opacity-100"></div>
    <a id="manage-help-center-btn" href="/admin/table-pages/help-center" hx-get="/admin/table-pages/help-center" hx-target="#help-main-content" class="text-muted-foreground text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium">Manage Help Center</a>
 </div>
</div>