<!-- System Config Content -->
<div class="max-w-7xl mx-auto rounded-xl overflow-hidden flex flex-col mx-4 my-4">

    <!-- Page Header -->
    {{> page-header title="System Configuration" description="Manage system settings and configuration options" border=true}}

    <div class="p-6 space-y-8">
       {{#if error}}
       <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
             <div class="flex-shrink-0">
                {{{icon 'alert-triangle' size='20' class='text-red-400'}}}
             </div>
             <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Configuration Error</h3>
                <div class="mt-2 text-sm text-red-700">
                   <p>{{error}}</p>
                </div>
             </div>
          </div>
       </div>
       {{/if}}

       <!-- Environment Settings -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'settings' size='20' class='mr-2'}}}
                Environment Settings
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Environment</label>
                   <input type="text" value="{{config.environment}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Port</label>
                   <input type="text" value="{{config.port}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
          </div>
       </div>

       <!-- Server Configuration -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'server' size='20' class='mr-2'}}}
                Server Configuration
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Cluster Mode</label>
                   <div class="flex items-center">
                      <input type="text" value="{{#if config.server.clusterMode}}Enabled{{else}}Disabled{{/if}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if config.server.clusterMode}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if config.server.clusterMode}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Max Workers</label>
                   <input type="text" value="{{config.server.maxWorkers}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Health Check Interval (ms)</label>
                   <input type="text" value="{{config.server.healthCheckInterval}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Graceful Shutdown Timeout (ms)</label>
                   <input type="text" value="{{config.server.gracefulShutdownTimeout}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Request Timeout (ms)</label>
                   <input type="text" value="{{config.server.requestTimeoutGlobal}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Compression Level</label>
                   <input type="text" value="{{config.server.compressionLevel}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Static Cache Max Age (ms)</label>
                   <input type="text" value="{{config.server.staticCacheMaxAge}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Trust Proxy</label>
                   <div class="flex items-center">
                      <input type="text" value="{{#if config.server.trustProxy}}Enabled{{else}}Disabled{{/if}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if config.server.trustProxy}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if config.server.trustProxy}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
             </div>
          </div>
       </div>

       <!-- Database Configuration -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'database' size='20' class='mr-2'}}}
                Database Configuration
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Database URL</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.database.url}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.database.url 'Configured')}}text-green-600{{else}}text-red-600{{/if}}">
                         {{#if (eq config.database.url 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'x-circle' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">API Key</label>
                   <div class="flex items-center">
                      <input type="password" value="{{config.database.key}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.database.key 'Configured')}}text-green-600{{else}}text-red-600{{/if}}">
                         {{#if (eq config.database.key 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'x-circle' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Connection Retry Attempts</label>
                   <input type="text" value="{{config.database.connectionRetryAttempts}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Connection Retry Delay (ms)</label>
                   <input type="text" value="{{config.database.connectionRetryDelay}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">SSL Mode</label>
                   <input type="text" value="{{config.database.sslMode}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Schema Version</label>
                   <input type="text" value="{{config.database.schemaVersion}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Backup Retention Days</label>
                   <input type="text" value="{{config.database.backupRetentionDays}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Backup Schedule</label>
                   <input type="text" value="{{config.database.backupSchedule}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Read Replica URLs</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.database.readReplicaUrls}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.database.readReplicaUrls 'Configured')}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if (eq config.database.readReplicaUrls 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Connection Pool Min/Max</label>
                   <input type="text" value="{{config.database.connectionPoolMin}}/{{config.database.connectionPoolMax}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Statement Timeout (ms)</label>
                   <input type="text" value="{{config.database.statementTimeout}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Idle Timeout (ms)</label>
                   <input type="text" value="{{config.database.idleTimeout}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
          </div>
       </div>

       <!-- Authentication & Security Configuration -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'shield' size='20' class='mr-2'}}}
                Authentication & Security Configuration
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Auth Providers</label>
                   <input type="text" value="{{config.auth.providers}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Password Reset Token Expires (ms)</label>
                   <input type="text" value="{{config.auth.passwordResetTokenExpires}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Account Lockout Duration (ms)</label>
                   <input type="text" value="{{config.auth.accountLockoutDuration}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Brute Force Protection Threshold</label>
                   <input type="text" value="{{config.auth.bruteForceProtectionThreshold}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">IP Whitelist</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.auth.ipWhitelist}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.auth.ipWhitelist 'Configured')}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if (eq config.auth.ipWhitelist 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">IP Blacklist</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.auth.ipBlacklist}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.auth.ipBlacklist 'Configured')}}text-red-600{{else}}text-gray-400{{/if}}">
                         {{#if (eq config.auth.ipBlacklist 'Configured')}}
                         {{{icon 'x-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Session Cookie Secure</label>
                   <div class="flex items-center">
                      <input type="text" value="{{#if config.auth.sessionCookieSecure}}Enabled{{else}}Disabled{{/if}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if config.auth.sessionCookieSecure}}text-green-600{{else}}text-yellow-600{{/if}}">
                         {{#if config.auth.sessionCookieSecure}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'alert-triangle' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">CSRF Protection</label>
                   <div class="flex items-center">
                      <input type="text" value="{{#if config.auth.csrfProtectionEnabled}}Enabled{{else}}Disabled{{/if}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if config.auth.csrfProtectionEnabled}}text-green-600{{else}}text-red-600{{/if}}">
                         {{#if config.auth.csrfProtectionEnabled}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'x-circle' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
             </div>
          </div>
       </div>

       <!-- Email Configuration -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'mail' size='20' class='mr-2'}}}
                Email Configuration
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Email Provider</label>
                   <input type="text" value="{{config.email.provider}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">From Name</label>
                   <input type="text" value="{{config.email.fromName}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">From Address</label>
                   <input type="text" value="{{config.email.fromAddress}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Queue Size</label>
                   <input type="text" value="{{config.email.queueSize}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Notification Channels</label>
                   <input type="text" value="{{config.email.notificationChannels}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Rate Limit Per Hour</label>
                   <input type="text" value="{{config.email.rateLimitPerHour}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
          </div>
       </div>

       <!-- Performance & Caching Configuration -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'zap' size='20' class='mr-2'}}}
                Performance & Caching Configuration
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Redis URL</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.performance.redisUrl}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.performance.redisUrl 'Configured')}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if (eq config.performance.redisUrl 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Cache Strategy</label>
                   <input type="text" value="{{config.performance.cacheStrategy}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">API Response Cache TTL (s)</label>
                   <input type="text" value="{{config.performance.apiResponseCacheTtl}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Database Query Cache TTL (s)</label>
                   <input type="text" value="{{config.performance.databaseQueryCacheTtl}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">File Upload Max Size (bytes)</label>
                   <input type="text" value="{{config.performance.fileUploadMaxSize}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Image Optimization Quality (%)</label>
                   <input type="text" value="{{config.performance.imageOptimizationQuality}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
          </div>
       </div>

       <!-- Logging & Monitoring Configuration -->
       <div class="bg-card rounded-lg border border-border">
          <div class="p-6 border-b border-border">
             <h3 class="text-lg font-semibold text-card-foreground flex items-center">
                {{{icon 'file-text' size='20' class='mr-2'}}}
                Logging & Monitoring Configuration
             </h3>
          </div>
          <div class="p-6 space-y-4">
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Log Format</label>
                   <input type="text" value="{{config.logging.format}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Log Transports</label>
                   <input type="text" value="{{config.logging.transports}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Sentry DSN</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.logging.sentryDsn}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.logging.sentryDsn 'Configured')}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if (eq config.logging.sentryDsn 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">New Relic License Key</label>
                   <div class="flex items-center">
                      <input type="text" value="{{config.logging.newRelicLicenseKey}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if (eq config.logging.newRelicLicenseKey 'Configured')}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if (eq config.logging.newRelicLicenseKey 'Configured')}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
             </div>
             <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Prometheus Metrics</label>
                   <div class="flex items-center">
                      <input type="text" value="{{#if config.logging.prometheusMetricsEnabled}}Enabled{{else}}Disabled{{/if}}" readonly
                             class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                      <span class="ml-2 {{#if config.logging.prometheusMetricsEnabled}}text-green-600{{else}}text-gray-400{{/if}}">
                         {{#if config.logging.prometheusMetricsEnabled}}
                         {{{icon 'check-circle' size='16'}}}
                         {{else}}
                         {{{icon 'minus' size='16'}}}
                         {{/if}}
                      </span>
                   </div>
                </div>
                <div>
                   <label class="block text-sm font-medium text-card-foreground mb-2">Error Reporting Level</label>
                   <input type="text" value="{{config.logging.errorReportingLevel}}" readonly
                          class="w-full px-3 py-2 border border-border rounded-md bg-muted">
                </div>
             </div>
             <div>
                <label class="block text-sm font-medium text-card-foreground mb-2">Audit Log Retention Days</label>
                <input type="text" value="{{config.logging.auditLogRetentionDays}}" readonly
                       class="w-32 px-3 py-2 border border-border rounded-md bg-muted">
