<!-- Content Management Section Overview -->
<div class="min-h-screen bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">Content Management Overview</h1>
      <p class="text-muted-foreground">Overview of content creation and landing page management</p>
    </div>

     <!-- Stats Grid -->
     <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
{{#> stats-card icon="file-text" title="Content" link="/admin/table-pages/content"}}
{{> stats-item label="Total" value=stats.content.total}}
{{> stats-item label="Published" value=stats.content.published color="text-green-600"}}
{{> stats-item label="Draft" value=stats.content.draft color="text-orange-600"}}
{{/stats-card}}

{{#> stats-card icon="globe" title="Landing Pages" link="/admin/table-pages/landing-page"}}
{{> stats-item label="Total" value=stats.landingPages.total}}
{{> stats-item label="Active" value=stats.landingPages.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.landingPages.inactive color="text-gray-600"}}
{{/stats-card}}
     </div>

     <!-- Quick Actions -->
     <div class="bg-card rounded-lg border border-border p-6">
       <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
       <div class="grid grid-cols-2 gap-4">
{{> quick-action link="/admin/table-pages/content" icon="file-text" text="Manage Content"}}
{{> quick-action link="/admin/table-pages/landing-page" icon="globe" text="Manage Landing Pages"}}
       </div>
     </div>
  </div>
</div>