<!-- Content Management Section Overview -->
<div class="min-h-screen bg-background">
   <div id="content-management-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
     {{> page-header title="Content Management Overview" description="Overview of content creation and landing page management" simple=true}}

     <!-- Stats Grid -->
     <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
{{#> stats-card icon="file-text" title="Content" link="/admin/table-pages/content"}}
{{> stats-item label="Total" value=stats.content.total}}
{{> stats-item label="Published" value=stats.content.published color="text-green-600"}}
{{> stats-item label="Draft" value=stats.content.draft color="text-orange-600"}}
{{/stats-card}}

{{#> stats-card icon="globe" title="Landing Pages" link="/admin/table-pages/landing-page"}}
{{> stats-item label="Total" value=stats.landingPages.total}}
{{> stats-item label="Active" value=stats.landingPages.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.landingPages.inactive color="text-gray-600"}}
{{/stats-card}}
     </div>

     <!-- Quick Actions -->
     <div class="bg-card rounded-lg border border-border p-6">
       <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
       <div class="grid grid-cols-2 gap-4">
{{> quick-action link="/admin/table-pages/content" icon="file-text" text="Manage Content"}}
{{> quick-action link="/admin/table-pages/landing-page" icon="globe" text="Manage Landing Pages"}}
   </div>
 </div>
{{!-- these are the quick links in this page that should be shown on the filter nav as links using htmx on load on this id : id="filter-links" --}}
<div id="content-management-filter-links" class="hidden" _="on load set #filter-links.innerHTML to #content-management-filter-links.innerHTML">
 <div class="flex flex-col items-center justify-center group">
   <div class="border-t-4 border-primary w-6 rounded-full opacity-0 group-hover:opacity-100"></div>
   <a id="manage-content-btn" href="/admin/table-pages/content" hx-get="/admin/table-pages/content" hx-target="#content-management-main-content" class="text-muted-foreground text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium">Manage Content</a>
 </div>
 <div class="flex flex-col items-center justify-center group">
   <div class="border-t-4 border-primary w-6 rounded-full opacity-0 group-hover:opacity-100"></div>
   <a id="manage-landing-pages-btn" href="/admin/table-pages/landing-page" hx-get="/admin/table-pages/landing-page" hx-target="#content-management-main-content" class="text-muted-foreground text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium">Manage Landing Pages</a>
 </div>
</div>
  </div>
</div>