<!-- Financial Section Overview -->
<div class="min-h-screen bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-foreground mb-2">Financial Overview</h1>
      <p class="text-muted-foreground">Overview of packages, billing, and rewards management</p>
    </div>

     <!-- Stats Grid -->
     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
 {{#> stats-card icon="package" title="Packages" link="/admin/packages"}}
{{> stats-item label="Total" value=stats.packages.total}}
{{> stats-item label="Active" value=stats.packages.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.packages.inactive color="text-gray-600"}}
 {{/stats-card}}

 {{#> stats-card icon="credit-card" title="Billing" link="/admin/billing"}}
{{> stats-item label="Total" value=stats.billing.total}}
{{> stats-item label="Paid" value=stats.billing.paid color="text-green-600"}}
{{> stats-item label="Pending" value=stats.billing.pending color="text-orange-600"}}
 {{/stats-card}}

 {{#> stats-card icon="gift" title="Rewards" link="/admin/rewards"}}
{{> stats-item label="Total" value=stats.rewards.total}}
{{> stats-item label="Active" value=stats.rewards.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.rewards.inactive color="text-gray-600"}}
 {{/stats-card}}
     </div>

     <!-- Quick Actions -->
     <div class="bg-card rounded-lg border border-border p-6">
       <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
       <div class="grid grid-cols-3 gap-4">
{{> quick-action link="/admin/packages" icon="package" text="Packages"}}
{{> quick-action link="/admin/billing" icon="credit-card" text="Billing"}}
{{> quick-action link="/admin/rewards" icon="gift" text="Rewards"}}
       </div>
     </div>
  </div>
</div>