<!-- Financial Section Overview -->
<div class="min-h-screen bg-background">
   <div id="financial-main-content" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
     {{> page-header title="Financial Overview" description="Overview of packages, billing, and rewards management" simple=true}}

     <!-- Stats Grid -->
     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
 {{#> stats-card icon="package" title="Packages" link="/admin/packages"}}
{{> stats-item label="Total" value=stats.packages.total}}
{{> stats-item label="Active" value=stats.packages.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.packages.inactive color="text-gray-600"}}
 {{/stats-card}}

 {{#> stats-card icon="credit-card" title="Billing" link="/admin/billing"}}
{{> stats-item label="Total" value=stats.billing.total}}
{{> stats-item label="Paid" value=stats.billing.paid color="text-green-600"}}
{{> stats-item label="Pending" value=stats.billing.pending color="text-orange-600"}}
 {{/stats-card}}

 {{#> stats-card icon="gift" title="Rewards" link="/admin/rewards"}}
{{> stats-item label="Total" value=stats.rewards.total}}
{{> stats-item label="Active" value=stats.rewards.active color="text-green-600"}}
{{> stats-item label="Inactive" value=stats.rewards.inactive color="text-gray-600"}}
 {{/stats-card}}
     </div>

     <!-- Quick Actions -->
     <div class="bg-card rounded-lg border border-border p-6">
       <h3 class="text-lg font-semibold text-card-foreground mb-4">Quick Actions</h3>
       <div class="grid grid-cols-3 gap-4">
 {{> quick-action link="/admin/table-pages/packages" icon="package" text="Packages"}}
 {{> quick-action link="/admin/table-pages/billing" icon="credit-card" text="Billing"}}
 {{> quick-action link="/admin/table-pages/rewards" icon="gift" text="Rewards"}}
      </div>
   </div>
 </div>
{{!-- these are the quick links in this page that should be shown on the filter nav as links using htmx on load on this id : id="filter-links" --}}
<div id="financial-filter-links" class="hidden" _="on load set #filter-links.innerHTML to #financial-filter-links.innerHTML">
 <div class="flex flex-col items-center justify-center group">
   <div class="border-t-4 border-primary w-6 rounded-full opacity-0 group-hover:opacity-100"></div>
    <a id="packages-btn" href="/admin/table-pages/packages" hx-get="/admin/table-pages/packages" hx-target="#financial-main-content" class="text-muted-foreground text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium">Packages</a>
 </div>
 <div class="flex flex-col items-center justify-center group">
   <div class="border-t-4 border-primary w-6 rounded-full opacity-0 group-hover:opacity-100"></div>
    <a id="billing-btn" href="/admin/table-pages/billing" hx-get="/admin/table-pages/billing" hx-target="#financial-main-content" class="text-muted-foreground text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium">Billing</a>
 </div>
 <div class="flex flex-col items-center justify-center group">
   <div class="border-t-4 border-primary w-6 rounded-full opacity-0 group-hover:opacity-100"></div>
    <a id="rewards-btn" href="/admin/table-pages/rewards" hx-get="/admin/table-pages/rewards" hx-target="#financial-main-content" class="text-muted-foreground text-xs leading-[2.5] group-hover:text-foreground hover:text-foreground group-hover:font-medium hover:font-medium">Rewards</a>
 </div>
</div>
</div>