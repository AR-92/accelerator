<!-- src/views/pages/admin/package-details.hbs -->
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Package Details</h1>
    <p class="mt-2 text-sm text-gray-600">View and manage package information</p>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        {{package.name}}
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Package ID: {{package.id}}
      </p>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">ID</dt>
          <dd class="mt-1 text-sm text-gray-900">{{package.id}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900">{{package.name}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Price</dt>
          <dd class="mt-1 text-sm text-gray-900">${{package.price}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Credits</dt>
          <dd class="mt-1 text-sm text-gray-900">{{package.credits}}</dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900">{{package.description}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
              {{#if (eq package.status 'active')}}bg-green-100 text-green-800{{else}}bg-red-100 text-red-800{{/if}}">
              {{package.status}}
            </span>
          </dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="mt-1 text-sm text-gray-900">{{formatDate package.createdAt}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Updated At</dt>
          <dd class="mt-1 text-sm text-gray-900">{{formatDate package.updatedAt}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Is Popular</dt>
          <dd class="mt-1 text-sm text-gray-900">{{#if package.isPopular}}Yes{{else}}No{{/if}}</dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Is Recommended</dt>
          <dd class="mt-1 text-sm text-gray-900">{{#if package.isRecommended}}Yes{{else}}No{{/if}}</dd>
        </div>
      </dl>

      <div class="mt-6 flex space-x-3">
        <button 
          type="button" 
          class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          onclick="window.location='/admin/packages'"
        >
          Back to Packages
        </button>
        <button 
          type="button" 
          class="ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          onclick="editPackage({{package.id}})"
        >
          Edit Package
        </button>
        <button 
          type="button" 
          class="ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
          onclick="deletePackage({{package.id}})"
        >
          Delete Package
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function editPackage(packageId) {
    // Redirect to edit page or show modal
    window.location = `/admin/packages/${packageId}/edit`;
  }

  function deletePackage(packageId) {
    if (confirm('Are you sure you want to delete this package?')) {
      fetch(`/api/admin/packages/${packageId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Package deleted successfully');
          window.location = '/admin/packages';
        } else {
          alert('Error: ' + data.error);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while deleting the package');
      });
    }
  }
</script>