<div class="w-full">
    <div class="mb-8">
        <h1 class="text-2xl font-light mb-2 text-text-primary">Settings</h1>
        <p class="text-text-secondary">Manage your account preferences and configurations</p>
    </div>
    
    <!-- Settings form -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <div class="bg-bg-secondary border border-border-color rounded p-6 mb-6">
                <h2 class="text-lg font-light mb-4 text-text-primary">Profile Information</h2>
                
                <form hx-post="/pages/settings/profile" hx-target="#profile-result" hx-swap="innerHTML" class="space-y-6">
                    <div>
                        <label for="fullName" class="block text-sm text-text-secondary mb-2">Full Name</label>
                        <input 
                            type="text" 
                            id="fullName" 
                            name="fullName" 
                            value="John Doe"
                            class="w-full px-4 py-3 bg-bg-primary border border-border-color rounded text-text-primary focus:outline-none focus:ring-1 focus:ring-border-color" 
                        >
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm text-text-secondary mb-2">Email Address</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            value="john.doe@example.com"
                            class="w-full px-4 py-3 bg-bg-primary border border-border-color rounded text-text-primary focus:outline-none focus:ring-1 focus:ring-border-color" 
                        >
                    </div>
                    
                    <div>
                        <label for="bio" class="block text-sm text-text-secondary mb-2">Bio</label>
                        <textarea 
                            id="bio" 
                            name="bio" 
                            rows="3"
                            class="w-full px-4 py-3 bg-bg-primary border border-border-color rounded text-text-primary focus:outline-none focus:ring-1 focus:ring-border-color"
                        >Frontend Developer with 5+ years of experience in creating beautiful UIs.</textarea>
                    </div>
                    
                    <div>
                        <button type="submit" class="px-6 py-3 bg-bg-primary text-text-primary hover:bg-bg-sidebar-hover rounded transition">
                            Update Profile
                        </button>
                    </div>
                </form>
                
                <div id="profile-result" class="mt-4"></div>
            </div>
            
            <div class="bg-bg-secondary border border-border-color rounded p-6">
                <h2 class="text-lg font-light mb-4 text-text-primary">Account Security</h2>
                
                <form hx-post="/pages/settings/security" hx-target="#security-result" hx-swap="innerHTML" class="space-y-6">
                    <div>
                        <label for="currentPassword" class="block text-sm text-text-secondary mb-2">Current Password</label>
                        <input 
                            type="password" 
                            id="currentPassword" 
                            name="currentPassword" 
                            class="w-full px-4 py-3 bg-bg-primary border border-border-color rounded text-text-primary focus:outline-none focus:ring-1 focus:ring-border-color" 
                            required
                        >
                    </div>
                    
                    <div>
                        <label for="newPassword" class="block text-sm text-text-secondary mb-2">New Password</label>
                        <input 
                            type="password" 
                            id="newPassword" 
                            name="newPassword" 
                            class="w-full px-4 py-3 bg-bg-primary border border-border-color rounded text-text-primary focus:outline-none focus:ring-1 focus:ring-border-color" 
                            required
                        >
                    </div>
                    
                    <div>
                        <label for="confirmNewPassword" class="block text-sm text-text-secondary mb-2">Confirm New Password</label>
                        <input 
                            type="password" 
                            id="confirmNewPassword" 
                            name="confirmNewPassword" 
                            class="w-full px-4 py-3 bg-bg-primary border border-border-color rounded text-text-primary focus:outline-none focus:ring-1 focus:ring-border-color" 
                            required
                        >
                    </div>
                    
                    <div>
                        <button type="submit" class="px-6 py-3 bg-bg-primary text-text-primary hover:bg-bg-sidebar-hover rounded transition">
                            Update Password
                        </button>
                    </div>
                </form>
                
                <div id="security-result" class="mt-4"></div>
            </div>
        </div>
        
        <div>
            <div class="bg-bg-secondary border border-border-color rounded p-6">
                <h2 class="text-lg font-light mb-4 text-text-primary">Preferences</h2>
                
                <form hx-post="/pages/settings/preferences" hx-target="#preferences-result" hx-swap="innerHTML" class="space-y-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <label class="block text-sm text-text-secondary">Dark Mode</label>
                            <p class="text-xs text-text-secondary">Enable dark theme for the app</p>
                        </div>
                        <div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" checked class="sr-only peer">
                                <div class="w-11 h-6 bg-border-color peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:border-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-bg-sidebar-hover"></div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div>
                            <label class="block text-sm text-text-secondary">Email Notifications</label>
                            <p class="text-xs text-text-secondary">Receive email updates</p>
                        </div>
                        <div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" checked class="sr-only peer">
                                <div class="w-11 h-6 bg-border-color peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:border-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-bg-sidebar-hover"></div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div>
                            <label class="block text-sm text-text-secondary">Push Notifications</label>
                            <p class="text-xs text-text-secondary">Receive push notifications</p>
                        </div>
                        <div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer">
                                <div class="w-11 h-6 bg-border-color peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border after:border-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-bg-sidebar-hover"></div>
                            </label>
                        </div>
                    </div>
                    
                    <div>
                        <button type="submit" class="w-full px-6 py-3 bg-bg-primary text-text-primary hover:bg-bg-sidebar-hover rounded transition">
                            Save Preferences
                        </button>
                    </div>
                </form>
                
                <div id="preferences-result" class="mt-4"></div>
            </div>
        </div>
    </div>
</div>