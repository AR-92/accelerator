<!-- Billing Settings Page -->
<div class="min-h-screen bg-background">
<div id="billing-settings-main-content" class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Billing Settings</h1>
      <p class="text-base text-muted-foreground">Manage your subscription and payment methods.</p>
    </div>
  </div>

    <!-- Current Plan -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-foreground">Current Plan</h3>
        <span class="px-3 py-1 bg-primary/20 text-primary text-sm rounded-full">Pro Plan - $29.99/month</span>
      </div>
      <p class="text-sm text-muted-foreground mb-4">Your next billing date is December 15, 2024.</p>
      <div class="flex gap-3">
        <button class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">Change Plan</button>
        <button class="px-4 py-2 border border-destructive text-destructive rounded-md hover:bg-destructive/10 transition-colors">Cancel Subscription</button>
      </div>
    </div>

    <!-- Payment Methods -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <h3 class="text-lg font-medium text-foreground mb-4">Payment Methods</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between p-4 border border-border rounded-lg">
          <div class="flex items-center gap-3">
             <div class="w-10 h-10 bg-primary/20 rounded-lg flex items-center justify-center">
{{{icon 'credit-card' class='w-5 h-5 text-primary'}}}
             </div>
            <div>
              <h4 class="font-medium text-foreground">•••• •••• •••• 4242</h4>
              <p class="text-sm text-muted-foreground">Expires 12/26</p>
            </div>
          </div>
          <div class="flex gap-2">
            <button class="px-3 py-1 text-sm border border-border rounded hover:bg-muted">Edit</button>
            <button class="px-3 py-1 text-sm text-destructive border border-destructive rounded hover:bg-destructive/10">Remove</button>
          </div>
        </div>
         <button class="w-full px-4 py-2 border border-dashed border-border text-muted-foreground rounded-md hover:bg-muted transition-colors">
{{{icon 'plus' class='w-4 h-4 mr-2'}}}
          Add Payment Method
         </button>
      </div>
    </div>

    <!-- Billing History -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <h3 class="text-lg font-medium text-foreground mb-4">Billing History</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between py-3 border-b border-border">
          <div>
            <p class="font-medium text-foreground">November 2024</p>
            <p class="text-sm text-muted-foreground">Pro Plan</p>
          </div>
          <div class="text-right">
            <p class="font-medium text-foreground">$29.99</p>
            <a href="#" class="text-primary hover:underline text-sm">Download</a>
          </div>
        </div>
        <div class="flex items-center justify-between py-3">
          <div>
            <p class="font-medium text-foreground">October 2024</p>
            <p class="text-sm text-muted-foreground">Pro Plan</p>
          </div>
          <div class="text-right">
            <p class="font-medium text-foreground">$29.99</p>
            <a href="#" class="text-primary hover:underline text-sm">Download</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>