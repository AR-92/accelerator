<!-- Social Post Page -->
<div class="min-h-screen bg-background">
<div id="social-post-main-content" class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Create Social Post</h1>
      <p class="text-base text-muted-foreground">Craft engaging social media content for your project.</p>
    </div>
  </div>

    <!-- Post Composer -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <form class="space-y-6">
        <div>
          <label for="platform" class="block text-sm font-medium text-foreground mb-2">Social Platform</label>
          <select id="platform" name="platform" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
            <option>Twitter</option>
            <option>LinkedIn</option>
            <option>Facebook</option>
            <option>Instagram</option>
          </select>
        </div>

        <div>
          <label for="content" class="block text-sm font-medium text-foreground mb-2">Post Content</label>
          <textarea id="content" name="content" rows="6" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Write your social media post..."></textarea>
          <p class="text-xs text-muted-foreground mt-1">280 characters remaining</p>
        </div>

        <div>
          <label for="image" class="block text-sm font-medium text-foreground mb-2">Add Image (Optional)</label>
          <input type="file" id="image" name="image" accept="image/*" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
        </div>

        <div class="flex items-center gap-4">
          <input type="checkbox" id="schedule" name="schedule" class="w-4 h-4 text-primary border-border rounded">
          <label for="schedule" class="text-sm font-medium text-foreground">Schedule for later</label>
        </div>

        <div id="schedule-options" class="hidden space-y-4">
          <div>
            <label for="date" class="block text-sm font-medium text-foreground mb-2">Date</label>
            <input type="date" id="date" name="date" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
          <div>
            <label for="time" class="block text-sm font-medium text-foreground mb-2">Time</label>
            <input type="time" id="time" name="time" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
        </div>

        <div class="flex gap-4">
          <button type="submit" class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
{{{icon 'send' class='w-4 h-4 mr-2')}}}
            Post Now
          </button>
          <button type="button" id="preview-btn" class="px-4 py-2 border border-border text-foreground rounded-md hover:bg-muted transition-colors">Preview</button>
        </div>
      </form>
    </div>

    <!-- Post Templates -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <h3 class="text-lg font-medium text-foreground mb-4">Post Templates</h3>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div class="p-4 border border-border rounded-lg cursor-pointer hover:bg-muted/50 transition-colors">
          <h4 class="font-medium text-foreground mb-2">Product Launch</h4>
          <p class="text-sm text-muted-foreground">Announce your new product or feature launch.</p>
        </div>
        <div class="p-4 border border-border rounded-lg cursor-pointer hover:bg-muted/50 transition-colors">
          <h4 class="font-medium text-foreground mb-2">Team Update</h4>
          <p class="text-sm text-muted-foreground">Share team milestones and achievements.</p>
        </div>
        <div class="p-4 border border-border rounded-lg cursor-pointer hover:bg-muted/50 transition-colors">
          <h4 class="font-medium text-foreground mb-2">Industry Insights</h4>
          <p class="text-sm text-muted-foreground">Share valuable industry knowledge and trends.</p>
        </div>
        <div class="p-4 border border-border rounded-lg cursor-pointer hover:bg-muted/50 transition-colors">
          <h4 class="font-medium text-foreground mb-2">Customer Success</h4>
          <p class="text-sm text-muted-foreground">Highlight customer testimonials and success stories.</p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>