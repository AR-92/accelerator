<!-- Add Expense Page -->
<div class="min-h-screen bg-background">
<div id="add-expense-main-content" class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Add Expense</h1>
      <p class="text-base text-muted-foreground">Track and categorize your business expenses.</p>
    </div>
  </div>

    <!-- Expense Form -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <form class="space-y-6">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <label for="description" class="block text-sm font-medium text-foreground mb-2">Description</label>
            <input type="text" id="description" name="description" required class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter expense description">
          </div>
          <div>
            <label for="amount" class="block text-sm font-medium text-foreground mb-2">Amount</label>
            <div class="relative">
              <span class="absolute left-3 top-2 text-muted-foreground">$</span>
              <input type="number" id="amount" name="amount" required step="0.01" class="w-full pl-8 pr-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="0.00">
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <label for="category" class="block text-sm font-medium text-foreground mb-2">Category</label>
            <select id="category" name="category" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
              <option>Office Supplies</option>
              <option>Marketing</option>
              <option>Travel</option>
              <option>Software</option>
              <option>Equipment</option>
              <option>Other</option>
            </select>
          </div>
          <div>
            <label for="date" class="block text-sm font-medium text-foreground mb-2">Date</label>
            <input type="date" id="date" name="date" required class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
        </div>

        <div>
          <label for="vendor" class="block text-sm font-medium text-foreground mb-2">Vendor/Supplier</label>
          <input type="text" id="vendor" name="vendor" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter vendor name">
        </div>

        <div>
          <label for="receipt" class="block text-sm font-medium text-foreground mb-2">Receipt Upload</label>
          <input type="file" id="receipt" name="receipt" accept="image/*,.pdf" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
          <p class="text-xs text-muted-foreground mt-1">Upload receipt image or PDF (max 5MB)</p>
        </div>

        <div>
          <label for="notes" class="block text-sm font-medium text-foreground mb-2">Notes (Optional)</label>
          <textarea id="notes" name="notes" rows="3" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Additional notes about this expense..."></textarea>
        </div>

        <div class="flex gap-4">
          <button type="submit" class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
{{{icon 'save' class='w-4 h-4 mr-2')}}}
            Save Expense
          </button>
          <button type="button" class="px-4 py-2 border border-border text-foreground rounded-md hover:bg-muted transition-colors">Cancel</button>
        </div>
      </form>
    </div>

    <!-- Recent Expenses -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <h3 class="text-lg font-medium text-foreground mb-4">Recent Expenses</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between py-3 border-b border-border">
          <div>
            <h4 class="font-medium text-foreground">Office Supplies</h4>
            <p class="text-sm text-muted-foreground">Staples • Dec 10, 2024</p>
          </div>
          <p class="font-medium text-foreground">$45.99</p>
        </div>
        <div class="flex items-center justify-between py-3 border-b border-border">
          <div>
            <h4 class="font-medium text-foreground">Software License</h4>
            <p class="text-sm text-muted-foreground">Adobe Creative Cloud • Dec 8, 2024</p>
          </div>
          <p class="font-medium text-foreground">$52.99</p>
        </div>
        <div class="flex items-center justify-between py-3">
          <div>
            <h4 class="font-medium text-foreground">Travel</h4>
            <p class="text-sm text-muted-foreground">Conference tickets • Dec 5, 2024</p>
          </div>
          <p class="font-medium text-foreground">$299.00</p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>