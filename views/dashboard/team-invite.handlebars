<!-- Team Invite Page -->
<div class="min-h-screen bg-background">
<div id="invite-main-content" class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
        <div class="flex flex-col gap-4 lg:gap-6">
  <div class="flex items-center justify-between">
    <div class="grid gap-1">
      <h1 class="font-heading text-2xl font-semibold text-foreground">Invite Team Member</h1>
      <p class="text-base text-muted-foreground">Send invitations to new team members.</p>
    </div>
  </div>

    <!-- Invite Form -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <form class="space-y-6">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <label for="firstName" class="block text-sm font-medium text-foreground mb-2">First Name</label>
            <input type="text" id="firstName" name="firstName" required class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter first name">
          </div>
          <div>
            <label for="lastName" class="block text-sm font-medium text-foreground mb-2">Last Name</label>
            <input type="text" id="lastName" name="lastName" required class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter last name">
          </div>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-foreground mb-2">Email Address</label>
          <input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Enter email address">
        </div>

        <div>
          <label for="role" class="block text-sm font-medium text-foreground mb-2">Role</label>
          <select id="role" name="role" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
            <option value="viewer">Viewer</option>
            <option value="editor">Editor</option>
            <option value="admin">Admin</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-foreground mb-2">Personal Message (Optional)</label>
          <textarea id="message" name="message" rows="3" class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Add a personal message to the invitation..."></textarea>
        </div>

        <div class="flex gap-4">
          <button type="submit" class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
{{{icon 'send' class='w-4 h-4 mr-2'}}}
            Send Invitation
          </button>
          <button type="button" class="px-4 py-2 border border-border text-foreground rounded-md hover:bg-muted transition-colors">Cancel</button>
        </div>
      </form>
    </div>

    <!-- Pending Invitations -->
    <div class="rounded-lg bg-card px-6 py-5 text-card-foreground">
      <h3 class="text-lg font-medium text-foreground mb-4">Pending Invitations</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between p-4 border border-border rounded-lg">
          <div>
            <h4 class="font-medium text-foreground">Sarah Miller</h4>
            <p class="text-sm text-muted-foreground">sarah.miller@example.com • Invited 2 days ago</p>
          </div>
          <div class="flex gap-2">
            <button class="px-3 py-1 text-sm border border-border rounded hover:bg-muted">Resend</button>
            <button class="px-3 py-1 text-sm text-destructive border border-destructive rounded hover:bg-destructive/10">Cancel</button>
          </div>
        </div>
        <div class="flex items-center justify-between p-4 border border-border rounded-lg">
          <div>
            <h4 class="font-medium text-foreground">Mike Johnson</h4>
            <p class="text-sm text-muted-foreground">mike.johnson@example.com • Invited 5 days ago</p>
          </div>
          <div class="flex gap-2">
            <button class="px-3 py-1 text-sm border border-border rounded hover:bg-muted">Resend</button>
            <button class="px-3 py-1 text-sm text-destructive border border-destructive rounded hover:bg-destructive/10">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>